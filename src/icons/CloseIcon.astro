---
import AstroIcon from './AstroIcon.astro';

/**
 * 关闭图标组件
 */
interface Props {
	/**
	 * 图标的大小
	 * @default "16px"
	 */
	size?: string;
	/**
	 * 图标的颜色
	 * @default "currentColor"
	 */
	color?: string;
	/**
	 * 自定义类名
	 */
	class?: string;
}

const { size = '16px', color = 'currentColor', class: className = '' } = Astro.props;
---

<AstroIcon name="close" size={size} color={color} class={className} />
