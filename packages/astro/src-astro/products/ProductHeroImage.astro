---
import '../../style.ts';
import { Image } from '../../index.ts';
import type { ImageSource } from '../image/image.ts';

export interface Props {
    src: ImageSource;
    alt: string;
}

const { src, alt } = Astro.props;
---

<div>
    <div
        class="cosy:w-full cosy:h-auto cosy:rounded-2xl cosy:shadow-2xl cosy:overflow-hidden">
        <Image
            src={src}
            alt={alt}
            width={800}
            height={600}
            class="cosy:w-full cosy:h-auto"
        />
    </div>
</div>
