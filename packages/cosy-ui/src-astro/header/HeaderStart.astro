---
/**
 * @component HeaderStart
 *
 * @description
 * HeaderStart 组件负责渲染 Header 的左侧区域，包括 logo 和左侧导航项。
 * 这是一个内部组件，通常由 Header 组件使用。
 *
 * @usage
 * ```astro
 * <HeaderStart
 *   logo={logo}
 *   logoHref={logoHref}
 *   navPosition={navPosition}
 *   navItems={navItems}
 *   activeLink={activeLink}
 *   linkHeightClass={linkHeightClass}
 * />
 * ```
 *
 * @props
 * - logo - logo 图片元数据
 * - logoHref - logo 链接地址
 * - navPosition - 导航位置
 * - navItems - 导航项数组
 * - activeLink - 当前激活的链接
 * - linkHeightClass - 链接高度类名
 */
import { LogoLink, type INavItem } from '../../index-astro';
import type { ImageSource } from 'index-astro';
import NavItems from './NavItems.astro';

export interface Props {
  logo: ImageSource;
  logoHref?: string;
  navPosition: 'start' | 'center' | 'end';
  navItems: INavItem[];
  activeLink: string;
  linkHeightClass: string;
}

const { logo, logoHref, navPosition, navItems, activeLink, linkHeightClass } =
  Astro.props;
---

<div class="cosy:navbar-start">
  <LogoLink src={logo} href={logoHref} />

  <!-- 桌面端左侧导航 -->
  {
    navPosition === 'start' && (
      <div class="cosy:hidden cosy:lg:flex">
        <NavItems
          navItems={navItems}
          activeLink={activeLink}
          linkHeightClass={linkHeightClass}
          gap={2}
        />
      </div>
    )
  }
  <slot />
</div>
