---

/**
 * @component FooterSection
 *
 * @description
 * FooterSection 组件用于在页脚中显示一组链接，通常用于导航、产品列表等。
 */

import { type IProduct, Link } from "../../index-astro";

interface Props {
	/**
	 * 区块标题
	 */
	title: string;

	/**
	 * 链接列表
	 */
	links: IProduct[];
}

const { title, links } = Astro.props;
---

<nav class="cosy:flex cosy:flex-col cosy:gap-2">
  <h6 class="cosy:footer-title">{title}</h6>
  <ul class="cosy:flex cosy:flex-col cosy:gap-2">
    {
      links.map((link) => (
        <li class="cosy:list-none">
          {link.href ? (
            <Link
              href={link.href}
              size="sm"
              ghost
              btn
              color="primary"
              target={link.external ? '_blank' : '_self'}
              variant="text">
              {link.name}
            </Link>
          ) : (
            <span class="cosy:opacity-50">{link.name}</span>
          )}
        </li>
      ))
    }
  </ul>
</nav>
