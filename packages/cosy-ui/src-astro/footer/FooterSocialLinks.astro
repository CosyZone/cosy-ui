---
/**
 * @component FooterSocialLinks
 * @description Footer 的社交媒体链接与二维码按钮子组件
 * @internal 供 FooterBrand 等内部组件复用
 */

import { Link, SocialIcon, Container } from "../../index-astro";
import type { ImageSource } from "../image/image";

export interface Props {
	/** 社交媒体链接 */
	socialLinks?: Array<{ url: string; platform: string; name: string }>;
	/** 微信二维码 */
	wechatQR?: ImageSource;
	/** WhatsApp 二维码 */
	whatsappQR?: ImageSource;
}

const { socialLinks = [], wechatQR, whatsappQR } = Astro.props as Props;
---

<Container
  rounded="lg"
  aria-label="社交媒体链接"
  flex="row"
  gap="sm"
  justify="center"
  padding="sm"
  width="full"
  class="cosy:mt-4">
  {
    socialLinks.map((link) => (
      <Link
        href={link.url}
        btn
        circle
        ghost
        size="sm"
        color="info"
        external
        rel="noopener noreferrer"
        aria-label={link.name}>
        <SocialIcon platform={link.platform} />
      </Link>
    ))
  }

  {
    wechatQR && (
      <Link
        href="#"
        btn
        circle
        ghost
        size="sm"
        color="info"
        hoverImage={wechatQR}
        hoverImageAlt="微信二维码">
        <SocialIcon platform="wechat" />
      </Link>
    )
  }

  {
    whatsappQR && (
      <Link
        href="#"
        btn
        circle
        ghost
        size="sm"
        color="info"
        hoverImage={whatsappQR}
        hoverImageAlt="WhatsApp 二维码">
        <SocialIcon platform="whatsapp" />
      </Link>
    )
  }
</Container>
