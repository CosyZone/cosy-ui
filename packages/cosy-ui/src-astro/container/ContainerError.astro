---



import { Alert, AlertFactory } from '../../index-astro';
import { cn } from '../../src/class';

interface Props {
    messages: string[];
}

const { messages } = Astro.props;

// 使用 class builder 构建各个部分的类名
const sectionClass = cn().w('full').mx('auto').build();

const ulClass = cn().listStyle('disc').pl(5).spaceY(1).build();

const liClass = cn().text('sm').build();

// 使用 AlertFactory 构建 Alert props
const alertProps = AlertFactory.warning()
    .withVariant('soft')
    .withClosable(false)
    .buildProps();
---

<section class={sectionClass} aria-label="container-error">
    <Alert {...alertProps}>
        <ul class={ulClass}>
            {messages.map((message) => <li class={liClass}>{message}</li>)}
        </ul>
    </Alert>
</section>
