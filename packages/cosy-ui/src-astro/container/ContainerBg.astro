---

import { cn } from '../../src/class';
import Image from '../image/Image.astro';
import type { ImageSource } from '../image/types';

export interface Props {
    backgroundImage?: ImageSource;
}

const { backgroundImage } = Astro.props as Props;

// 使用 class builder 构建背景图片类名
const bgImageClass = cn().z('-10').pointerEvents('none').build();
---

{
    backgroundImage && (
        <Image
            src={backgroundImage}
            alt=""
            layout="fill"
            objectFit="cover"
            asBackground
            class={bgImageClass}
        />
    )
}
