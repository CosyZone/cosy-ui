---
import AstroIcon from './AstroIcon.astro';

/**
 * 右箭头图标组件
 */
interface Props {
  /**
   * 图标的大小
   * @default "24px"
   */
  size?: string;
  /**
   * 图标的颜色
   * @default "currentColor"
   */
  color?: string;
  /**
   * 自定义类名
   */
  class?: string;
}

const {
  size = '24px',
  color = 'currentColor',
  class: className = '',
} = Astro.props;
---

<AstroIcon name="chevronRight" size={size} stroke={color} class={className} />
