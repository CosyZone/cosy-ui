---

import { getBasePlaceholderClasses } from '../../src/components/placeholder/class-all';
/**
 * @component PlaceHolder
 * @description 占位符组件，用于在布局中占用指定的空间，支持自定义宽度、高度、内边距和背景色
 * @usage
 * ```astro
 * <PlaceHolder width="md" height="lg" padding="md" background="base-200" border="sm">
 *   <p>内容</p>
 * </PlaceHolder>
 * ```
 * @props
 * @prop {BackgroundColor} [background] - 背景色类型，支持所有预设背景色和透明度变体
 * @prop {BorderSize} [border='none'] - 边框尺寸，可选值：none、sm、md、lg、xl
 * @prop {string} [class] - 自定义 CSS 类名，用于添加额外的样式
 * @prop {HeightSize} [height='md'] - 高度尺寸，可选值：none、xs、sm、md、lg、xl、2xl、3xl、4xl、5xl、6xl、full
 * @prop {boolean} [muted=false] - 是否使用柔和色背景
 * @prop {PaddingSize} [padding='none'] - 内边距大小，可选值：none、xs、sm、md、lg、xl
 * @prop {Size} [width='md'] - 宽度尺寸，可选值：none、xs、sm、md、lg、xl、2xl、3xl、4xl、5xl、6xl、full
 * @slots
 * @slot default - 占位符内容
 */
import type { PlaceHolderProps } from './types';

interface Props extends PlaceHolderProps {}

const {
    background,
    border = 'none',
    class: className = '',
    height = 'md',
    muted = false,
    padding = 'none',
    width = 'md',
} = Astro.props;

const combinedClass = getBasePlaceholderClasses({
    background,
    border,
    class: className,
    height,
    muted,
    padding,
    width,
});
---

<div class={combinedClass}>
    <slot />
</div>

<style>
    .placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.5rem;
    }
</style>
