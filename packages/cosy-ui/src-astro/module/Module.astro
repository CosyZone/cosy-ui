---
/**
 * @component Module
 *
 * @description
 * Module 组件用于展示包含图片、标题和描述的内容模块。
 * 适用于特性展示、产品介绍等场景。
 *
 * @usage
 * 基本用法：
 * ```astro
 * <Module
 *   title="模块标题"
 *   description="模块描述文本"
 *   image={moduleImage}
 * />
 * ```
 *
 * 在网格中使用：
 * ```astro
 * <div class="cosy:grid cosy:grid-cols-3 cosy:gap-8">
 *   <Module title="特性一" description="描述" image={image1} />
 *   <Module title="特性二" description="描述" image={image2} />
 *   <Module title="特性三" description="描述" image={image3} />
 * </div>
 * ```
 */

import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import "../../style.ts";

interface Props {
	/**
	 * 模块标题
	 */
	title: string;
	/**
	 * 模块描述
	 */
	description: string;
	/**
	 * 模块图片
	 */
	image: ImageMetadata;
	/**
	 * 自定义类名
	 */
	class?: string;
}

const { title, description, image, class: className = "" } = Astro.props;
---

<div
  class={`cosy:flex cosy:flex-col cosy:items-center cosy:gap-4 ${className}`}>
  <div class="cosy:w-48 cosy:h-48 cosy:relative">
    <Image
      src={image}
      alt={title}
      class="cosy:w-full cosy:h-full cosy:object-contain"
    />
  </div>
  <h3 class="cosy:text-xl cosy:font-semibold cosy:text-center">{title}</h3>
  <p class="cosy:text-base-content/70 cosy:text-center cosy:max-w-sm">
    {description}
  </p>
</div>
