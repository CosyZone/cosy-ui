---
/**
 * SocialMediaItem 组件用于显示社交媒体链接
 */

import "../../style.ts";
import SocialLink from "./SocialLink.astro";
import SocialLinks from "./SocialLinks.astro";
import {
	FacebookIcon,
	GithubIcon,
	LinkedinIcon,
	TwitterIcon,
	WechatIcon,
	WhatsappIcon,
} from "../icons";
import { getSocialLinkClass } from "./class";
import type { ContactProps } from "./props";

export interface SocialMediaItemProps {
	github?: string;
	twitter?: string;
	facebook?: string;
	linkedin?: string;
	wechatQR?: any;
	whatsappQR?: any;
}

const { github, twitter, facebook, linkedin, wechatQR, whatsappQR } =
	Astro.props as SocialMediaItemProps;

const socialLinkClass = getSocialLinkClass();
---

<SocialLinks>
    {
        github && (
            <SocialLink
                icon={GithubIcon}
                href={github}
                ariaLabel="GitHub"
                socialLinkClass={socialLinkClass}
            />
        )
    }
    {
        twitter && (
            <SocialLink
                icon={TwitterIcon}
                href={twitter}
                ariaLabel="Twitter"
                socialLinkClass={socialLinkClass}
            />
        )
    }
    {
        facebook && (
            <SocialLink
                icon={FacebookIcon}
                href={facebook}
                ariaLabel="Facebook"
                socialLinkClass={socialLinkClass}
            />
        )
    }
    {
        linkedin && (
            <SocialLink
                icon={LinkedinIcon}
                href={linkedin}
                ariaLabel="LinkedIn"
                socialLinkClass={socialLinkClass}
            />
        )
    }
    {
        wechatQR && (
            <SocialLink
                icon={WechatIcon}
                href="#"
                ariaLabel="微信"
                hoverImage={wechatQR}
                hoverImageAlt="微信二维码"
                socialLinkClass={socialLinkClass}
            />
        )
    }
    {
        whatsappQR && (
            <SocialLink
                icon={WhatsappIcon}
                href="#"
                ariaLabel="WhatsApp"
                hoverImage={whatsappQR}
                hoverImageAlt="WhatsApp 二维码"
                socialLinkClass={socialLinkClass}
            />
        )
    }
</SocialLinks>
