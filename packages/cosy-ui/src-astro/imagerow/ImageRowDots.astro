---
/**
 * @component ImageRowDots
 * @description ImageRow 组件底部点指示器
 */
interface Props {
  totalImages: number;
  class?: string;
}

const { totalImages, class: className = '' } = Astro.props;
---

<div class={`image-row-dots ${className}`}>
  {
    Array.from({ length: totalImages }, (_, index) => (
      <button
        class="image-row-dot"
        data-index={index}
        onclick="window.scrollToImage(this, event)"
        aria-label={`跳转到第 ${index + 1} 张图片`}
      />
    ))
  }
</div>

<script>
  // 声明全局函数类型
  declare global {
    interface Window {
      scrollToImage: (button: HTMLElement, event: Event) => void;
    }
  }

  // 点击点指示器跳转到指定图片
  window.scrollToImage = function (button: HTMLElement, event: Event) {
    event.preventDefault();

    // 从点指示器向上查找，找到包含 .image-row-wrapper 的容器
    let currentElement = button.parentElement;
    let container: HTMLElement | null = null;

    while (currentElement && !container) {
      const wrapper = currentElement.querySelector('.image-row-wrapper');
      if (wrapper) {
        container = wrapper.querySelector(
          '.image-row-container'
        ) as HTMLElement;
        break;
      }
      currentElement = currentElement.parentElement;
    }

    if (!container) return;

    const imageIndex = parseInt(button.getAttribute('data-index') || '0');
    const imageWidth = 200; // 图片宽度 + 间距
    const scrollPosition = imageIndex * imageWidth;

    container.scrollTo({
      left: scrollPosition,
      behavior: 'smooth',
    });
  };
</script>

<style>
  /* 点指示器样式 */
  .image-row-dots {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin-top: 16px;
    padding: 0 16px;
  }

  .image-row-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    border: none;
    background-color: rgba(0, 0, 0, 0.3);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .image-row-dot:hover {
    background-color: rgba(0, 0, 0, 0.5);
    transform: scale(1.2);
  }

  .image-row-dot.active {
    background-color: rgba(0, 0, 0, 0.8);
    transform: scale(1.3);
  }
</style>
