---



/**
 * @component RowItem
 * @description ImageRow 内部单个图片项
 */
import Image from "../image/Image.astro";
import type { IImageItem } from "./types";

interface IRowItemProps {
	image: IImageItem;
	rounded?: import("../../src/common").RoundedSize;
	shadow?: import("../../src/common").ShadowSize;
	hover?: import("../../src/common").HoverEffect;
}

const {
	image,
	rounded = "md",
	shadow = "md",
	hover = "scale",
} = Astro.props as IRowItemProps;
---

<div
  class="image-row-item cosy:relative cosy:overflow-hidden cosy:flex-none cosy:h-full cosy:aspect-square cosy:w-auto">
  <Image
    src={image.src}
    alt={image.alt}
    width={image.width}
    height={image.height}
    loading={image.loading || 'lazy'}
    rounded={rounded}
    shadow={shadow}
    preview={true}
    hover={hover}
    objectFit="cover"
    class="cosy:w-full cosy:h-full"
  />
  {
    image.caption && (
      <div class="image-row-caption cosy:absolute cosy:inset-x-0 cosy:bottom-0 cosy:bg-gradient-to-t cosy:from-black/70 cosy:to-transparent cosy:px-2 cosy:py-2 cosy:text-white">
        <p class="cosy:text-sm cosy:text-white cosy:m-0 cosy:text-center">
          {image.caption}
        </p>
      </div>
    )
  }
</div>
