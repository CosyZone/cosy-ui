---
/**
 * @component PrevButton
 * @description ImageRow 内部左侧导航按钮
 */
import Button from '../button/Button.astro';
import ChevronLeftIcon from '../icons/ChevronLeftIcon.astro';

interface IPrevButtonProps {
  disabled?: boolean;
}

const { disabled = true } = Astro.props as IPrevButtonProps;
---

<Button
  shape="circle"
  size="sm"
  variant="ghost"
  class="image-row-nav-btn image-row-nav-prev"
  onClick="window.scrollImageRow(this, 'prev')"
  disabled={disabled}>
  <ChevronLeftIcon size="20px" slot="icon-left" />
  <span class="cosy:sr-only">上一张图片</span>
</Button>
