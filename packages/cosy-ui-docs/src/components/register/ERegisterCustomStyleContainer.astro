---
import { CodeContainer } from '@coffic/cosy-ui';
import ERegisterCustomStyle from './ERegisterCustomStyle.astro';

const code = `---
import { Register } from '@coffic/cosy-ui';
import { getAvatarImage } from '../../../../cosy-ui/src-astro/utils/image';

const logoUrl = getAvatarImage({
  width: 100,
  height: 100,
  provider: 'robohash',
  tag: 'company-logo'
});
---

<Register
  title="企业注册"
  subtitle="创建企业账号"
  logo={logoUrl}
  socialLogins={['github', 'google', 'wechat']}
  showTerms={true}
  showPrivacy={true}
  customClass="cosy:bg-gradient-to-r cosy:from-purple-500 cosy:to-pink-500"
>
  <div slot="footer" class="cosy:text-center cosy:mt-4 cosy:text-sm cosy:text-base-content/60">
    已有账号？ <a href="#" class="cosy:text-primary cosy:hover:text-primary-focus">立即登录</a>
  </div>
</Register>`;
---

<CodeContainer codes={[code]}>
  <div id="tab-1">
    <ERegisterCustomStyle />
  </div>
</CodeContainer>

