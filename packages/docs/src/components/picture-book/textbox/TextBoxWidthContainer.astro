---
import { CodeContainer } from "@coffic/cosy-ui";
import W40 from "./TextBoxWidth40.astro";
import W70 from "./TextBoxWidth70.astro";

import W40Code from "./TextBoxWidth40.astro?raw";
import W70Code from "./TextBoxWidth70.astro?raw";
---

<CodeContainer codes={[W40Code, W70Code]} titles={['40%', '70%']}>
  <div id="tab-1" style="width: 30%;margin: 0 auto">
    <W40 />
  </div>
  <div id="tab-2" style="width: 30%;margin: 0 auto">
    <W70 />
  </div>
</CodeContainer>
