---
import { CodeContainer } from "@coffic/cosy-ui";
import PhotoWallVueBackgroundNone from "./PhotoWallVueBackgroundNone.vue";
import PhotoWallVueBackgroundPrimary from "./PhotoWallVueBackgroundPrimary.vue";
import PhotoWallVueBackgroundSecondary from "./PhotoWallVueBackgroundSecondary.vue";
import PhotoWallVueBackgroundAccent from "./PhotoWallVueBackgroundAccent.vue";

const NoneExampleSourceCode = `
<PhotoWall :photos="photoWallPhotos" />
`;

const PrimaryExampleSourceCode = `
<PhotoWall :photos="photoWallPhotos" background="primary" />
`;

const SecondaryExampleSourceCode = `
<PhotoWall :photos="photoWallPhotos" background="secondary" />
`;

const AccentExampleSourceCode = `
<PhotoWall :photos="photoWallPhotos" background="accent" />
`;
---

<CodeContainer
  codes={[
    NoneExampleSourceCode,
    PrimaryExampleSourceCode,
    SecondaryExampleSourceCode,
    AccentExampleSourceCode,
  ]}
  titles={['none', 'primary', 'secondary', 'accent']}>
  <div id="tab-1">
    <PhotoWallVueBackgroundNone />
  </div>
  <div id="tab-2">
    <PhotoWallVueBackgroundPrimary />
  </div>
  <div id="tab-3">
    <PhotoWallVueBackgroundSecondary />
  </div>
  <div id="tab-4">
    <PhotoWallVueBackgroundAccent />
  </div>
</CodeContainer>
