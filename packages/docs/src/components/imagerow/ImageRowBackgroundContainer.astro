---
/**
 * @component ImageRowBackgroundContainer
 * @description ImageRow 组件背景色示例容器
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ImageRowBackgroundPrimary from "./ImageRowBackgroundPrimary.astro";
import ImageRowBackgroundSecondary from "./ImageRowBackgroundSecondary.astro";
import ImageRowBackgroundSuccess from "./ImageRowBackgroundSuccess.astro";
import ImageRowBackgroundWarning from "./ImageRowBackgroundWarning.astro";
import ImageRowBackgroundPrimarySourceCode from "./ImageRowBackgroundPrimary.astro?raw";
import ImageRowBackgroundSecondarySourceCode from "./ImageRowBackgroundSecondary.astro?raw";
import ImageRowBackgroundSuccessSourceCode from "./ImageRowBackgroundSuccess.astro?raw";
import ImageRowBackgroundWarningSourceCode from "./ImageRowBackgroundWarning.astro?raw";
---

<CodeContainer
  codes={[
    ImageRowBackgroundPrimarySourceCode,
    ImageRowBackgroundSecondarySourceCode,
    ImageRowBackgroundSuccessSourceCode,
    ImageRowBackgroundWarningSourceCode,
  ]}
  titles={['主色背景', '次色背景', '成功色背景', '警告色背景']}>
  <div id="tab-1">
    <ImageRowBackgroundPrimary />
  </div>
  <div id="tab-2">
    <ImageRowBackgroundSecondary />
  </div>
  <div id="tab-3">
    <ImageRowBackgroundSuccess />
  </div>
  <div id="tab-4">
    <ImageRowBackgroundWarning />
  </div>
</CodeContainer>
