---
/**
 * @component ImageRowShadow
 * @description ImageRow 组件阴影效果示例
 */
import { ImageRow, getProductImage } from "@coffic/cosy-ui";

const images = [
	{
		src: getProductImage({ width: 200, height: 200, tags: [shadow1] }),
		alt: "阴影图片 1",
	},
	{
		src: getProductImage({ width: 200, height: 200, tags: [shadow2] }),
		alt: "阴影图片 2",
	},
	{
		src: getProductImage({ width: 200, height: 200, tags: [shadow3] }),
		alt: "阴影图片 3",
	},
];
---

<div style="display: flex; flex-direction: column; gap: 2rem;">
  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">无阴影</h4>
    <ImageRow images={images} layout="grid" columns={3} shadow="none" gap="sm" />
  </div>

  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">小阴影</h4>
    <ImageRow images={images} layout="grid" columns={3} shadow="sm" gap="sm" />
  </div>

  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">中等阴影</h4>
    <ImageRow images={images} layout="grid" columns={3} shadow="md" gap="sm" />
  </div>

  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">大阴影</h4>
    <ImageRow images={images} layout="grid" columns={3} shadow="xl" gap="sm" />
  </div>
</div>
