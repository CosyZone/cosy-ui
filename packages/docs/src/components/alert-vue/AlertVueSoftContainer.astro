---
/**
 * @component AlertVueSoftContainer
 * @description 展示 AlertVue 组件 soft 柔和风格的示例
 */
import { CodeContainer } from "@coffic/cosy-ui";
import AlertVueSoftInfo from "./AlertVueSoftInfo.vue";
import AlertVueSoftSuccess from "./AlertVueSoftSuccess.vue";
import AlertVueSoftWarning from "./AlertVueSoftWarning.vue";
import AlertVueSoftError from "./AlertVueSoftError.vue";
import AlertVueSoftInfoCode from "./AlertVueSoftInfo.vue?raw";
import AlertVueSoftSuccessCode from "./AlertVueSoftSuccess.vue?raw";
import AlertVueSoftWarningCode from "./AlertVueSoftWarning.vue?raw";
import AlertVueSoftErrorCode from "./AlertVueSoftError.vue?raw";
---

<CodeContainer
    codes={[
        AlertVueSoftInfoCode,
        AlertVueSoftSuccessCode,
        AlertVueSoftWarningCode,
        AlertVueSoftErrorCode,
    ]}
    titles={['Info', 'Success', 'Warning', 'Error']}>
    <div id="tab-1">
        <AlertVueSoftInfo client:load />
    </div>
    <div id="tab-2">
        <AlertVueSoftSuccess client:load />
    </div>
    <div id="tab-3">
        <AlertVueSoftWarning client:load />
    </div>
    <div id="tab-4">
        <AlertVueSoftError client:load />
    </div>
</CodeContainer>
