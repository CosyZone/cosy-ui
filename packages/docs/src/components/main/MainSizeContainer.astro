---
/**
 * @component MainSizeContainer
 * @description Main 组件容器尺寸演示容器，展示源码和效果
 */
import { CodeContainer } from "@coffic/cosy-ui";
import MainSize from "./MainSize.astro";
import MainSizeMd from "./MainSizeMd.astro";
import MainSizeLg from "./MainSizeLg.astro";
import MainSizeXl from "./MainSizeXl.astro";
import MainSizeFull from "./MainSizeFull.astro";

import MainSizeSource from "./MainSize.astro?raw";
import MainSizeMdSource from "./MainSizeMd.astro?raw";
import MainSizeLgSource from "./MainSizeLg.astro?raw";
import MainSizeXlSource from "./MainSizeXl.astro?raw";
import MainSizeFullSource from "./MainSizeFull.astro?raw";
---

<CodeContainer
  codes={[
    MainSizeSource,
    MainSizeMdSource,
    MainSizeLgSource,
    MainSizeXlSource,
    MainSizeFullSource,
  ]}
  titles={['sm', 'md', 'lg', 'xl', 'full']}>
  <div id="tab-1">
    <MainSize />
  </div>
  <div id="tab-2">
    <MainSizeMd />
  </div>
  <div id="tab-3">
    <MainSizeLg />
  </div>
  <div id="tab-4">
    <MainSizeXl />
  </div>
  <div id="tab-5">
    <MainSizeFull />
  </div>
</CodeContainer>
