---
/**
 * @component ButtonStatesContainer
 * @description Button 状态示例容器组件
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ButtonNormalState from "./ButtonNormalState.astro";
import ButtonDisabledState from "./ButtonDisabledState.astro";
import ButtonLoadingState from "./ButtonLoadingState.astro";
import ButtonNormalStateSourceCode from "./ButtonNormalState.astro?raw";
import ButtonDisabledStateSourceCode from "./ButtonDisabledState.astro?raw";
import ButtonLoadingStateSourceCode from "./ButtonLoadingState.astro?raw";
---

<CodeContainer
    codes={[
        ButtonNormalStateSourceCode,
        ButtonDisabledStateSourceCode,
        ButtonLoadingStateSourceCode,
    ]}
    titles={['正常状态', '禁用状态', '加载状态']}>
    <div id="tab-1">
        <ButtonNormalState />
    </div>
    <div id="tab-2">
        <ButtonDisabledState />
    </div>
    <div id="tab-3">
        <ButtonLoadingState />
    </div>
</CodeContainer>
