---
/**
 * @component ButtonTypesContainer
 * @description Button 类型示例容器组件
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ButtonTypeButton from "./ButtonTypeButton.astro";
import ButtonTypeSubmit from "./ButtonTypeSubmit.astro";
import ButtonTypeReset from "./ButtonTypeReset.astro";
import ButtonTypeButtonSourceCode from "./ButtonTypeButton.astro?raw";
import ButtonTypeSubmitSourceCode from "./ButtonTypeSubmit.astro?raw";
import ButtonTypeResetSourceCode from "./ButtonTypeReset.astro?raw";
---

<CodeContainer
    codes={[
        ButtonTypeButtonSourceCode,
        ButtonTypeSubmitSourceCode,
        ButtonTypeResetSourceCode,
    ]}
    titles={['button', 'submit', 'reset']}>
    <div id="tab-1">
        <ButtonTypeButton />
    </div>
    <div id="tab-2">
        <ButtonTypeSubmit />
    </div>
    <div id="tab-3">
        <ButtonTypeReset />
    </div>
</CodeContainer>
