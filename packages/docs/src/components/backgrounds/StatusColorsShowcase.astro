---
import { Grid, PlaceHolder, Text } from "@coffic/cosy-ui";
---

<Grid cols={{ base: 2, md: 4 }} gap="md" marginY="md">
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="success"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >success</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="warning"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >warning</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="error"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >error</Text
        >
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="info" border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >info</Text
        >
    </PlaceHolder>
</Grid>
