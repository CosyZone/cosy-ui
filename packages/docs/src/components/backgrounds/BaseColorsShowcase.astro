---
import { Grid, PlaceHolder, Text } from "@coffic/cosy-ui";
---

<Grid cols={{ base: 2, md: 3 }} gap="md" marginY="md">
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="base-100"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >base-100</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="base-200"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >base-200</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="base-300"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >base-300</Text
        >
    </PlaceHolder>
</Grid>
