---
/**
 * @component ImageShadowContainer
 * @description Image 组件阴影属性演示容器，展示源码和效果
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ImageShadowNone from "./ImageShadowNone.astro";
import ImageShadowNoneSource from "./ImageShadowNone.astro?raw";
import ImageShadowSmall from "./ImageShadowSmall.astro";
import ImageShadowSmallSource from "./ImageShadowSmall.astro?raw";
import ImageShadowMedium from "./ImageShadowMedium.astro";
import ImageShadowMediumSource from "./ImageShadowMedium.astro?raw";
import ImageShadowLarge from "./ImageShadowLarge.astro";
import ImageShadowLargeSource from "./ImageShadowLarge.astro?raw";
import ImageShadowXl from "./ImageShadowXl.astro";
import ImageShadowXlSource from "./ImageShadowXl.astro?raw";
import ImageShadow2xl from "./ImageShadow2xl.astro";
import ImageShadow2xlSource from "./ImageShadow2xl.astro?raw";
---

<CodeContainer
  codes={[
    ImageShadowNoneSource,
    ImageShadowSmallSource,
    ImageShadowMediumSource,
    ImageShadowLargeSource,
    ImageShadowXlSource,
    ImageShadow2xlSource,
  ]}
  titles={['none', 'sm', 'md', 'lg', 'xl', '2xl']}>
  <div id="tab-1">
    <ImageShadowNone />
  </div>
  <div id="tab-2">
    <ImageShadowSmall />
  </div>
  <div id="tab-3">
    <ImageShadowMedium />
  </div>
  <div id="tab-4">
    <ImageShadowLarge />
  </div>
  <div id="tab-5">
    <ImageShadowXl />
  </div>
  <div id="tab-6">
    <ImageShadow2xl />
  </div>
</CodeContainer>
