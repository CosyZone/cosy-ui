---
/**
 * @component ButtonClassContainer
 * @description 展示 Button 组件的 class 属性用法，Astro/Vue 各自独立标签展示。
 */
import { CodeContainer } from '@coffic/cosy-ui';
import ButtonClassCustom from './ButtonClassCustom.astro';
import ButtonClassCustomRaw from './ButtonClassCustom.astro?raw';
import ButtonClassCustomVue from './ButtonClassCustomVue.vue';
import ButtonClassCustomVueRaw from './ButtonClassCustomVue.vue?raw';
import ButtonClassDefault from './ButtonClassDefault.astro';
import ButtonClassDefaultRaw from './ButtonClassDefault.astro?raw';
import ButtonClassDefaultVue from './ButtonClassDefaultVue.vue';
import ButtonClassDefaultVueRaw from './ButtonClassDefaultVue.vue?raw';
---

<CodeContainer
	codes={[
		ButtonClassDefaultRaw,
		ButtonClassCustomRaw,
		ButtonClassDefaultVueRaw,
		ButtonClassCustomVueRaw,
	]}
	titles={['default', 'custom', 'default', 'custom']}
>
	<div id="tab-1" data-label="astro"><ButtonClassDefault /></div>
	<div id="tab-2" data-label="astro"><ButtonClassCustom /></div>
	<div id="tab-3" data-label="vue"><ButtonClassDefaultVue /></div>
	<div id="tab-4" data-label="vue"><ButtonClassCustomVue /></div>
</CodeContainer>
