---
import { CodeContainer } from '@coffic/cosy-ui';
import ProductHeroItemBackgroundColorDefault from './ProductHeroItemBackgroundColorDefault.astro';
import ProductHeroItemBackgroundColorGray from './ProductHeroItemBackgroundColorGray.astro';
import ProductHeroItemBackgroundColorBlue from './ProductHeroItemBackgroundColorBlue.astro';
import sourceDefault from './ProductHeroItemBackgroundColorDefault.astro?raw';
import sourceGray from './ProductHeroItemBackgroundColorGray.astro?raw';
import sourceBlue from './ProductHeroItemBackgroundColorBlue.astro?raw';
---

<CodeContainer
  codes={[sourceDefault, sourceGray, sourceBlue]}
  titles={['默认', '灰色', '蓝色']}>
  <div id="tab-1">
    <ProductHeroItemBackgroundColorDefault />
  </div>
  <div id="tab-2">
    <ProductHeroItemBackgroundColorGray />
  </div>
  <div id="tab-3">
    <ProductHeroItemBackgroundColorBlue />
  </div>
</CodeContainer>
