---
import { CodeContainer } from '@coffic/cosy-ui';
import ProductHeroItemBackgroundDefault from './ProductHeroItemBackgroundDefault.astro';
import ProductHeroItemBackgroundGray from './ProductHeroItemBackgroundGray.astro';
import ProductHeroItemBackgroundBlue from './ProductHeroItemBackgroundBlue.astro';
import sourceDefault from './ProductHeroItemBackgroundDefault.astro?raw';
import sourceGray from './ProductHeroItemBackgroundGray.astro?raw';
import sourceBlue from './ProductHeroItemBackgroundBlue.astro?raw';
---

<CodeContainer
  codes={[sourceDefault, sourceGray, sourceBlue]}
  titles={['默认', '灰色', '蓝色']}>
  <div id="tab-1">
    <ProductHeroItemBackgroundDefault />
  </div>
  <div id="tab-2">
    <ProductHeroItemBackgroundGray />
  </div>
  <div id="tab-3">
    <ProductHeroItemBackgroundBlue />
  </div>
</CodeContainer>
