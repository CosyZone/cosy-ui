---
import {
  ProductHeroItem,
  getProductImage,
  CodeContainer,
} from '@coffic/cosy-ui';
import ProductHeroItemLearnMoreTextDefault from './ProductHeroItemLearnMoreTextDefault.astro';
import ProductHeroItemLearnMoreTextCustom from './ProductHeroItemLearnMoreTextCustom.astro';
import ProductHeroItemLearnMoreTextEnglish from './ProductHeroItemLearnMoreTextEnglish.astro';
import sourceDefault from './ProductHeroItemLearnMoreTextDefault.astro?raw';
import sourceCustom from './ProductHeroItemLearnMoreTextCustom.astro?raw';
import sourceEnglish from './ProductHeroItemLearnMoreTextEnglish.astro?raw';
---

<CodeContainer
  codes={[sourceDefault, sourceCustom, sourceEnglish]}
  titles={['默认文本', '自定义文本', '英文文本']}>
  <div id="tab-1">
    <ProductHeroItemLearnMoreTextDefault />
  </div>
  <div id="tab-2">
    <ProductHeroItemLearnMoreTextCustom />
  </div>
  <div id="tab-3">
    <ProductHeroItemLearnMoreTextEnglish />
  </div>
</CodeContainer>
