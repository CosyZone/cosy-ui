---
import { ProductHeroItem, getProductImage } from '@coffic/cosy-ui';

const handleBuyNow = () => {
  console.log('购买产品: 极简手机');
  alert('正在购买 极简手机，价格：¥6,999');
};
---

<ProductHeroItem
  name="极简手机"
  description="纯净体验，回归本质"
  image={getProductImage({
    width: 800,
    height: 600,
    tag: 'minimal-phone',
    provider: 'picsum',
  })}
  price="¥6,999"
  isNew={true}
  buyNowText="立即购买"
  learnMoreText="了解更多"
  newLabelText="新品"
  onBuyNow={handleBuyNow}
/>
