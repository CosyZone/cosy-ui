---
import { ProductHeroItem, getProductImage } from '@coffic/cosy-ui';

const handleLearnMore = () => {
  console.log('了解更多产品: 极简手机');
  alert('正在查看 极简手机 的详细信息');
};
---

<div class="cosy:space-y-4">
  <div>
    <h3 class="cosy:text-lg cosy:font-semibold cosy:mb-2">
      了解更多按钮点击事件
    </h3>
    <ProductHeroItem
      name="极简手机"
      description="纯净体验，回归本质"
      image={getProductImage({
        width: 800,
        height: 600,
        tag: 'minimal-phone',
        provider: 'picsum',
      })}
      price="¥6,999"
      isNew={true}
      buyNowText="立即购买"
      learnMoreText="了解更多"
      newLabelText="新品"
      onLearnMore={handleLearnMore}
    />
  </div>
</div>
