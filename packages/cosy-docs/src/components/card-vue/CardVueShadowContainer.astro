        <CardVueShadowNone />
    </div>
    <div id="tab-2">
        <CardVueShadowSm />
    </div>
    <div id="tab-3">
        <CardVueShadowMd />
    </div>
    <div id="tab-4">
        <CardVueShadowLg />
    </div>
    <div id="tab-5">
        <CardVueShadowXl />
    </div>
    <div id="tab-6">
        <CardVueShadow2xl />
    </div>
</CodeContainer>
