---

import { CodeContainer } from "@coffic/cosy-ui";
import BackgroundBlue from "./BackgroundBlue.astro";
import BackgroundBlueSourceCode from "./BackgroundBlue.astro?raw";
// 组件导入
import BackgroundNone from "./BackgroundNone.astro";
// 源码导入
import BackgroundNoneSourceCode from "./BackgroundNone.astro?raw";
import BackgroundPurple from "./BackgroundPurple.astro";
import BackgroundPurpleSourceCode from "./BackgroundPurple.astro?raw";
---

<CodeContainer
  codes={[
    BackgroundNoneSourceCode,
    BackgroundBlueSourceCode,
    BackgroundPurpleSourceCode,
  ]}
  titles={['none', 'info/20', 'accent/20']}>
  <div id="tab-1">
    <BackgroundNone />
  </div>
  <div id="tab-2">
    <BackgroundBlue />
  </div>
  <div id="tab-3">
    <BackgroundPurple />
  </div>
</CodeContainer>
