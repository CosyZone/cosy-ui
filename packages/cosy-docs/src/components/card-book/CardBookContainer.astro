---
import { CodeContainer } from '@coffic/cosy-ui';
import CardBookBasic from './CardBookBasic.astro';
import CardBookCover from './CardBookCover.astro';
import CardBookSizes from './CardBookSizes.astro';
import CardBookShadow from './CardBookShadow.astro';
import CardBookDescription from './CardBookDescription.astro';
import CardBookHref from './CardBookHref.astro';
import CardBookClass from './CardBookClass.astro';

import CardBookBasicSource from './CardBookBasic.astro?raw';
import CardBookCoverSource from './CardBookCover.astro?raw';
import CardBookSizesSource from './CardBookSizes.astro?raw';
import CardBookShadowSource from './CardBookShadow.astro?raw';
import CardBookDescriptionSource from './CardBookDescription.astro?raw';
import CardBookHrefSource from './CardBookHref.astro?raw';
import CardBookClassSource from './CardBookClass.astro?raw';
---

<CodeContainer
  codes={[
    CardBookBasicSource,
    CardBookCoverSource,
    CardBookSizesSource,
    CardBookShadowSource,
    CardBookDescriptionSource,
    CardBookHrefSource,
    CardBookClassSource,
  ]}
  titles={['基础用法', '带封面', '尺寸', '阴影', '描述', '链接', '自定义样式']}>
  <div id="tab-1">
    <CardBookBasic />
  </div>
  <div id="tab-2">
    <CardBookCover />
  </div>
  <div id="tab-3">
    <CardBookSizes />
  </div>
  <div id="tab-4">
    <CardBookShadow />
  </div>
  <div id="tab-5">
    <CardBookDescription />
  </div>
  <div id="tab-6">
    <CardBookHref />
  </div>
  <div id="tab-7">
    <CardBookClass />
  </div>
</CodeContainer>
