---
import { CodeContainer } from "@coffic/cosy-ui";
import CardBookShadowNone from "./CardBookShadowNone.astro";
import CardBookShadowSm from "./CardBookShadowSm.astro";
import CardBookShadowMd from "./CardBookShadowMd.astro";
import CardBookShadowLg from "./CardBookShadowLg.astro";
import CardBookShadowXl from "./CardBookShadowXl.astro";

import CardBookShadowNoneSource from "./CardBookShadowNone.astro?raw";
import CardBookShadowSmSource from "./CardBookShadowSm.astro?raw";
import CardBookShadowMdSource from "./CardBookShadowMd.astro?raw";
import CardBookShadowLgSource from "./CardBookShadowLg.astro?raw";
import CardBookShadowXlSource from "./CardBookShadowXl.astro?raw";
---

<CodeContainer
  codes={[
    CardBookShadowNoneSource,
    CardBookShadowSmSource,
    CardBookShadowMdSource,
    CardBookShadowLgSource,
    CardBookShadowXlSource,
  ]}
  titles={['none', 'sm', 'md', 'lg', 'xl']}>
  <div id="tab-1">
    <CardBookShadowNone />
  </div>
  <div id="tab-2">
    <CardBookShadowSm />
  </div>
  <div id="tab-3">
    <CardBookShadowMd />
  </div>
  <div id="tab-4">
    <CardBookShadowLg />
  </div>
  <div id="tab-5">
    <CardBookShadowXl />
  </div>
</CodeContainer>
