---
import { CodeContainer } from '@coffic/cosy-ui';
import CardBookCover from './CardBookCover.astro';
import CardBookCoverNone from './CardBookCoverNone.astro';
import CardBookCoverLocal from './CardBookCoverLocal.astro';

import CardBookCoverSource from './CardBookCover.astro?raw';
import CardBookCoverNoneSource from './CardBookCoverNone.astro?raw';
import CardBookCoverLocalSource from './CardBookCoverLocal.astro?raw';
---

<CodeContainer
  codes={[
    CardBookCoverSource,
    CardBookCoverLocalSource,
    CardBookCoverNoneSource,
  ]}
  titles={['远程图片', '本地图片', '无封面']}>
  <div id="tab-1">
    <CardBookCover />
  </div>
  <div id="tab-2">
    <CardBookCoverLocal />
  </div>
  <div id="tab-3">
    <CardBookCoverNone />
  </div>
</CodeContainer>
