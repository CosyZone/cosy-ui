---

import { CodeContainer } from "@coffic/cosy-ui";
import BgAccent from "./TextBoxBgAccent.astro";
import BgAccentCode from "./TextBoxBgAccent.astro?raw";
import BgError from "./TextBoxBgError.astro";
import BgErrorCode from "./TextBoxBgError.astro?raw";
import BgInfo from "./TextBoxBgInfo.astro";
import BgInfoCode from "./TextBoxBgInfo.astro?raw";
import BgMuted from "./TextBoxBgMuted.astro";
import BgMutedCode from "./TextBoxBgMuted.astro?raw";
import BgNone from "./TextBoxBgNone.astro";
import BgNoneCode from "./TextBoxBgNone.astro?raw";
import BgPaper from "./TextBoxBgPaper.astro";
import BgPaperCode from "./TextBoxBgPaper.astro?raw";
import BgPrimary from "./TextBoxBgPrimary.astro";
import BgPrimaryCode from "./TextBoxBgPrimary.astro?raw";
import BgSecondary from "./TextBoxBgSecondary.astro";
import BgSecondaryCode from "./TextBoxBgSecondary.astro?raw";
import BgSuccess from "./TextBoxBgSuccess.astro";
import BgSuccessCode from "./TextBoxBgSuccess.astro?raw";
import BgWarning from "./TextBoxBgWarning.astro";
import BgWarningCode from "./TextBoxBgWarning.astro?raw";
---

<CodeContainer
    codes={[
        BgNoneCode,
        BgPaperCode,
        BgMutedCode,
        BgPrimaryCode,
        BgSecondaryCode,
        BgAccentCode,
        BgInfoCode,
        BgSuccessCode,
        BgWarningCode,
        BgErrorCode,
    ]}
    titles={[
        'none',
        'base-100/80',
        'base-200/70',
        'primary',
        'secondary',
        'accent',
        'info',
        'success',
        'warning',
        'error',
    ]}>
    <div id="tab-1" style="width: 30%;margin: 0 auto">
        <BgNone />
    </div>
    <div id="tab-2" style="width: 30%;margin: 0 auto">
        <BgPaper />
    </div>
    <div id="tab-3" style="width: 30%;margin: 0 auto">
        <BgMuted />
    </div>
    <div id="tab-4" style="width: 30%;margin: 0 auto">
        <BgPrimary />
    </div>
    <div id="tab-5" style="width: 30%;margin: 0 auto">
        <BgSecondary />
    </div>
    <div id="tab-6" style="width: 30%;margin: 0 auto">
        <BgAccent />
    </div>
    <div id="tab-7" style="width: 30%;margin: 0 auto">
        <BgInfo />
    </div>
    <div id="tab-8" style="width: 30%;margin: 0 auto">
        <BgSuccess />
    </div>
    <div id="tab-9" style="width: 30%;margin: 0 auto">
        <BgWarning />
    </div>
    <div id="tab-10" style="width: 30%;margin: 0 auto">
        <BgError />
    </div>
</CodeContainer>
