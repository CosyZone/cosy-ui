---
import { CodeContainer } from "@coffic/cosy-ui";
import BgAndBlurNone from "./TextBoxBgAndBlurNone.astro";
import BgAndBlurPaper from "./TextBoxBgAndBlurPaper.astro";
import BgAndBlurMuted from "./TextBoxBgAndBlurMuted.astro";
import BgAndBlurPrimary from "./TextBoxBgAndBlurPrimary.astro";
import BgAndBlurSecondary from "./TextBoxBgAndBlurSecondary.astro";
import BgAndBlurAccent from "./TextBoxBgAndBlurAccent.astro";
import BgAndBlurInfo from "./TextBoxBgAndBlurInfo.astro";
import BgAndBlurSuccess from "./TextBoxBgAndBlurSuccess.astro";
import BgAndBlurWarning from "./TextBoxBgAndBlurWarning.astro";
import BgAndBlurError from "./TextBoxBgAndBlurError.astro";

import BgAndBlurNoneCode from "./TextBoxBgAndBlurNone.astro?raw";
import BgAndBlurPaperCode from "./TextBoxBgAndBlurPaper.astro?raw";
import BgAndBlurMutedCode from "./TextBoxBgAndBlurMuted.astro?raw";
import BgAndBlurPrimaryCode from "./TextBoxBgAndBlurPrimary.astro?raw";
import BgAndBlurSecondaryCode from "./TextBoxBgAndBlurSecondary.astro?raw";
import BgAndBlurAccentCode from "./TextBoxBgAndBlurAccent.astro?raw";
import BgAndBlurInfoCode from "./TextBoxBgAndBlurInfo.astro?raw";
import BgAndBlurSuccessCode from "./TextBoxBgAndBlurSuccess.astro?raw";
import BgAndBlurWarningCode from "./TextBoxBgAndBlurWarning.astro?raw";
import BgAndBlurErrorCode from "./TextBoxBgAndBlurError.astro?raw";
---

<CodeContainer
    codes={[
        BgAndBlurNoneCode,
        BgAndBlurPaperCode,
        BgAndBlurMutedCode,
        BgAndBlurPrimaryCode,
        BgAndBlurSecondaryCode,
        BgAndBlurAccentCode,
        BgAndBlurInfoCode,
        BgAndBlurSuccessCode,
        BgAndBlurWarningCode,
        BgAndBlurErrorCode,
    ]}
    titles={[
        'none',
        'base-100/80',
        'base-200/70',
        'primary',
        'secondary',
        'accent',
        'info',
        'success',
        'warning',
        'error',
    ]}>
    <div id="tab-1" style="width: 30%;margin: 0 auto">
        <BgAndBlurNone />
    </div>
    <div id="tab-2" style="width: 30%;margin: 0 auto">
        <BgAndBlurPaper />
    </div>
    <div id="tab-3" style="width: 30%;margin: 0 auto">
        <BgAndBlurMuted />
    </div>
    <div id="tab-4" style="width: 30%;margin: 0 auto">
        <BgAndBlurPrimary />
    </div>
    <div id="tab-5" style="width: 30%;margin: 0 auto">
        <BgAndBlurSecondary />
    </div>
    <div id="tab-6" style="width: 30%;margin: 0 auto">
        <BgAndBlurAccent />
    </div>
    <div id="tab-7" style="width: 30%;margin: 0 auto">
        <BgAndBlurInfo />
    </div>
    <div id="tab-8" style="width: 30%;margin: 0 auto">
        <BgAndBlurSuccess />
    </div>
    <div id="tab-9" style="width: 30%;margin: 0 auto">
        <BgAndBlurWarning />
    </div>
    <div id="tab-10" style="width: 30%;margin: 0 auto">
        <BgAndBlurError />
    </div>
</CodeContainer>
