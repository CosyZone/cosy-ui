---
import { PictureBookPage, PictureBookTextBox } from '@coffic/cosy-ui';
---

<PictureBookPage lines={35} ariaLabelPrefix="bottom 10%">
  <div slot="background" style="width:100%;height:100%;background:#fff"></div>
  <PictureBookTextBox
    slot="overlay"
    bottom={10}
    left={10}
    width={80}
    heightInLines={6}
    bgColor="#ffffffcc"
    paddingPx={10}
    roundedPx={8}>
    bottom = 10%
  </PictureBookTextBox>
</PictureBookPage>
