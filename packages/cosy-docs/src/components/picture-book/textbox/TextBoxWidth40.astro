---
import { PictureBookPage, PictureBookTextBox } from '@coffic/cosy-ui';
---

<PictureBookPage lines={35} ariaLabelPrefix="width 40%">
  <div slot="background" style="width:100%;height:100%;background:#fff"></div>
  <PictureBookTextBox
    slot="overlay"
    top={20}
    left={30}
    width={40}
    heightInLines={6}
    bgColor="#ffffffcc"
    paddingPx={10}
    roundedPx={8}>
    width = 40%
  </PictureBookTextBox>
</PictureBookPage>
