---
import { PictureBookPage, PictureBookTextBox } from '@coffic/cosy-ui';
---

<PictureBookPage lines={35} ariaLabelPrefix="文本框基础">
  <div
    slot="background"
    style="width:100%;height:100%;background:linear-gradient(180deg,#fff,#f2f2f2)">
  </div>
  <PictureBookTextBox
    slot="overlay"
    top={20}
    left={12}
    width={76}
    heightInLines={7}
    bgColor="#ffffffcc"
    paddingPx={12}
    roundedPx={12}>
    单个文本框基础示例。
  </PictureBookTextBox>
</PictureBookPage>
