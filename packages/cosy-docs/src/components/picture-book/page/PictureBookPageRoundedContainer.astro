---



import {
	CodeContainer,
	PictureBookPage,
	PictureBookTextBox,
} from "@coffic/cosy-ui";
import code6 from "./PictureBookPageRoundedFull.astro?raw";
import code4 from "./PictureBookPageRoundedLg.astro?raw";
import code3 from "./PictureBookPageRoundedMd.astro?raw";
import code1 from "./PictureBookPageRoundedNone.astro?raw";
import code2 from "./PictureBookPageRoundedSm.astro?raw";
import code5 from "./PictureBookPageRoundedXl.astro?raw";
---

<CodeContainer
  codes={[code1, code2, code3, code4, code5, code6]}
  titles={['none', 'sm', 'md', 'lg', 'xl', 'full']}>
  <div id="tab-1" style="width: 30%;margin: 0 auto">
    <PictureBookPage
      rounded="none"
      pageAspectRatio={3 / 4}
      background="base-100">
      <PictureBookTextBox slot="overlay" top={8} left={50} width={48}>
        无圆角
      </PictureBookTextBox>
    </PictureBookPage>
  </div>
  <div id="tab-2" style="width: 30%;margin: 0 auto">
    <PictureBookPage rounded="sm" pageAspectRatio={3 / 4} background="base-100">
      <PictureBookTextBox slot="overlay" top={8} left={50} width={48}>
        小圆角
      </PictureBookTextBox>
    </PictureBookPage>
  </div>
  <div id="tab-3" style="width: 30%;margin: 0 auto">
    <PictureBookPage rounded="md" pageAspectRatio={3 / 4} background="base-100">
      <PictureBookTextBox slot="overlay" top={8} left={50} width={48}>
        中等圆角
      </PictureBookTextBox>
    </PictureBookPage>
  </div>
  <div id="tab-4" style="width: 30%;margin: 0 auto">
    <PictureBookPage rounded="lg" pageAspectRatio={3 / 4} background="base-100">
      <PictureBookTextBox slot="overlay" top={8} left={50} width={48}>
        大圆角
      </PictureBookTextBox>
    </PictureBookPage>
  </div>
  <div id="tab-5" style="width: 30%;margin: 0 auto">
    <PictureBookPage rounded="xl" pageAspectRatio={3 / 4} background="base-100">
      <PictureBookTextBox slot="overlay" top={8} left={50} width={48}>
        超大圆角
      </PictureBookTextBox>
    </PictureBookPage>
  </div>
  <div id="tab-6" style="width: 30%;margin: 0 auto">
    <PictureBookPage
      rounded="full"
      pageAspectRatio={3 / 4}
      background="base-100">
      <PictureBookTextBox slot="overlay" top={8} left={50} width={48}>
        完全圆角
      </PictureBookTextBox>
    </PictureBookPage>
  </div>
</CodeContainer>
