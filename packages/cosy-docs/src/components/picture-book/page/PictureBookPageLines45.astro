---
import { PictureBookPage, PictureBookTextBox } from '@coffic/cosy-ui';
---

<PictureBookPage lines={45} ariaLabelPrefix="绘本页(45行)">
  <div slot="background" style="width:100%;height:100%;background:#f0f8ff">
  </div>
  <PictureBookTextBox
    slot="overlay"
    top={10}
    left={8}
    width={84}
    heightInLines={6}
    bgColor="#ffffffcc"
    paddingPx={10}
    roundedPx={8}>
    45 行模式：行距更小。
  </PictureBookTextBox>
</PictureBookPage>
