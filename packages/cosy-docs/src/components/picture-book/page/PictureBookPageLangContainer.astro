---
import { CodeContainer } from '@coffic/cosy-ui';
import LangZh from './PictureBookPageLangZh.astro';
import LangEn from './PictureBookPageLangEn.astro';

import LangZhCode from './PictureBookPageLangZh.astro?raw';
import LangEnCode from './PictureBookPageLangEn.astro?raw';
---

<CodeContainer codes={[LangZhCode, LangEnCode]} titles={['zh', 'en']}>
