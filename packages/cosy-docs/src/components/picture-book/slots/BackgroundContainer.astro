---
import { CodeContainer } from '@coffic/cosy-ui';
import BgColor from './BackgroundColor.astro';
import BgImage from './BackgroundImage.astro';

import BgColorCode from './BackgroundColor.astro?raw';
import BgImageCode from './BackgroundImage.astro?raw';
---

<CodeContainer codes={[BgColorCode, BgImageCode]} titles={['color', 'image']}>
  <div id="tab-1" style="width: 30%;margin: 0 auto">
    <BgColor />
  </div>
  <div id="tab-2" style="width: 30%;margin: 0 auto">
    <BgImage />
  </div>
</CodeContainer>
