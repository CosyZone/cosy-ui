---

/**
 * @component ButtonVue Gradient Variants Container
 * @description ButtonVue 渐变变体容器组件
 */

import { CodeContainer } from "@coffic/cosy-ui";
import ButtonVueGradientLemon from "./ButtonVueGradientLemon.vue";
import ButtonVueGradientLemonCode from "./ButtonVueGradientLemon.vue?raw";
import ButtonVueGradientSky from "./ButtonVueGradientSky.vue";
import ButtonVueGradientSkyCode from "./ButtonVueGradientSky.vue?raw";
import ButtonVueGradientWatermelon from "./ButtonVueGradientWatermelon.vue";
import ButtonVueGradientWatermelonCode from "./ButtonVueGradientWatermelon.vue?raw";
---

<CodeContainer
    titles={['Sky Gradient', 'Watermelon Gradient', 'Lemon Gradient']}
    codes={[
        ButtonVueGradientSkyCode,
        ButtonVueGradientWatermelonCode,
        ButtonVueGradientLemonCode,
    ]}>
    <div id="tab-1">
        <ButtonVueGradientSky client:load />
    </div>
    <div id="tab-2">
        <ButtonVueGradientWatermelon client:load />
    </div>
    <div id="tab-3">
        <ButtonVueGradientLemon client:load />
    </div>
</CodeContainer>
