---

/**
 * @component ButtonVue States Container
 * @description ButtonVue 状态容器组件
 */

import { CodeContainer } from "@coffic/cosy-ui";
import ButtonVueStateDisabled from "./ButtonVueStateDisabled.vue";
import ButtonVueStateDisabledCode from "./ButtonVueStateDisabled.vue?raw";
import ButtonVueStateLoading from "./ButtonVueStateLoading.vue";
import ButtonVueStateLoadingCode from "./ButtonVueStateLoading.vue?raw";
import ButtonVueStateNormal from "./ButtonVueStateNormal.vue";
import ButtonVueStateNormalCode from "./ButtonVueStateNormal.vue?raw";
---

<CodeContainer
  titles={['正常', '加载中', '禁用']}
  codes={[
    ButtonVueStateNormalCode,
    ButtonVueStateLoadingCode,
    ButtonVueStateDisabledCode,
  ]}>
  <div id="tab-1">
    <ButtonVueStateNormal client:load />
  </div>
  <div id="tab-2">
    <ButtonVueStateLoading client:load />
  </div>
  <div id="tab-3">
    <ButtonVueStateDisabled client:load />
  </div>
</CodeContainer>
