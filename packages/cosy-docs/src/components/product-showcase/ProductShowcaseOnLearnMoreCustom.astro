---
import { ProductShowcase, getProductImage } from '@coffic/cosy-ui';

// 示例产品数据
const products = [
  {
    name: '极简手机',
    description: '纯净体验，回归本质',
    image: getProductImage({
      width: 800,
      height: 600,
      tag: 'minimal-phone',
      provider: 'picsum',
    }),
    price: '¥6,999',
    isNew: true,
  },
];

// 自定义回调函数
const onLearnMore = (product: any) => {
  console.log('查看产品详情:', product.name);
  alert(`正在查看 ${product.name} 的详细信息`);
};
---

<ProductShowcase
  products={products}
  buyNowText="立即购买"
  learnMoreText="了解更多"
  newLabelText="新品"
  onLearnMore={onLearnMore}
/>
