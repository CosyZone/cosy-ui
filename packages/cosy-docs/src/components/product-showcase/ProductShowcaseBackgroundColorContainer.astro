---
import { CodeContainer } from '@coffic/cosy-ui';
import ProductShowcaseBackgroundColorDefault from './ProductShowcaseBackgroundColorDefault.astro';
import ProductShowcaseBackgroundColorGray from './ProductShowcaseBackgroundColorGray.astro';
import ProductShowcaseBackgroundColorBlue from './ProductShowcaseBackgroundColorBlue.astro';
import sourceDefault from './ProductShowcaseBackgroundColorDefault.astro?raw';
import sourceGray from './ProductShowcaseBackgroundColorGray.astro?raw';
import sourceBlue from './ProductShowcaseBackgroundColorBlue.astro?raw';
---

