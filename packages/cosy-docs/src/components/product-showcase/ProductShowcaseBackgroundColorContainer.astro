    <ProductShowcaseBackgroundColorDefault />
  </div>
  <div id="tab-2">
    <ProductShowcaseBackgroundColorGray />
  </div>
  <div id="tab-3">
    <ProductShowcaseBackgroundColorBlue />
  </div>
</CodeContainer>
