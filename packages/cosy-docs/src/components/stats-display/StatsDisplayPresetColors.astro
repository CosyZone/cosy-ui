---
/**
 * @component StatsDisplayPresetColors
 * @description StatsDisplay 预设颜色示例
 */
import { StatsDisplay } from '@coffic/cosy-ui';

const presetColorStats = [
  { value: '10+', label: '年经验', color: 'primary' },
  { value: '500+', label: '客户', color: 'success' },
  { value: '1000+', label: '项目', color: 'warning' },
  { value: '50+', label: '专家', color: 'info' },
