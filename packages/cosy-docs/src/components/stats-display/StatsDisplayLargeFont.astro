---
/**
 * @component StatsDisplayLargeFont
 * @description StatsDisplay 大字体版本示例
 */
import { StatsDisplay } from '@coffic/cosy-ui';

const largeFontStats = [
  { value: '1M+', label: '下载量' },
  { value: '5K+', label: 'Star' },
];
---

