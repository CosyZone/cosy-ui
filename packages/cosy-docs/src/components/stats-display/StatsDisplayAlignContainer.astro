---
/**
 * @component StatsDisplayAlignContainer
 * @description StatsDisplay align 属性示例容器组件
 */
import { CodeContainer } from "@coffic/cosy-ui";
import StatsDisplayAlignLeft from "./StatsDisplayAlignLeft.astro";
import StatsDisplayAlignCenter from "./StatsDisplayAlignCenter.astro";
import StatsDisplayAlignRight from "./StatsDisplayAlignRight.astro";
import StatsDisplayAlignLeftSourceCode from "./StatsDisplayAlignLeft.astro?raw";
import StatsDisplayAlignCenterSourceCode from "./StatsDisplayAlignCenter.astro?raw";
import StatsDisplayAlignRightSourceCode from "./StatsDisplayAlignRight.astro?raw";
---

<CodeContainer
  codes={[
    StatsDisplayAlignLeftSourceCode,
    StatsDisplayAlignCenterSourceCode,
    StatsDisplayAlignRightSourceCode,
  ]}
  titles={['left', 'center', 'right']}>
  <div id="tab-1">
    <StatsDisplayAlignLeft />
  </div>
  <div id="tab-2">
    <StatsDisplayAlignCenter />
  </div>
  <div id="tab-3">
    <StatsDisplayAlignRight />
  </div>
</CodeContainer>
