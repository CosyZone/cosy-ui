import { AlertFactory } from '@coffic/cosy-ui';
import AlertActionLinkButton from './AlertActionLinkButton.astro';

const alertElement = await AlertFactory.create()
    .info()
    .withTitle('提示信息')
    .withContent('有新的文档更新可供查看。')
    .slotAction(AlertActionLinkButton, {
        text: '查看更新',
        onClick: "alert('查看更新')",
    })
    .build();
---

<Fragment set:html={alertElement} />
