---
/**
 * @component AlertBasicContainer
 * @description 基础 Alert 组件示例容器
 */
import { CodeContainer } from '@coffic/cosy-ui';
import AlertBasic from './AlertBasic.astro';
import AlertBasicSourceCode from './AlertBasic.astro?raw';
import AlertPropsBuilder from './AlertPropsBuilder.astro';
import AlertPropsBuilderSourceCode from './AlertPropsBuilder.astro?raw';
import AlertFactory from './AlertFactory.astro';
import AlertFactorySourceCode from './AlertFactory.astro?raw';
---

