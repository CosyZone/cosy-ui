---
import { Alert } from '@coffic/cosy-ui';
import AlertActionButton from './AlertActionButton.astro';
---

<Alert type="success" title="操作成功">
    你的操作已成功完成，可以进行下一步。
    <div slot="action">
        <button
            style="
                background-color: #10b981;
                color: white;
                border: none;
                padding: 0.5rem 1rem;
                border-radius: 0.375rem;
                cursor: pointer;
                font-size: 0.875rem;
                display: flex;
                align-items: center;
                gap: 0.25rem;
            "
            onclick="alert('查看详情')">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2">
                <path d="M9 18l6-6-6-6"></path>
            </svg>
            查看详情
        </button>
    </div>
</Alert>
