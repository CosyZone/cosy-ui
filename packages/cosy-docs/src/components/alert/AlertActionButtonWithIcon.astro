---



interface Props {
    text: string;
    onClick: string;
}

const { text, onClick } = Astro.props;
---

<button
    style="
        background-color: #10b981;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        cursor: pointer;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    "
    onclick={onClick}>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2">
        <path d="M9 18l6-6-6-6"></path>
    </svg>
    {text}
</button>
