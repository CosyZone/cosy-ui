---
/**
 * @component AlertNoIconContainer
 * @description 展示不显示图标的 Alert 组件示例
 */
import { CodeContainer } from '@coffic/cosy-ui';
import AlertNoIconInfo from './AlertNoIconInfo.astro';
import AlertNoIconSuccess from './AlertNoIconSuccess.astro';
import AlertNoIconWarning from './AlertNoIcon.astro';
import AlertNoIconError from './AlertNoIconError.astro';
import AlertNoIconInfoSource from './AlertNoIconInfo.astro?raw';
import AlertNoIconSuccessSource from './AlertNoIconSuccess.astro?raw';
import AlertNoIconWarningSource from './AlertNoIcon.astro?raw';
import AlertNoIconErrorSource from './AlertNoIconError.astro?raw';
---

<CodeContainer
  codes={[
    AlertNoIconInfoSource,
    AlertNoIconSuccessSource,
    AlertNoIconWarningSource,
    AlertNoIconErrorSource,
  ]}
  titles={['Info', 'Success', 'Warning', 'Error']}>
  <div id="tab-1">
    <AlertNoIconInfo />
  </div>
  <div id="tab-2">
    <AlertNoIconSuccess />
  </div>
  <div id="tab-3">
    <AlertNoIconWarning />
  </div>
  <div id="tab-4">
    <AlertNoIconError />
  </div>
</CodeContainer>
