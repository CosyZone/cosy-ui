---
/**
 * @component AlertNoIconContainer
 * @description 展示不显示图标的 Alert 组件示例
 */
import { CodeContainer } from '@coffic/cosy-ui';
import AlertNoIconInfo from './AlertNoIconInfo.astro';
import AlertNoIconSuccess from './AlertNoIconSuccess.astro';
import AlertNoIconWarning from './AlertNoIcon.astro';
import AlertNoIconError from './AlertNoIconError.astro';
import AlertNoIconInfoFactory from './AlertNoIconInfoFactory.astro';
import AlertNoIconSuccessFactory from './AlertNoIconSuccessFactory.astro';
import AlertNoIconWarningFactory from './AlertNoIconWarningFactory.astro';
import AlertNoIconErrorFactory from './AlertNoIconErrorFactory.astro';
import AlertNoIconInfoSource from './AlertNoIconInfo.astro?raw';
import AlertNoIconSuccessSource from './AlertNoIconSuccess.astro?raw';
import AlertNoIconWarningSource from './AlertNoIcon.astro?raw';
import AlertNoIconErrorSource from './AlertNoIconError.astro?raw';
import AlertNoIconInfoFactorySource from './AlertNoIconInfoFactory.astro?raw';
import AlertNoIconSuccessFactorySource from './AlertNoIconSuccessFactory.astro?raw';
import AlertNoIconWarningFactorySource from './AlertNoIconWarningFactory.astro?raw';
import AlertNoIconErrorFactorySource from './AlertNoIconErrorFactory.astro?raw';
---

<CodeContainer
    codes={[
        AlertNoIconInfoSource,
        AlertNoIconSuccessSource,
        AlertNoIconWarningSource,
        AlertNoIconErrorSource,
        AlertNoIconInfoFactorySource,
        AlertNoIconSuccessFactorySource,
        AlertNoIconWarningFactorySource,
        AlertNoIconErrorFactorySource,
    ]}
    titles={[
        'Info',
        'Success',
        'Warning',
        'Error',
        'Info Factory',
        'Success Factory',
        'Warning Factory',
        'Error Factory',
    ]}>
    <div id="tab-1">
        <AlertNoIconInfo />
    </div>
    <div id="tab-2">
        <AlertNoIconSuccess />
    </div>
    <div id="tab-3">
        <AlertNoIconWarning />
    </div>
    <div id="tab-4">
        <AlertNoIconError />
    </div>
    <div id="tab-5">
        <AlertNoIconInfoFactory />
    </div>
    <div id="tab-6">
        <AlertNoIconSuccessFactory />
    </div>
    <div id="tab-7">
        <AlertNoIconWarningFactory />
    </div>
    <div id="tab-8">
        <AlertNoIconErrorFactory />
    </div>
</CodeContainer>
