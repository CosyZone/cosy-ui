 */
import { CodeContainer } from '@coffic/cosy-ui';
import AlertNoIconWarning from './AlertNoIcon.astro';
import AlertNoIconWarningSource from './AlertNoIcon.astro?raw';
import AlertNoIconError from './AlertNoIconError.astro';
import AlertNoIconErrorSource from './AlertNoIconError.astro?raw';
import AlertNoIconErrorFactory from './AlertNoIconErrorFactory.astro';
import AlertNoIconErrorFactorySource from './AlertNoIconErrorFactory.astro?raw';
import AlertNoIconInfo from './AlertNoIconInfo.astro';
