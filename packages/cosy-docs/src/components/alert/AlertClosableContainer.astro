---

/**
 * @component AlertClosableContainer
 * @description closeable 属性：true、false 两种情况下的 Alert 组件，Astro 和 Vue 各两标签。
 */
import { CodeContainer } from '@coffic/cosy-ui';
import AlertClosable from './AlertClosable.astro';
import AlertClosableRaw from './AlertClosable.astro?raw';
import AlertClosableVue from './AlertClosableVue.vue';
import AlertClosableVueRaw from './AlertClosableVue.vue?raw';
import AlertNotClosable from './AlertNotClosable.astro';
import AlertNotClosableRaw from './AlertNotClosable.astro?raw';
import AlertNotClosableVue from './AlertNotClosableVue.vue';
import AlertNotClosableVueRaw from './AlertNotClosableVue.vue?raw';
---
<CodeContainer
    codes={[ 
        AlertClosableRaw,
        AlertNotClosableRaw,
        AlertClosableVueRaw,
        AlertNotClosableVueRaw
    ]}
    titles={[ 
        'true',
        'false',
        'true',
        'false'
    ]}
>
    <div id="tab-1" data-label="astro"><AlertClosable /></div>
    <div id="tab-2" data-label="astro"><AlertNotClosable /></div>
    <div id="tab-3" data-label="vue"><AlertClosableVue client:load /></div>
    <div id="tab-4" data-label="vue"><AlertNotClosableVue client:load /></div>
</CodeContainer>
