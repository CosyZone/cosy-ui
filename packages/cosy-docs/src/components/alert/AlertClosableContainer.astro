---

/**
 * @component AlertClosableContainer
 * @description Container to demonstrate closable and non-closable Alerts.
 */
import { CodeContainer } from '@coffic/cosy-ui';
import AlertNotClosable from './AlertNotClosable.astro';
import AlertNotClosableRaw from './AlertNotClosable.astro?raw';
import AlertNotClosableVue from './AlertNotClosableVue.vue';
import AlertNotClosableVueRaw from './AlertNotClosableVue.vue?raw';
---

<CodeContainer
    codes={[
        AlertNotClosableRaw,
        AlertNotClosableVueRaw,
    ]}
    titles={[
        '不可关闭',
        '不可关闭',
    ]}>
    <div id="tab-1" data-label="astro">
        <AlertNotClosable />
    </div>
    <div id="tab-2" data-label="vue">
        <AlertNotClosableVue client:load />
    </div>
</CodeContainer>
