---
import { Alert } from '@coffic/cosy-ui';
---
<div style="display: flex; flex-direction: column; gap: 1rem;">
  <Alert type="info" showIcon={true}>信息提示（含图标）</Alert>
  <Alert type="success" showIcon={true}>成功提示（含图标）</Alert>
  <Alert type="warning" showIcon={true}>警告提示（含图标）</Alert>
  <Alert type="error" showIcon={true}>错误提示（含图标）</Alert>
  <Alert type="info" showIcon={false}>信息提示（无图标）</Alert>
  <Alert type="success" showIcon={false}>成功提示（无图标）</Alert>
  <Alert type="warning" showIcon={false}>警告提示（无图标）</Alert>
  <Alert type="error" showIcon={false}>错误提示（无图标）</Alert>
</div>
