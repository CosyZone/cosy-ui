---
/**
 * @component Alert.Types
 *
 * @description
 * 展示Alert组件的所有类型：info、success、warning、error。
 */

import { CodeContainer } from '@coffic/cosy-ui';
import AlertInfo from './AlertInfo.astro';
import AlertSuccess from './AlertSuccess.astro';
import AlertWarning from './AlertWarning.astro';
import AlertError from './AlertError.astro';
import AlertInfoFactory from './AlertInfoFactory.astro';
import AlertSuccessFactory from './AlertSuccessFactory.astro';
import AlertWarningFactory from './AlertWarningFactory.astro';
import AlertErrorFactory from './AlertErrorFactory.astro';
import AlertInfoSourceCode from './AlertInfo.astro?raw';
import AlertSuccessSourceCode from './AlertSuccess.astro?raw';
import AlertWarningSourceCode from './AlertWarning.astro?raw';
import AlertErrorSourceCode from './AlertError.astro?raw';
import AlertInfoFactorySourceCode from './AlertInfoFactory.astro?raw';
import AlertSuccessFactorySourceCode from './AlertSuccessFactory.astro?raw';
import AlertWarningFactorySourceCode from './AlertWarningFactory.astro?raw';
import AlertErrorFactorySourceCode from './AlertErrorFactory.astro?raw';
---

<CodeContainer
    titles={[
        'Info',
        'Success',
        'Warning',
        'Error',
        'Info Factory',
        'Success Factory',
        'Warning Factory',
        'Error Factory',
    ]}
    codes={[
        AlertInfoSourceCode,
        AlertSuccessSourceCode,
        AlertWarningSourceCode,
        AlertErrorSourceCode,
        AlertInfoFactorySourceCode,
        AlertSuccessFactorySourceCode,
        AlertWarningFactorySourceCode,
        AlertErrorFactorySourceCode,
    ]}>
    <div id="tab-1" data-label="basic">
        <AlertInfo />
    </div>

    <div id="tab-2" data-label="factory">
        <AlertSuccess />
    </div>

    <div id="tab-3">
        <AlertWarning />
    </div>

    <div id="tab-4">
        <AlertError />
    </div>

    <div id="tab-5">
        <AlertInfoFactory />
    </div>

    <div id="tab-6">
        <AlertSuccessFactory />
    </div>

    <div id="tab-7">
        <AlertWarningFactory />
    </div>

    <div id="tab-8">
        <AlertErrorFactory />
    </div>
</CodeContainer>
