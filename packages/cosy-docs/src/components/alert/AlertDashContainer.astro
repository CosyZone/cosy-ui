---
/**
 * @component AlertDashContainer
 * @description 展示 Alert 组件 dash 虚线描边风格的示例
 */
import { CodeContainer } from '@coffic/cosy-ui';
import AlertDashInfo from './AlertDashInfo.astro';
import AlertDashSuccess from './AlertDashSuccess.astro';
import AlertDashWarning from './AlertDash.astro';
import AlertDashError from './AlertDashError.astro';
import AlertDashInfoFactory from './AlertDashInfoFactory.astro';
import AlertDashSuccessFactory from './AlertDashSuccessFactory.astro';
import AlertDashWarningFactory from './AlertDashWarningFactory.astro';
import AlertDashErrorFactory from './AlertDashErrorFactory.astro';
import AlertDashInfoSource from './AlertDashInfo.astro?raw';
import AlertDashSuccessSource from './AlertDashSuccess.astro?raw';
import AlertDashWarningSource from './AlertDash.astro?raw';
import AlertDashErrorSource from './AlertDashError.astro?raw';
import AlertDashInfoFactorySource from './AlertDashInfoFactory.astro?raw';
import AlertDashSuccessFactorySource from './AlertDashSuccessFactory.astro?raw';
import AlertDashWarningFactorySource from './AlertDashWarningFactory.astro?raw';
import AlertDashErrorFactorySource from './AlertDashErrorFactory.astro?raw';
---

<CodeContainer
    codes={[
        AlertDashInfoSource,
        AlertDashSuccessSource,
        AlertDashWarningSource,
        AlertDashErrorSource,
        AlertDashInfoFactorySource,
        AlertDashSuccessFactorySource,
        AlertDashWarningFactorySource,
        AlertDashErrorFactorySource,
    ]}
    titles={[
        'Info',
        'Success',
        'Warning',
        'Error',
        'Info Factory',
        'Success Factory',
        'Warning Factory',
        'Error Factory',
    ]}>
    <div id="tab-1" data-label="basic">
        <AlertDashInfo />
    </div>
    <div id="tab-2" data-label="basic">
        <AlertDashSuccess />
    </div>
    <div id="tab-3" data-label="basic">
        <AlertDashWarning />
    </div>
    <div id="tab-4" data-label="basic">
        <AlertDashError />
    </div>
    <div id="tab-5" data-label="factory">
        <AlertDashInfoFactory />
    </div>
    <div id="tab-6" data-label="factory">
        <AlertDashSuccessFactory />
    </div>
    <div id="tab-7" data-label="factory">
        <AlertDashWarningFactory />
    </div>
    <div id="tab-8" data-label="factory">
        <AlertDashErrorFactory />
    </div>
</CodeContainer>
