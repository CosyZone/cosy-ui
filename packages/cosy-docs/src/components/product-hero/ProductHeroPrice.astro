---
import {
  ProductHero,
  getProductImage,
  CodeContainer,
} from '@coffic/cosy-ui';
import ProductHeroPriceDefault from './ProductHeroPriceDefault.astro';
import ProductHeroPriceCustom from './ProductHeroPriceCustom.astro';
import sourceDefault from './ProductHeroPriceDefault.astro?raw';
import sourceCustom from './ProductHeroPriceCustom.astro?raw';
