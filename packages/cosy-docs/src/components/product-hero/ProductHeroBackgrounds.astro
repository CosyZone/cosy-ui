---
import { ProductHero, getProductImage, CodeContainer } from '@coffic/cosy-ui';
import ProductHeroBackgroundsDefault from './ProductHeroBackgroundsDefault.astro';
import ProductHeroBackgroundsBlue from './ProductHeroBackgroundsBlue.astro';
import ProductHeroBackgroundsGray from './ProductHeroBackgroundsGray.astro';
import ProductHeroBackgroundsComplex from './ProductHeroBackgroundsComplex.astro';
import sourceDefault from './ProductHeroBackgroundsDefault.astro?raw';
import sourceBlue from './ProductHeroBackgroundsBlue.astro?raw';
import sourceGray from './ProductHeroBackgroundsGray.astro?raw';
import sourceComplex from './ProductHeroBackgroundsComplex.astro?raw';
---

<CodeContainer
  codes={[sourceDefault, sourceBlue, sourceGray, sourceComplex]}
  titles={['默认背景', '蓝色背景', '灰色背景', '复杂背景']}>
  <div id="tab-1">
    <ProductHeroBackgroundsDefault />
  </div>
  <div id="tab-2">
    <ProductHeroBackgroundsBlue />
  </div>
  <div id="tab-3">
    <ProductHeroBackgroundsGray />
  </div>
  <div id="tab-4">
    <ProductHeroBackgroundsComplex />
  </div>
</CodeContainer>
