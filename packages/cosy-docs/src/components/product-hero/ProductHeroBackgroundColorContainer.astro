---
import { CodeContainer } from '@coffic/cosy-ui';
import ProductHeroBackgroundColorDefault from './ProductHeroBackgroundColorDefault.astro';
import ProductHeroBackgroundColorGray from './ProductHeroBackgroundColorGray.astro';
import ProductHeroBackgroundColorBlue from './ProductHeroBackgroundColorBlue.astro';
import sourceDefault from './ProductHeroBackgroundColorDefault.astro?raw';
import sourceGray from './ProductHeroBackgroundColorGray.astro?raw';
import sourceBlue from './ProductHeroBackgroundColorBlue.astro?raw';
---

<CodeContainer
  codes={[sourceDefault, sourceGray, sourceBlue]}
  titles={['默认', '灰色', '蓝色']}>
  <div id="tab-1">
    <ProductHeroBackgroundColorDefault />
  </div>
  <div id="tab-2">
    <ProductHeroBackgroundColorGray />
  </div>
  <div id="tab-3">
    <ProductHeroBackgroundColorBlue />
  </div>
</CodeContainer>
