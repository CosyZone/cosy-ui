---

import { CodeContainer, getProductImage, ProductHero } from "@coffic/cosy-ui";
import ProductHeroBackgroundBlue from "./ProductHeroBackgroundBlue.astro";
import sourceBlue from "./ProductHeroBackgroundBlue.astro?raw";
import ProductHeroBackgroundDefault from "./ProductHeroBackgroundDefault.astro";
import sourceDefault from "./ProductHeroBackgroundDefault.astro?raw";
import ProductHeroBackgroundGray from "./ProductHeroBackgroundGray.astro";
import sourceGray from "./ProductHeroBackgroundGray.astro?raw";
---

<CodeContainer
  codes={[sourceDefault, sourceBlue, sourceGray]}
  titles={['默认背景', '蓝色背景', '灰色背景']}>
  <div id="tab-1">
    <ProductHeroBackgroundDefault />
  </div>
  <div id="tab-2">
    <ProductHeroBackgroundBlue />
  </div>
  <div id="tab-3">
    <ProductHeroBackgroundGray />
  </div>
</CodeContainer>
