---
import { ProductHero, getProductImage } from '@coffic/cosy-ui';

// 示例产品数据
const products = [
  {
    name: '极简手机',
    description: '纯净体验，回归本质',
    image: getProductImage({
      width: 800,
      height: 600,
      tag: 'minimal-phone',
      provider: 'picsum',
    }),
    price: '¥6,999',
    isNew: true,
  },
  {
    name: '智能手表',
    description: '健康生活，简约开始',
    image: getProductImage({
      width: 800,
      height: 600,
      tag: 'smart-watch',
      provider: 'picsum',
    }),
    price: '¥2,999',
    isNew: false,
  },
];
---

<ProductHero
  products={products}
  background="primary/10"
  buyNowText="立即购买"
  learnMoreText="了解更多"
  newLabelText="新品"
/>
