---
import { ProductHero, getProductImage } from '@coffic/cosy-ui';

// 示例产品数据
const products = [
  {
    name: '极简手机',
    description: '纯净体验，回归本质',
    image: getProductImage({
      width: 800,
      height: 600,
      tag: 'minimal-phone',
      provider: 'picsum',
    }),
    price: '¥6,999',
    isNew: true,
  },
];
---

<ProductHero
  products={products}
  buyNowText="Buy Now"
  learnMoreText="了解更多"
  newLabelText="新品"
/>
