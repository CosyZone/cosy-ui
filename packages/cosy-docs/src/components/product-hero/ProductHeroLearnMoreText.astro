---
import {
  ProductHero,
  getProductImage,
  CodeContainer,
} from '@coffic/cosy-ui';
import ProductHeroLearnMoreTextDefault from './ProductHeroLearnMoreTextDefault.astro';
import ProductHeroLearnMoreTextCustom from './ProductHeroLearnMoreTextCustom.astro';
import ProductHeroLearnMoreTextEnglish from './ProductHeroLearnMoreTextEnglish.astro';
import sourceDefault from './ProductHeroLearnMoreTextDefault.astro?raw';
import sourceCustom from './ProductHeroLearnMoreTextCustom.astro?raw';
import sourceEnglish from './ProductHeroLearnMoreTextEnglish.astro?raw';
---

<CodeContainer
  codes={[sourceDefault, sourceCustom, sourceEnglish]}
  titles={['默认文本', '自定义文本', '英文文本']}>
  <div id="tab-1">
    <ProductHeroLearnMoreTextDefault />
  </div>
  <div id="tab-2">
    <ProductHeroLearnMoreTextCustom />
  </div>
  <div id="tab-3">
    <ProductHeroLearnMoreTextEnglish />
  </div>
</CodeContainer>
