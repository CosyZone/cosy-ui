---
import {
  ProductHero,
  getProductImage,
  CodeContainer,
} from '@coffic/cosy-ui';
import ProductHeroBuyNowTextDefault from './ProductHeroBuyNowTextDefault.astro';
import ProductHeroBuyNowTextCustom from './ProductHeroBuyNowTextCustom.astro';
import ProductHeroBuyNowTextEnglish from './ProductHeroBuyNowTextEnglish.astro';
import sourceDefault from './ProductHeroBuyNowTextDefault.astro?raw';
import sourceCustom from './ProductHeroBuyNowTextCustom.astro?raw';
import sourceEnglish from './ProductHeroBuyNowTextEnglish.astro?raw';
---

<CodeContainer
  codes={[sourceDefault, sourceCustom, sourceEnglish]}
  titles={['默认文本', '自定义文本', '英文文本']}>
  <div id="tab-1">
    <ProductHeroBuyNowTextDefault />
  </div>
  <div id="tab-2">
    <ProductHeroBuyNowTextCustom />
  </div>
  <div id="tab-3">
    <ProductHeroBuyNowTextEnglish />
  </div>
</CodeContainer>
