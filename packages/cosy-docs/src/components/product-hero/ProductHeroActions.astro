---
import { ProductHero, Button, getProductImage } from "@coffic/cosy-ui";
---

<ProductHero
  name="极简手机"
  description="纯净体验，回归本质"
  image={getProductImage({
    width: 800,
    height: 600,
    tag: 'actions-demo',
    provider: 'picsum',
  })}
  labels={['热卖']}
  highlight="¥5,999">
  <div slot="actions" style="display:flex; gap: 1rem;">
    <Button variant="primary">立即购买</Button>
    <Button variant="outline">了解更多</Button>
  </div>
</ProductHero>
