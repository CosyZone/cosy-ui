---
import { ScrollRow, PlaceHolder } from '@coffic/cosy-ui';
---

<ScrollRow
  showNavigation
  gap="sm"
  padding="sm"
  background="base-100"
  scrollBy="page"
  ariaLabel="Paged scroll">
  <PlaceHolder width="lg" height="md" background="primary/10" />
  <PlaceHolder width="lg" height="md" background="secondary/10" />
  <PlaceHolder width="lg" height="md" background="accent/10" />
  <PlaceHolder width="lg" height="md" background="success/10" />
  <PlaceHolder width="lg" height="md" background="warning/10" />
  <PlaceHolder width="lg" height="md" background="error/10" />
  <PlaceHolder width="lg" height="md" background="info/10" />
  <PlaceHolder width="lg" height="md" background="base-200" />
  <PlaceHolder width="lg" height="md" background="base-300" />
  <PlaceHolder width="lg" height="md" background="primary/10" />
  <PlaceHolder width="lg" height="md" background="secondary/10" />
  <PlaceHolder width="lg" height="md" background="accent/10" />
</ScrollRow>
