---

import { CodeContainer } from "@coffic/cosy-ui";
import Base100Background from "../Base100Background.astro";
import Base100BackgroundSource from "../Base100Background.astro?raw";
import Base200Background from "../Base200Background.astro";
import Base200BackgroundSource from "../Base200Background.astro?raw";
import Base300Background from "../Base300Background.astro";
import Base300BackgroundSource from "../Base300Background.astro?raw";
import GradientBackground from "../GradientBackground.astro";
import GradientBackgroundSource from "../GradientBackground.astro?raw";
import Neutral10Background from "../Neutral10Background.astro";
import Neutral10BackgroundSource from "../Neutral10Background.astro?raw";
import Primary10Background from "../Primary10Background.astro";
import Primary10BackgroundSource from "../Primary10Background.astro?raw";
---

<CodeContainer
  codes={[
    Base100BackgroundSource,
    Base200BackgroundSource,
    Base300BackgroundSource,
    Primary10BackgroundSource,
    Neutral10BackgroundSource,
    GradientBackgroundSource,
  ]}
  titles={[
    'base-100',
    'base-200',
    'base-300',
    'primary/10',
    'neutral/10',
    'gradient',
  ]}>
  <div id="tab-1">
    <Base100Background />
  </div>
  <div id="tab-2">
    <Base200Background />
  </div>
  <div id="tab-3">
    <Base300Background />
  </div>
  <div id="tab-4">
    <Primary10Background />
  </div>
  <div id="tab-5">
    <Neutral10Background />
  </div>
  <div id="tab-6">
    <GradientBackground />
  </div>
</CodeContainer>
