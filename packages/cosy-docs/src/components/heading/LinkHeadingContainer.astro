---
/**
 * @component LinkHeadingContainer
 * @description 展示 Heading 组件链接功能的容器组件
 */

import { CodeContainer } from '@coffic/cosy-ui';
import LinkHeadingBasic from './LinkHeadingBasic.astro';
import LinkHeadingExternal from './LinkHeadingExternal.astro';
import LinkHeadingStyled from './LinkHeadingStyled.astro';
import LinkHeadingBackground from './LinkHeadingBackground.astro';
import LinkHeadingAlign from './LinkHeadingAlign.astro';
import linkHeadingBasicCode from './LinkHeadingBasic.astro?raw';
import linkHeadingExternalCode from './LinkHeadingExternal.astro?raw';
import linkHeadingStyledCode from './LinkHeadingStyled.astro?raw';
import linkHeadingBackgroundCode from './LinkHeadingBackground.astro?raw';
import linkHeadingAlignCode from './LinkHeadingAlign.astro?raw';
---

<CodeContainer
  codes={[
    linkHeadingBasicCode,
    linkHeadingExternalCode,
    linkHeadingStyledCode,
    linkHeadingBackgroundCode,
    linkHeadingAlignCode,
  ]}>
  <div id="tab-1">
    <LinkHeadingBasic />
  </div>
  <div id="tab-2">
    <LinkHeadingExternal />
  </div>
  <div id="tab-3">
    <LinkHeadingStyled />
  </div>
  <div id="tab-4">
    <LinkHeadingBackground />
  </div>
  <div id="tab-5">
    <LinkHeadingAlign />
  </div>
</CodeContainer>
