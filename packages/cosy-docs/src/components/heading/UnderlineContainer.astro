 * @component HeadingUnderlineContainer
 * @description Heading 组件 underline 属性示例容器，展示带下划线的标题。
 */
import { CodeContainer } from '@coffic/cosy-ui';
import UnderlineBasic from './UnderlineBasic.astro';
import UnderlineSubsection from './UnderlineSubsection.astro';
import UnderlineBasicSource from './UnderlineBasic.astro?raw';
import UnderlineSubsectionSource from './UnderlineSubsection.astro?raw';
