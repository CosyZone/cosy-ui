---
/**
 * @component HeadingAlignContainer
 * @description Heading 组件 align 属性示例容器，展示不同的文本对齐方式。
 */
import { CodeContainer } from "@coffic/cosy-ui";
import AlignCenter from "./AlignCenter.astro";
import AlignCenterSource from "./AlignCenter.astro?raw";
import AlignCenterVue from "./AlignCenter.vue";
import AlignCenterVueSource from "./AlignCenter.vue?raw";
import AlignLeft from "./AlignLeft.astro";
import AlignLeftSource from "./AlignLeft.astro?raw";
import AlignLeftVue from "./AlignLeft.vue";
