---
/**
 * @component HeadingColorContainer
 * @description Heading 组件 color 属性示例容器，展示不同的颜色选项。
 */
import { CodeContainer } from '@coffic/cosy-ui';
import ColorDefault from './ColorDefault.astro';
import ColorPrimary from './ColorPrimary.astro';
import ColorSecondary from './ColorSecondary.astro';
import ColorAccent from './ColorAccent.astro';
import ColorMuted from './ColorMuted.astro';
import ColorDefaultSource from './ColorDefault.astro?raw';
import ColorPrimarySource from './ColorPrimary.astro?raw';
import ColorSecondarySource from './ColorSecondary.astro?raw';
import ColorAccentSource from './ColorAccent.astro?raw';
import ColorMutedSource from './ColorMuted.astro?raw';
---

<CodeContainer
  codes={[
    ColorDefaultSource,
    ColorPrimarySource,
    ColorSecondarySource,
    ColorAccentSource,
    ColorMutedSource,
  ]}
  titles={['默认', '主色调', '次要色调', '强调色', '柔和色']}>
  <div id="tab-1">
    <ColorDefault />
  </div>
  <div id="tab-2">
    <ColorPrimary />
  </div>
  <div id="tab-3">
    <ColorSecondary />
  </div>
  <div id="tab-4">
    <ColorAccent />
  </div>
  <div id="tab-5">
    <ColorMuted />
  </div>
</CodeContainer>
