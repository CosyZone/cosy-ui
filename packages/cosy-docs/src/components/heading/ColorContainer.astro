---
/**
 * @component HeadingColorContainer
 * @description Heading 组件 color 属性示例容器，展示不同的颜色选项。
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ColorDefault from "./ColorDefault.astro";
import ColorPrimary from "./ColorPrimary.astro";
import ColorSecondary from "./ColorSecondary.astro";
import ColorAccent from "./ColorAccent.astro";
import ColorMuted from "./ColorMuted.astro";
import ColorInfo from "./ColorInfo.astro";
import ColorSuccess from "./ColorSuccess.astro";
import ColorWarning from "./ColorWarning.astro";
import ColorError from "./ColorError.astro";
import ColorBaseContent from "./ColorBaseContent.astro";
import ColorNeutralContent from "./ColorNeutralContent.astro";
import ColorDefaultSource from "./ColorDefault.astro?raw";
import ColorPrimarySource from "./ColorPrimary.astro?raw";
import ColorSecondarySource from "./ColorSecondary.astro?raw";
import ColorAccentSource from "./ColorAccent.astro?raw";
import ColorMutedSource from "./ColorMuted.astro?raw";
import ColorInfoSource from "./ColorInfo.astro?raw";
import ColorSuccessSource from "./ColorSuccess.astro?raw";
import ColorWarningSource from "./ColorWarning.astro?raw";
import ColorErrorSource from "./ColorError.astro?raw";
import ColorBaseContentSource from "./ColorBaseContent.astro?raw";
import ColorNeutralContentSource from "./ColorNeutralContent.astro?raw";
---

<CodeContainer
  codes={[
    ColorDefaultSource,
    ColorPrimarySource,
    ColorSecondarySource,
    ColorAccentSource,
    ColorMutedSource,
    ColorInfoSource,
    ColorSuccessSource,
    ColorWarningSource,
    ColorErrorSource,
    ColorBaseContentSource,
    ColorNeutralContentSource,
  ]}
  titles={[
    'default',
    'primary',
    'secondary',
    'accent',
    'muted',
    'info',
    'success',
    'warning',
    'error',
    'base-content',
    'neutral-content',
  ]}>
  <div id="tab-1">
    <ColorDefault />
  </div>
  <div id="tab-2">
    <ColorPrimary />
  </div>
  <div id="tab-3">
    <ColorSecondary />
  </div>
  <div id="tab-4">
    <ColorAccent />
  </div>
  <div id="tab-5">
    <ColorMuted />
  </div>
  <div id="tab-6">
    <ColorInfo />
  </div>
  <div id="tab-7">
    <ColorSuccess />
  </div>
  <div id="tab-8">
    <ColorWarning />
  </div>
  <div id="tab-9">
    <ColorError />
  </div>
  <div id="tab-10">
    <ColorBaseContent />
  </div>
  <div id="tab-11">
    <ColorNeutralContent />
  </div>
</CodeContainer>
