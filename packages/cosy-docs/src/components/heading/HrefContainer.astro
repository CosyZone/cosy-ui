 * @description Heading 组件 href 属性示例容器，展示链接标题。
 */
import { CodeContainer } from "@coffic/cosy-ui";
import HrefAbout from "./HrefAbout.astro";
import HrefAboutSource from "./HrefAbout.astro?raw";
import HrefContact from "./HrefContact.astro";
import HrefContactSource from "./HrefContact.astro?raw";
import HrefProducts from "./HrefProducts.astro";
