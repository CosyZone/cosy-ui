---
/**
 * @component HeadingPaddingContainer
 * @description Heading 组件 padding 属性示例容器，展示不同的内边距。
 */
import { CodeContainer } from '@coffic/cosy-ui';
import PaddingNone from './PaddingNone.astro';
import PaddingSmall from './PaddingSmall.astro';
import PaddingMedium from './PaddingMedium.astro';
import PaddingLarge from './PaddingLarge.astro';
import PaddingXLarge from './PaddingXLarge.astro';
import PaddingNoneSource from './PaddingNone.astro?raw';
import PaddingSmallSource from './PaddingSmall.astro?raw';
import PaddingMediumSource from './PaddingMedium.astro?raw';
import PaddingLargeSource from './PaddingLarge.astro?raw';
import PaddingXLargeSource from './PaddingXLarge.astro?raw';
---

<CodeContainer
  codes={[
    PaddingNoneSource,
    PaddingSmallSource,
    PaddingMediumSource,
    PaddingLargeSource,
    PaddingXLargeSource,
  ]}
  titles={['无内边距', '小内边距', '中等内边距', '大内边距', '超大内边距']}>
  <div id="tab-1">
    <PaddingNone />
  </div>
  <div id="tab-2">
    <PaddingSmall />
  </div>
  <div id="tab-3">
    <PaddingMedium />
  </div>
  <div id="tab-4">
    <PaddingLarge />
  </div>
  <div id="tab-5">
    <PaddingXLarge />
  </div>
</CodeContainer>
