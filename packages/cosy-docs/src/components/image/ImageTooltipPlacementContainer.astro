---



import { CodeContainer } from "@coffic/cosy-ui";
import ImageTooltipBottom from "./ImageTooltipBottom.astro";
// @ts-expect-error
import ImageTooltipBottomSourceCode from "./ImageTooltipBottom.astro?raw";
import ImageTooltipLeft from "./ImageTooltipLeft.astro";
// @ts-expect-error
import ImageTooltipLeftSourceCode from "./ImageTooltipLeft.astro?raw";
import ImageTooltipRight from "./ImageTooltipRight.astro";
// @ts-expect-error
import ImageTooltipRightSourceCode from "./ImageTooltipRight.astro?raw";
import ImageTooltipTop from "./ImageTooltipTop.astro";
// @ts-expect-error
import ImageTooltipTopSourceCode from "./ImageTooltipTop.astro?raw";
---

<CodeContainer
  titles={['top', 'bottom', 'left', 'right']}
  codes={[
    ImageTooltipTopSourceCode,
    ImageTooltipBottomSourceCode,
    ImageTooltipLeftSourceCode,
    ImageTooltipRightSourceCode,
  ]}>
  <div id="tab-1">
    <ImageTooltipTop />
  </div>
  <div id="tab-2">
    <ImageTooltipBottom />
  </div>
  <div id="tab-3">
    <ImageTooltipLeft />
  </div>
  <div id="tab-4">
    <ImageTooltipRight />
  </div>
</CodeContainer>
