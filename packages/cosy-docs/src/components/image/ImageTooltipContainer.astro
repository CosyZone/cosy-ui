 * @component ImageTooltipContainer
 * @description Image 组件提示框演示容器，展示多种提示框效果
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ImageTooltipBasic from "./ImageTooltipBasic.astro";
import ImageTooltipBasicSource from "./ImageTooltipBasic.astro?raw";
import ImageTooltipBottom from "./ImageTooltipBottom.astro";
import ImageTooltipBottomSource from "./ImageTooltipBottom.astro?raw";
import ImageTooltipError from "./ImageTooltipError.astro";
import ImageTooltipErrorSource from "./ImageTooltipError.astro?raw";
import ImageTooltipLeft from "./ImageTooltipLeft.astro";
import ImageTooltipLeftSource from "./ImageTooltipLeft.astro?raw";
import ImageTooltipOpen from "./ImageTooltipOpen.astro";
import ImageTooltipOpenSource from "./ImageTooltipOpen.astro?raw";
import ImageTooltipPrimary from "./ImageTooltipPrimary.astro";
import ImageTooltipPrimarySource from "./ImageTooltipPrimary.astro?raw";
import ImageTooltipRight from "./ImageTooltipRight.astro";
