---



/**
 * @component ImageTransitionContainer
 * @description Image 组件过渡动画效果演示容器，展示源码和效果
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ImageTransitionFade from "./ImageTransitionFade.astro";
import ImageTransitionFadeSource from "./ImageTransitionFade.astro?raw";
import ImageTransitionNone from "./ImageTransitionNone.astro";
import ImageTransitionNoneSource from "./ImageTransitionNone.astro?raw";
import ImageTransitionSlide from "./ImageTransitionSlide.astro";
import ImageTransitionSlideSource from "./ImageTransitionSlide.astro?raw";
import ImageTransitionZoom from "./ImageTransitionZoom.astro";
import ImageTransitionZoomSource from "./ImageTransitionZoom.astro?raw";
---

<CodeContainer
  codes={[
    ImageTransitionNoneSource,
    ImageTransitionFadeSource,
    ImageTransitionSlideSource,
    ImageTransitionZoomSource,
  ]}
  titles={['none', 'fade', 'slide', 'zoom']}>
  <div id="tab-1">
    <ImageTransitionNone />
  </div>
  <div id="tab-2">
    <ImageTransitionFade />
  </div>
  <div id="tab-3">
    <ImageTransitionSlide />
  </div>
  <div id="tab-4">
    <ImageTransitionZoom />
  </div>
</CodeContainer>
