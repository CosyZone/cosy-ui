---



/**
 * @component ImageHoverContainer
 * @description Image 组件悬停交互效果演示容器，展示源码和效果
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ImageHoverBlur from "./ImageHoverBlur.astro";
import ImageHoverBlurSource from "./ImageHoverBlur.astro?raw";
import ImageHoverBrightness from "./ImageHoverBrightness.astro";
import ImageHoverBrightnessSource from "./ImageHoverBrightness.astro?raw";
import ImageHoverNone from "./ImageHoverNone.astro";
import ImageHoverNoneSource from "./ImageHoverNone.astro?raw";
import ImageHoverScaleOnly from "./ImageHoverScaleOnly.astro";
import ImageHoverScaleOnlySource from "./ImageHoverScaleOnly.astro?raw";
---

<CodeContainer
  codes={[
    ImageHoverNoneSource,
    ImageHoverScaleOnlySource,
    ImageHoverBrightnessSource,
    ImageHoverBlurSource,
  ]}
  titles={['none', 'scale', 'brightness', 'blur']}>
  <div id="tab-1">
    <ImageHoverNone />
  </div>
  <div id="tab-2">
    <ImageHoverScaleOnly />
  </div>
  <div id="tab-3">
    <ImageHoverBrightness />
  </div>
  <div id="tab-4">
    <ImageHoverBlur />
  </div>
</CodeContainer>
