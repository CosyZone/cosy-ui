---
import { CodeContainer } from "@coffic/cosy-ui";
import ImageTooltipPrimary from "./ImageTooltipPrimary.astro";
// @ts-expect-error
import ImageTooltipPrimarySourceCode from "./ImageTooltipPrimary.astro?raw";
import ImageTooltipSuccess from "./ImageTooltipSuccess.astro";
// @ts-expect-error
import ImageTooltipSuccessSourceCode from "./ImageTooltipSuccess.astro?raw";
import ImageTooltipWarning from "./ImageTooltipWarning.astro";
// @ts-expect-error
import ImageTooltipWarningSourceCode from "./ImageTooltipWarning.astro?raw";
import ImageTooltipError from "./ImageTooltipError.astro";
// @ts-expect-error
import ImageTooltipErrorSourceCode from "./ImageTooltipError.astro?raw";
---

<CodeContainer
  titles={['primary', 'success', 'warning', 'error']}
  codes={[
    ImageTooltipPrimarySourceCode,
    ImageTooltipSuccessSourceCode,
    ImageTooltipWarningSourceCode,
    ImageTooltipErrorSourceCode,
  ]}>
  <div id="tab-1">
    <ImageTooltipPrimary />
  </div>
  <div id="tab-2">
    <ImageTooltipSuccess />
  </div>
  <div id="tab-3">
    <ImageTooltipWarning />
  </div>
  <div id="tab-4">
    <ImageTooltipError />
  </div>
</CodeContainer>
