---
/**
 * @component ImageErrorContainer
 * @description Image 组件加载失败演示容器，展示源码和效果
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ImageError from "./ImageError.astro";
import ImageErrorSource from "./ImageError.astro?raw";
import ImageErrorSimple from "./ImageErrorSimple.astro";
import ImageErrorSimpleSource from "./ImageErrorSimple.astro?raw";
---

<CodeContainer
  codes={[ImageErrorSource, ImageErrorSimpleSource]}
  titles={['正常加载', '加载失败']}>
  <div id="tab-1">
    <ImageError />
  </div>
  <div id="tab-2">
    <ImageErrorSimple />
  </div>
</CodeContainer>
