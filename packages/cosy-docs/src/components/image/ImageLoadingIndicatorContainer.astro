---
/**
 * @component ImageLoadingIndicatorContainer
 * @description Image 组件加载指示器属性演示容器，展示源码和效果
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ImageLoadingIndicatorPulse from "./ImageLoadingIndicatorPulse.astro";
import ImageLoadingIndicatorPulseSource from "./ImageLoadingIndicatorPulse.astro?raw";
import ImageLoadingIndicatorSpinner from "./ImageLoadingIndicatorSpinner.astro";
import ImageLoadingIndicatorSpinnerSource from "./ImageLoadingIndicatorSpinner.astro?raw";
import ImageLoadingIndicatorProgress from "./ImageLoadingIndicatorProgress.astro";
import ImageLoadingIndicatorProgressSource from "./ImageLoadingIndicatorProgress.astro?raw";
import ImageLoadingIndicatorSkeleton from "./ImageLoadingIndicatorSkeleton.astro";
import ImageLoadingIndicatorSkeletonSource from "./ImageLoadingIndicatorSkeleton.astro?raw";
---

<CodeContainer
  codes={[
    ImageLoadingIndicatorPulseSource,
    ImageLoadingIndicatorSpinnerSource,
    ImageLoadingIndicatorProgressSource,
    ImageLoadingIndicatorSkeletonSource,
  ]}
  titles={['pulse', 'spinner', 'progress', 'skeleton']}>
  <div id="tab-1">
    <ImageLoadingIndicatorPulse />
  </div>
  <div id="tab-2">
    <ImageLoadingIndicatorSpinner />
  </div>
  <div id="tab-3">
    <ImageLoadingIndicatorProgress />
  </div>
  <div id="tab-4">
    <ImageLoadingIndicatorSkeleton />
  </div>
</CodeContainer>
