---

import { SocialIcon } from "@coffic/cosy-ui";
---

<SocialIcon
  platform="twitter"
  size="32px"
  color="#1da1f2"
  class="custom-social-icon"
/>

<style>
  .custom-social-icon {
    border-radius: 8px;
    padding: 8px;
    background-color: #f8f9fa;
    transition: all 0.3s ease;
  }

  .custom-social-icon:hover {
    background-color: #e9ecef;
    transform: scale(1.1);
  }
</style>
