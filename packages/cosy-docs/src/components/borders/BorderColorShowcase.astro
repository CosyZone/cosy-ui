---
import { Container, Text } from "@coffic/cosy-ui";
---

<Container flex="col" gap="lg" padding="lg">
    <Container
        border="md"
        borderColor="primary"
        padding="md"
        background="base-100"
        flex="row"
        items="center"
        gap="md">
        <Text weight="medium">primary</Text>
        <Text size="sm" color="base-content/60">borderColor="primary"</Text>
    </Container>

    <Container
        border="md"
        borderColor="success"
        padding="md"
        background="base-100"
        flex="row"
        items="center"
        gap="md">
        <Text weight="medium">success</Text>
        <Text size="sm" color="base-content/60">borderColor="success"</Text>
    </Container>

    <Container
        border="md"
        borderColor="error"
        padding="md"
        background="base-100"
        flex="row"
        items="center"
        gap="md">
        <Text weight="medium">error</Text>
        <Text size="sm" color="base-content/60">borderColor="error"</Text>
    </Container>

    <Container
        border="md"
        borderColor="primary/50"
        padding="md"
        background="base-100"
        flex="row"
        items="center"
        gap="md">
        <Text weight="medium">primary/50</Text>
        <Text size="sm" color="base-content/60">borderColor="primary/50"</Text>
    </Container>
</Container>
