---

/**
 * @component CodePanelBasicContainer
 * @description CodePanel 组件基础用法展示容器，带源码展示，支持多标签切换。
 */
import { CodeContainer } from "@coffic/cosy-ui";
import BasicJavascript from "./BasicJavascript.astro";
import BasicJavascriptSource from "./BasicJavascript.astro?raw";
import BasicPython from "./BasicPython.astro";
import BasicPythonSource from "./BasicPython.astro?raw";
import BasicTypescript from "./BasicTypescript.astro";
import BasicTypescriptSource from "./BasicTypescript.astro?raw";

const codes = [BasicJavascriptSource, BasicTypescriptSource, BasicPythonSource];
const titles = ["JavaScript", "TypeScript", "Python"];
---

<CodeContainer codes={codes} titles={titles}>
  <div id="tab-1">
    <BasicJavascript />
  </div>
  <div id="tab-2">
    <BasicTypescript />
  </div>
  <div id="tab-3">
    <BasicPython />
  </div>
</CodeContainer>
