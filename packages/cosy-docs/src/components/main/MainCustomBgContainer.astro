---
/**
 * @component MainCustomBgContainer
 * @description Main 组件自定义背景色演示容器，展示源码和效果
 */
import { CodeContainer } from '@coffic/cosy-ui';
import MainCustomBg from './MainCustomBg.astro';
import MainBgPrimary from './MainBgPrimary.astro';
import MainBgSecondary from './MainBgSecondary.astro';
import MainBgAccent from './MainBgAccent.astro';
import MainBgBase200 from './MainBgBase200.astro';
import MainBgCustom from './MainBgCustom.astro';

import MainCustomBgSource from './MainCustomBg.astro?raw';
import MainBgPrimarySource from './MainBgPrimary.astro?raw';
import MainBgSecondarySource from './MainBgSecondary.astro?raw';
import MainBgAccentSource from './MainBgAccent.astro?raw';
import MainBgBase200Source from './MainBgBase200.astro?raw';
import MainBgCustomSource from './MainBgCustom.astro?raw';
---

<CodeContainer
  codes={[
    MainCustomBgSource,
    MainBgPrimarySource,
    MainBgSecondarySource,
    MainBgAccentSource,
    MainBgBase200Source,
    MainBgCustomSource,
  ]}
  titles={['info', 'primary', 'secondary', 'accent', 'base-200', 'custom']}>
  <div id="tab-1">
    <MainCustomBg />
  </div>
  <div id="tab-2">
    <MainBgPrimary />
  </div>
  <div id="tab-3">
    <MainBgSecondary />
  </div>
  <div id="tab-4">
    <MainBgAccent />
  </div>
  <div id="tab-5">
    <MainBgBase200 />
  </div>
  <div id="tab-6">
    <MainBgCustom />
  </div>
</CodeContainer>
