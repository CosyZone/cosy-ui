---

/**
 * @component LoginShowForgotPasswordContainer
 * @description 展示 Login 组件的 showForgotPassword 属性用法，true/false 两种情况，Astro/Vue 各两组。
 */
import { CodeContainer } from "@coffic/cosy-ui";
import LoginShowForgotPassword from "./LoginShowForgotPassword.astro";
import LoginShowForgotPasswordRaw from "./LoginShowForgotPassword.astro?raw";
import LoginShowForgotPasswordFalse from "./LoginShowForgotPasswordFalse.astro";
import LoginShowForgotPasswordFalseRaw from "./LoginShowForgotPasswordFalse.astro?raw";
import LoginShowForgotPasswordFalseVue from "./LoginShowForgotPasswordFalseVue.vue";
import LoginShowForgotPasswordFalseVueRaw from "./LoginShowForgotPasswordFalseVue.vue?raw";
import LoginShowForgotPasswordVue from "./LoginShowForgotPasswordVue.vue";
import LoginShowForgotPasswordVueRaw from "./LoginShowForgotPasswordVue.vue?raw";
---

<CodeContainer
    codes={[
        LoginShowForgotPasswordRaw,
        LoginShowForgotPasswordFalseRaw,
        LoginShowForgotPasswordVueRaw,
        LoginShowForgotPasswordFalseVueRaw,
    ]}
    titles={['true', 'false', 'true', 'false']}>
    <div id="tab-1" data-label="astro"><LoginShowForgotPassword /></div>
    <div id="tab-2" data-label="astro"><LoginShowForgotPasswordFalse /></div>
