---
import { CodeContainer, Container } from '@coffic/cosy-ui';

// 导入示例组件
import NavigationPrevious from './NavigationPrevious.astro';
import NavigationNext from './NavigationNext.astro';

// 导入源码
import NavigationPreviousCode from './NavigationPrevious.astro?raw';
import NavigationNextCode from './NavigationNext.astro?raw';
---

<CodeContainer
  titles={['上一页', '下一页']}
  codes={[NavigationPreviousCode, NavigationNextCode]}>
  <div id="tab-1">
    <Container flex="row" gap="sm" items="center">
      <NavigationPrevious />
    </Container>
  </div>
  <div id="tab-2">
    <Container flex="row" gap="sm" items="center">
      <NavigationNext />
    </Container>
  </div>
</CodeContainer>
