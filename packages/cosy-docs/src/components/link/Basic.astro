 * @component LinkBasic
 * @description Link组件的基础用法示例
 */

import { Link } from '@coffic/cosy-ui';
---

<div class="cosy:space-y-4">
  <div>
    <h3 class="cosy:text-lg cosy:font-semibold cosy:mb-2">基础链接</h3>
