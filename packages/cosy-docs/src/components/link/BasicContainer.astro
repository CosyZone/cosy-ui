---
/**
 * @component LinkBasicContainer
 * @description Link组件基础示例的容器组件
 */

import { CodeContainer } from '@coffic/cosy-ui';
import BasicLink from './BasicLink.astro';
import ExternalLink from './ExternalLink.astro';
import VariantsLink from './VariantsLink.astro';

// 导入对应的源码
import BasicLinkCode from './BasicLink.astro?raw';
import ExternalLinkCode from './ExternalLink.astro?raw';
import VariantsLinkCode from './VariantsLink.astro?raw';
---

<CodeContainer
  titles={['基础链接', '外部链接', '链接变体']}
  codes={[BasicLinkCode, ExternalLinkCode, VariantsLinkCode]}>
  <div id="tab-1">
    <BasicLink />
  </div>
  <div id="tab-2">
    <ExternalLink />
  </div>
  <div id="tab-3">
    <VariantsLink />
  </div>
</CodeContainer>
