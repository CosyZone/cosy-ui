---
import { CodeContainer, Container } from '@coffic/cosy-ui';

// 导入示例组件
import ExternalWebsite from './ExternalWebsite.astro';
import GitHubLink from './LinkGitHub.astro';
import DocsLink from './DocsLink.astro';

// 导入源码
import ExternalWebsiteCode from './ExternalWebsite.astro?raw';
import GitHubLinkCode from './LinkGitHub.astro?raw';
import DocsLinkCode from './DocsLink.astro?raw';
---

<CodeContainer
  titles={['外部网站链接', 'GitHub 链接', '文档链接']}
  codes={[ExternalWebsiteCode, GitHubLinkCode, DocsLinkCode]}>
  <div id="tab-1">
    <Container flex="col" gap="sm">
      <div>
        <h3
          style="font-size: 1.125rem; font-weight: 600; margin-bottom: 0.5rem;">
          外部链接
        </h3>
        <ExternalWebsite />
      </div>
    </Container>
  </div>
  <div id="tab-2">
    <Container flex="col" gap="sm">
      <div>
        <h3
          style="font-size: 1.125rem; font-weight: 600; margin-bottom: 0.5rem;">
          GitHub 链接
        </h3>
        <GitHubLink />
      </div>
    </Container>
  </div>
  <div id="tab-3">
    <Container flex="col" gap="sm">
      <div>
        <h3
          style="font-size: 1.125rem; font-weight: 600; margin-bottom: 0.5rem;">
          文档链接
        </h3>
        <DocsLink />
      </div>
    </Container>
  </div>
</CodeContainer>
