---



import { CodeContainer, Container, Link } from "@coffic/cosy-ui";
import SizeLarge from "./SizeLarge.astro";
import SizeLargeCode from "./SizeLarge.astro?raw";
import SizeMedium from "./SizeMedium.astro";
import SizeMediumCode from "./SizeMedium.astro?raw";
// 导入示例组件
import SizeSmall from "./SizeSmall.astro";
// 导入源码
import SizeSmallCode from "./SizeSmall.astro?raw";
---

<CodeContainer
  titles={['小型链接', '中型链接', '大型链接']}
  codes={[SizeSmallCode, SizeMediumCode, SizeLargeCode]}>
  <div id="tab-1">
    <Container flex="row" gap="sm" items="center">
      <SizeSmall />
    </Container>
  </div>
  <div id="tab-2">
    <Container flex="row" gap="sm" items="center">
      <SizeMedium />
    </Container>
  </div>
  <div id="tab-3">
    <Container flex="row" gap="sm" items="center">
      <SizeLarge />
    </Container>
  </div>
</CodeContainer>

