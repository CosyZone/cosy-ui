---
import { CodeContainer, Container } from "@coffic/cosy-ui";
import { Link } from "@coffic/cosy-ui";

// 导入示例组件
import BlockPrimary from "./BlockPrimary.astro";
import BlockSecondary from "./BlockSecondary.astro";
import BlockCta from "./BlockCta.astro";

// 导入源码
import BlockPrimaryCode from "./BlockPrimary.astro?raw";
import BlockSecondaryCode from "./BlockSecondary.astro?raw";
import BlockCtaCode from "./BlockCta.astro?raw";
---

<CodeContainer
  titles={['主要块级链接', '次要块级链接', '行动号召块级链接']}
  codes={[BlockPrimaryCode, BlockSecondaryCode, BlockCtaCode]}>
  <div id="tab-1">
    <Container flex="col" gap="sm">
      <BlockPrimary />
    </Container>
  </div>
  <div id="tab-2">
    <Container flex="col" gap="sm">
      <BlockSecondary />
    </Container>
  </div>
  <div id="tab-3">
    <Container flex="col" gap="sm">
      <BlockCta />
    </Container>
  </div>
</CodeContainer>
