---

import { CodeContainer, Container, Link } from "@coffic/cosy-ui";

// 导入示例组件
import RoundedExample from "./RoundedExample.astro";
// 导入源码
import RoundedExampleCode from "./RoundedExample.astro?raw";
import RoundedFullExample from "./RoundedFullExample.astro";
import RoundedFullExampleCode from "./RoundedFullExample.astro?raw";
import RoundedLgExample from "./RoundedLgExample.astro";
import RoundedLgExampleCode from "./RoundedLgExample.astro?raw";
import RoundedMdExample from "./RoundedMdExample.astro";
import RoundedMdExampleCode from "./RoundedMdExample.astro?raw";
import RoundedSmExample from "./RoundedSmExample.astro";
import RoundedSmExampleCode from "./RoundedSmExample.astro?raw";
import RoundedXlExample from "./RoundedXlExample.astro";
import RoundedXlExampleCode from "./RoundedXlExample.astro?raw";
---

<CodeContainer
  titles={['none', 'sm', 'md', 'lg', 'xl', 'full']}
  codes={[
    RoundedExampleCode,
    RoundedSmExampleCode,
    RoundedMdExampleCode,
    RoundedLgExampleCode,
    RoundedXlExampleCode,
    RoundedFullExampleCode,
  ]}>
  <div id="tab-1">
    <Container flex="row" gap="sm" items="center">
      <RoundedExample />
    </Container>
  </div>
  <div id="tab-2">
    <Container flex="row" gap="sm" items="center">
      <RoundedSmExample />
    </Container>
  </div>
  <div id="tab-3">
    <Container flex="row" gap="sm" items="center">
      <RoundedMdExample />
    </Container>
  </div>
  <div id="tab-4">
    <Container flex="row" gap="sm" items="center">
      <RoundedLgExample />
    </Container>
  </div>
  <div id="tab-5">
    <Container flex="row" gap="sm" items="center">
      <RoundedXlExample />
    </Container>
  </div>
  <div id="tab-6">
    <Container flex="row" gap="sm" items="center">
      <RoundedFullExample />
    </Container>
  </div>
</CodeContainer>
