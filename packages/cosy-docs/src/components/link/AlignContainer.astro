---



import { CodeContainer, Container, Link } from "@coffic/cosy-ui";
import AlignCenter from "./AlignCenter.astro";
import AlignCenterCode from "./AlignCenter.astro?raw";
// 导入示例组件
import AlignLeft from "./AlignLeft.astro";

// 导入源码
import AlignLeftCode from "./AlignLeft.astro?raw";
import AlignRight from "./AlignRight.astro";
import AlignRightCode from "./AlignRight.astro?raw";
---

<CodeContainer
  titles={['左对齐', '居中对齐', '右对齐']}
  codes={[AlignLeftCode, AlignCenterCode, AlignRightCode]}>
  <div id="tab-1">
    <Container flex="row" gap="sm" items="center">
      <AlignLeft />
    </Container>
  </div>
  <div id="tab-2">
    <Container flex="row" gap="sm" items="center">
      <AlignCenter />
    </Container>
  </div>
  <div id="tab-3">
    <Container flex="row" gap="sm" items="center">
      <AlignRight />
    </Container>
  </div>
</CodeContainer>

