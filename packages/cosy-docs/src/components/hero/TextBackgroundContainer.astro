---
import { CodeContainer } from "@coffic/cosy-ui";
import TextBackgroundNone from "./TextBackgroundNone.astro";
import TextBackgroundGlass from "./TextBackgroundGlass.astro";
import TextBackgroundSolid from "./TextBackgroundSolid.astro";
import TextBackgroundGradient from "./TextBackgroundGradient.astro";
import TextBackgroundNoneSourceCode from "./TextBackgroundNone.astro?raw";
import TextBackgroundGlassSourceCode from "./TextBackgroundGlass.astro?raw";
import TextBackgroundSolidSourceCode from "./TextBackgroundSolid.astro?raw";
import TextBackgroundGradientSourceCode from "./TextBackgroundGradient.astro?raw";
---

<CodeContainer
  titles={['none', 'glass', 'solid', 'gradient']}
  codes={[
    TextBackgroundNoneSourceCode,
    TextBackgroundGlassSourceCode,
    TextBackgroundSolidSourceCode,
    TextBackgroundGradientSourceCode,
  ]}>
  <div id="tab-1">
    <TextBackgroundNone />
  </div>
  <div id="tab-2">
    <TextBackgroundGlass />
  </div>
  <div id="tab-3">
    <TextBackgroundSolid />
  </div>
  <div id="tab-4">
    <TextBackgroundGradient />
  </div>
</CodeContainer>
