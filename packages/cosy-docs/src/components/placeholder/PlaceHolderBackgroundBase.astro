---
/**
 * @component PlaceHolderBackgroundBase
 * @description PlaceHolder 组件基础背景色示例
 */
import { PlaceHolder } from '@coffic/cosy-ui';
---

<div class="cosy:space-y-4">
  <PlaceHolder width="xl" height="xl" padding="md" background="base-100">
    <p class="cosy:text-center">基础背景色 (base-100)</p>
  </PlaceHolder>

  <PlaceHolder width="xl" height="xl" padding="md" background="base-200">
    <p class="cosy:text-center">基础背景色 (base-200)</p>
  </PlaceHolder>

  <PlaceHolder width="xl" height="xl" padding="md" background="base-300">
    <p class="cosy:text-center">基础背景色 (base-300)</p>
  </PlaceHolder>
</div>
