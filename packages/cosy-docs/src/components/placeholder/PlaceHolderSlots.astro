import PlaceHolderSlotText from './PlaceHolderSlotText.astro';
import PlaceHolderSlotImage from './PlaceHolderSlotImage.astro';
import PlaceHolderSlotButton from './PlaceHolderSlotButton.astro';
import PlaceHolderSlotComplex from './PlaceHolderSlotComplex.astro';
