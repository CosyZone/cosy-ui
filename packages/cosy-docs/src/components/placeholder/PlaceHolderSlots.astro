import PlaceHolderSlotButton from "./PlaceHolderSlotButton.astro";
import PlaceHolderSlotButtonSourceCode from "./PlaceHolderSlotButton.astro?raw";
import PlaceHolderSlotComplex from "./PlaceHolderSlotComplex.astro";
import PlaceHolderSlotComplexSourceCode from "./PlaceHolderSlotComplex.astro?raw";
import PlaceHolderSlotImage from "./PlaceHolderSlotImage.astro";
import PlaceHolderSlotImageSourceCode from "./PlaceHolderSlotImage.astro?raw";
import PlaceHolderSlotText from "./PlaceHolderSlotText.astro";
import PlaceHolderSlotTextSourceCode from "./PlaceHolderSlotText.astro?raw";
