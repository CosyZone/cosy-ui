---
/**
 * @component PlaceHolderBackgroundStatus
 * @description PlaceHolder 组件状态背景色示例
 */
import { PlaceHolder } from '@coffic/cosy-ui';
---

<div class="cosy:space-y-4">
  <PlaceHolder
    width="xl"
    height="xl"
    padding="md"
    background="info"
    class="cosy:text-white">
    <p class="cosy:text-center">信息背景色 (info)</p>
  </PlaceHolder>

  <PlaceHolder
    width="xl"
    height="xl"
    padding="md"
    background="success"
    class="cosy:text-white">
    <p class="cosy:text-center">成功背景色 (success)</p>
  </PlaceHolder>

  <PlaceHolder
    width="xl"
    height="xl"
    padding="md"
    background="warning"
    class="cosy:text-white">
    <p class="cosy:text-center">警告背景色 (warning)</p>
  </PlaceHolder>

  <PlaceHolder
    width="xl"
    height="xl"
    padding="md"
    background="error"
    class="cosy:text-white">
    <p class="cosy:text-center">错误背景色 (error)</p>
  </PlaceHolder>
</div>
