---
/**
 * @component PlaceHolderBackgrounds
 * @description PlaceHolder 组件背景色示例
 */
import { PlaceHolder } from '@coffic/cosy-ui';
---

<div class="cosy:bg-base-100 cosy:p-4 cosy:space-y-4">
  <div class="cosy:bg-base-200 cosy:rounded-lg">
    <PlaceHolder size="md" background="base-100">
      <p class="cosy:text-center">基础背景色 (base-100)</p>
    </PlaceHolder>
  </div>

  <div class="cosy:bg-base-200 cosy:rounded-lg">
    <PlaceHolder size="md" background="base-200">
      <p class="cosy:text-center">基础背景色 (base-200)</p>
    </PlaceHolder>
  </div>

  <div class="cosy:bg-base-200 cosy:rounded-lg">
    <PlaceHolder size="md" background="base-300">
      <p class="cosy:text-center">基础背景色 (base-300)</p>
    </PlaceHolder>
  </div>

  <div class="cosy:bg-base-200 cosy:rounded-lg">
    <PlaceHolder size="md" background="primary" class="cosy:text-white">
      <p class="cosy:text-center">主要背景色 (primary)</p>
    </PlaceHolder>
  </div>

  <div class="cosy:bg-base-200 cosy:rounded-lg">
    <PlaceHolder size="md" background="secondary" class="cosy:text-white">
      <p class="cosy:text-center">次要背景色 (secondary)</p>
    </PlaceHolder>
  </div>

  <div class="cosy:bg-base-200 cosy:rounded-lg">
    <PlaceHolder size="md" background="accent" class="cosy:text-white">
      <p class="cosy:text-center">强调背景色 (accent)</p>
    </PlaceHolder>
  </div>

  <div class="cosy:bg-base-200 cosy:rounded-lg">
    <PlaceHolder size="md" background="info" class="cosy:text-white">
      <p class="cosy:text-center">信息背景色 (info)</p>
    </PlaceHolder>
  </div>

  <div class="cosy:bg-base-200 cosy:rounded-lg">
    <PlaceHolder size="md" background="success" class="cosy:text-white">
      <p class="cosy:text-center">成功背景色 (success)</p>
    </PlaceHolder>
  </div>

  <div class="cosy:bg-base-200 cosy:rounded-lg">
    <PlaceHolder size="md" background="warning" class="cosy:text-white">
      <p class="cosy:text-center">警告背景色 (warning)</p>
    </PlaceHolder>
  </div>

  <div class="cosy:bg-base-200 cosy:rounded-lg">
    <PlaceHolder size="md" background="error" class="cosy:text-white">
      <p class="cosy:text-center">错误背景色 (error)</p>
    </PlaceHolder>
  </div>
</div>
