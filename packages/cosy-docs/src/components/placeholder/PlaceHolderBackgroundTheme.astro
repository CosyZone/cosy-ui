---
/**
 * @component PlaceHolderBackgroundTheme
 * @description PlaceHolder 组件主题背景色示例
 */
import { PlaceHolder } from '@coffic/cosy-ui';
---

<div class="cosy:space-y-4">
  <PlaceHolder
    width="xl"
    height="xl"
    padding="md"
    background="primary"
    class="cosy:text-white">
    <p class="cosy:text-center">主要背景色 (primary)</p>
  </PlaceHolder>

  <PlaceHolder
    width="xl"
    height="xl"
    padding="md"
    background="secondary"
    class="cosy:text-white">
    <p class="cosy:text-center">次要背景色 (secondary)</p>
  </PlaceHolder>

  <PlaceHolder
    width="xl"
    height="xl"
    padding="md"
    background="accent"
    class="cosy:text-white">
    <p class="cosy:text-center">强调背景色 (accent)</p>
  </PlaceHolder>
</div>
