 */
import { CodeContainer } from "@coffic/cosy-ui";
import PlaceHolderBackgroundBase from "./PlaceHolderBackgroundBase.astro";
import PlaceHolderBackgroundBaseSourceCode from "./PlaceHolderBackgroundBase.astro?raw";
import PlaceHolderBackgroundStatus from "./PlaceHolderBackgroundStatus.astro";
import PlaceHolderBackgroundStatusSourceCode from "./PlaceHolderBackgroundStatus.astro?raw";
import PlaceHolderBackgroundTheme from "./PlaceHolderBackgroundTheme.astro";
