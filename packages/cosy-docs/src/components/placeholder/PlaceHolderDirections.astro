---
/**
 * @component PlaceHolderDirections
 * @description PlaceHolder 组件方向控制示例
 */
import { PlaceHolder } from "@coffic/cosy-ui";
---

<div style="padding: 1rem; display: flex; flex-direction: column; gap: 1rem;">
  <div style=" border-radius: 0.5rem;">
    <PlaceHolder width="md" height="lg" padding="md" background="base-300">
      <p style="text-align: center;">中等宽度，大高度</p>
    </PlaceHolder>
  </div>

  <div style=" border-radius: 0.5rem;">
    <PlaceHolder width="xl" height="md" padding="md" background="base-300">
      <p style="text-align: center;">超大宽度，中等高度</p>
    </PlaceHolder>
  </div>

  <div style=" border-radius: 0.5rem;">
    <PlaceHolder width="xl" height="xl" padding="xl" background="primary">
      <p style="text-align: center;">超大宽度和高度，超大内边距</p>
    </PlaceHolder>
  </div>

  <div style=" border-radius: 0.5rem;">
    <PlaceHolder width="lg" height="lg" padding="lg" background="secondary">
      <p style="text-align: center;">大宽度和高度，大内边距</p>
    </PlaceHolder>
  </div>
</div>
