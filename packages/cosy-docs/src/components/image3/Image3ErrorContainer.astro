---
/**
 * @component Image3ErrorContainer
 * @description Image3 组件错误视图示例容器
 */
import { CodeContainer } from '@coffic/cosy-ui';
import Image3ErrorEmpty from './Image3ErrorEmpty.astro';
import Image3ErrorTooFew from './Image3ErrorTooFew.astro';
import Image3ErrorTooMany from './Image3ErrorTooMany.astro';
import Image3ErrorNull from './Image3ErrorNull.astro';
import Image3ErrorEmptySourceCode from './Image3ErrorEmpty.astro?raw';
import Image3ErrorTooFewSourceCode from './Image3ErrorTooFew.astro?raw';
import Image3ErrorTooManySourceCode from './Image3ErrorTooMany.astro?raw';
import Image3ErrorNullSourceCode from './Image3ErrorNull.astro?raw';
---

<CodeContainer
  titles={['空数组', '图片不足', '图片过多', 'null 值']}
  codes={[
    Image3ErrorEmptySourceCode,
    Image3ErrorTooFewSourceCode,
    Image3ErrorTooManySourceCode,
    Image3ErrorNullSourceCode,
  ]}>
  <div id="tab-1"><Image3ErrorEmpty /></div>
  <div id="tab-2"><Image3ErrorTooFew /></div>
  <div id="tab-3"><Image3ErrorTooMany /></div>
  <div id="tab-4"><Image3ErrorNull /></div>
</CodeContainer>
