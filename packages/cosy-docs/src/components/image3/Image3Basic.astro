---
/**
 * @component Image3Basic
 * @description Image3 组件基础示例
 */
import { Image3, getProductImage } from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 200, height: 300, tag: 'image3-left' }),
    alt: '左侧图片',
    width: 200,
    height: 300,
  },
  {
    src: getProductImage({ width: 250, height: 350, tag: 'image3-center' }),
    alt: '中间图片',
    width: 250,
    height: 350,
  },
  {
    src: getProductImage({ width: 200, height: 300, tag: 'image3-right' }),
    alt: '右侧图片',
    width: 200,
    height: 300,
  },
];
---

<Image3 images={images} />
