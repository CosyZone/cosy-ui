---
/**
 * @component Image3TiltLarge
 * @description Image3 组件大倾斜角度示例
 */
import { Image3, getProductImage } from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 200, height: 300, tag: 'tilt-large-left' }),
    alt: '左侧图片',
    width: 200,
    height: 300,
  },
  {
    src: getProductImage({ width: 250, height: 350, tag: 'tilt-large-center' }),
    alt: '中间图片',
    width: 250,
    height: 350,
  },
  {
    src: getProductImage({ width: 200, height: 300, tag: 'tilt-large-right' }),
    alt: '右侧图片',
    width: 200,
    height: 300,
  },
];
---

<Image3 images={images} tiltAngle={25} />
