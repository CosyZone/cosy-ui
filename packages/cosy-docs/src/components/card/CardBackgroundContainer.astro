---
import { CodeContainer } from '@coffic/cosy-ui';
import CardBackgroundDefault from './CardBackgroundDefault.astro';
import CardBackgroundPrimary from './CardBackgroundPrimary.astro';
import CardBackgroundPrimaryOpacity from './CardBackgroundPrimaryOpacity.astro';
import CardBackgroundAccent from './CardBackgroundAccent.astro';
import CardBackgroundSuccess from './CardBackgroundSuccess.astro';
import CardBackgroundWarning from './CardBackgroundWarning.astro';
import CardBackgroundError from './CardBackgroundError.astro';
import CardBackgroundDefaultSourceCode from './CardBackgroundDefault.astro?raw';
import CardBackgroundPrimarySourceCode from './CardBackgroundPrimary.astro?raw';
import CardBackgroundPrimaryOpacitySourceCode from './CardBackgroundPrimaryOpacity.astro?raw';
import CardBackgroundAccentSourceCode from './CardBackgroundAccent.astro?raw';
import CardBackgroundSuccessSourceCode from './CardBackgroundSuccess.astro?raw';
import CardBackgroundWarningSourceCode from './CardBackgroundWarning.astro?raw';
import CardBackgroundErrorSourceCode from './CardBackgroundError.astro?raw';
---

<CodeContainer
  codes={[
    CardBackgroundDefaultSourceCode,
    CardBackgroundPrimarySourceCode,
    CardBackgroundPrimaryOpacitySourceCode,
    CardBackgroundAccentSourceCode,
    CardBackgroundSuccessSourceCode,
    CardBackgroundWarningSourceCode,
    CardBackgroundErrorSourceCode,
  ]}
  titles={[
    '默认背景',
    '主色调背景',
    '主色调半透明',
    '强调色背景',
    '成功色背景',
    '警告色背景',
    '错误色背景',
  ]}>
  <div id="tab-1">
    <CardBackgroundDefault />
  </div>
  <div id="tab-2">
    <CardBackgroundPrimary />
  </div>
  <div id="tab-3">
    <CardBackgroundPrimaryOpacity />
  </div>
  <div id="tab-4">
    <CardBackgroundAccent />
  </div>
  <div id="tab-5">
    <CardBackgroundSuccess />
  </div>
  <div id="tab-6">
    <CardBackgroundWarning />
  </div>
  <div id="tab-7">
    <CardBackgroundError />
  </div>
</CodeContainer>
