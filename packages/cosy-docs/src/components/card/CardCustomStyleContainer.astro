---

import { CodeContainer } from "@coffic/cosy-ui";
import CardCustomStyle from "./CardCustomStyle.astro";
import CardCustomStyleSourceCode from "./CardCustomStyle.astro?raw";
import CardCustomStyle2 from "./CardCustomStyle2.astro";
import CardCustomStyle2SourceCode from "./CardCustomStyle2.astro?raw";
import CardCustomStyle3 from "./CardCustomStyle3.astro";
import CardCustomStyle3SourceCode from "./CardCustomStyle3.astro?raw";
---

<CodeContainer
  codes={[
    CardCustomStyleSourceCode,
    CardCustomStyle2SourceCode,
    CardCustomStyle3SourceCode,
  ]}
  titles={['渐变背景', '圆角边框', '阴影效果']}>
  <div id="tab-1">
    <CardCustomStyle />
  </div>
  <div id="tab-2">
    <CardCustomStyle2 />
  </div>
  <div id="tab-3">
    <CardCustomStyle3 />
  </div>
</CodeContainer>
