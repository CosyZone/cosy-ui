---



import { Card, CodeContainer } from "@coffic/cosy-ui";
import Shadow2xlExample from "./examples/CardShadow2xlExample.astro";
import Shadow2xlExampleSourceCode from "./examples/CardShadow2xlExample.astro?raw";
import LgExample from "./examples/CardShadowLgExample.astro";
import LgExampleSourceCode from "./examples/CardShadowLgExample.astro?raw";
import MdExample from "./examples/CardShadowMdExample.astro";
import MdExampleSourceCode from "./examples/CardShadowMdExample.astro?raw";

// 组件导入（用于实际渲染）
import NoneExample from "./examples/CardShadowNoneExample.astro";
// 源码导入（用于 codes 数组）
import NoneExampleSourceCode from "./examples/CardShadowNoneExample.astro?raw";
import SmExample from "./examples/CardShadowSmExample.astro";
import SmExampleSourceCode from "./examples/CardShadowSmExample.astro?raw";
import XlExample from "./examples/CardShadowXlExample.astro";
import XlExampleSourceCode from "./examples/CardShadowXlExample.astro?raw";
---

<CodeContainer
    codes={[
        NoneExampleSourceCode,
        SmExampleSourceCode,
        MdExampleSourceCode,
        LgExampleSourceCode,
        XlExampleSourceCode,
        Shadow2xlExampleSourceCode,
    ]}
    titles={['none', 'sm', 'md', 'lg', 'xl', '2xl']}>
    <div id="tab-1">
        <NoneExample />
    </div>
    <div id="tab-2">
        <SmExample />
    </div>
    <div id="tab-3">
        <MdExample />
    </div>
    <div id="tab-4">
        <LgExample />
    </div>
    <div id="tab-5">
        <XlExample />
    </div>
    <div id="tab-6">
        <Shadow2xlExample />
    </div>
</CodeContainer>
