---



/**
 * @component MacWindow.CustomWidth Vue Container
 *
 * @description
 * 展示 MacWindow Vue 组件的 width 参数用法，支持不同的宽度设置。
 */
import { CodeContainer } from "@coffic/cosy-ui";
import WidthFull from "./WidthFull.vue";
import WidthFullSource from "./WidthFull.vue?raw";
import WidthLarge from "./WidthLarge.vue";
import WidthLargeSource from "./WidthLarge.vue?raw";
import WidthMedium from "./WidthMedium.vue";
import WidthMediumSource from "./WidthMedium.vue?raw";
import WidthSmall from "./WidthSmall.vue";
import WidthSmallSource from "./WidthSmall.vue?raw";
---

<CodeContainer
  codes={[
    WidthSmallSource,
    WidthMediumSource,
    WidthLargeSource,
    WidthFullSource,
  ]}
  titles={['小宽度 (sm)', '中等宽度 (md)', '大宽度 (lg)', '全宽 (full)']}>
  <div id="tab-1">
    <WidthSmall client:load />
  </div>
  <div id="tab-2">
    <WidthMedium client:load />
  </div>
  <div id="tab-3">
    <WidthLarge client:load />
  </div>
  <div id="tab-4">
    <WidthFull client:load />
  </div>
</CodeContainer>
