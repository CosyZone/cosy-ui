---



import { CodeContainer } from "@coffic/cosy-ui";
import BadgeVueClass from "./BadgeVueClass.vue";
import BadgeVueClassCode from "./BadgeVueClass.vue?raw";
import BadgeVueClassCustom from "./BadgeVueClassCustom.vue";
import BadgeVueClassCustomCode from "./BadgeVueClassCustom.vue?raw";
import BadgeVueClassRounded from "./BadgeVueClassRounded.vue";
import BadgeVueClassRoundedCode from "./BadgeVueClassRounded.vue?raw";
import BadgeVueClassShadow from "./BadgeVueClassShadow.vue";
import BadgeVueClassShadowCode from "./BadgeVueClassShadow.vue?raw";
---

<CodeContainer
  codes={[
    BadgeVueClassCode,
    BadgeVueClassCustomCode,
    BadgeVueClassRoundedCode,
    BadgeVueClassShadowCode,
  ]}
  titles={['默认样式', '自定义类名', '圆角样式', '阴影效果']}>
  <div id="tab-1">
    <BadgeVueClass client:load />
  </div>
  <div id="tab-2">
    <BadgeVueClassCustom client:load />
  </div>
  <div id="tab-3">
    <BadgeVueClassRounded client:load />
  </div>
  <div id="tab-4">
    <BadgeVueClassShadow client:load />
  </div>
</CodeContainer>
