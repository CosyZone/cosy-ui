---
import { CodeContainer } from "@coffic/cosy-ui";
import BadgeVueVariant from "./BadgeVueVariant.vue";
import BadgeVueVariantPrimary from "./BadgeVueVariantPrimary.vue";
import BadgeVueVariantSecondary from "./BadgeVueVariantSecondary.vue";
import BadgeVueVariantAccent from "./BadgeVueVariantAccent.vue";
import BadgeVueVariantGhost from "./BadgeVueVariantGhost.vue";
import BadgeVueVariantInfo from "./BadgeVueVariantInfo.vue";
import BadgeVueVariantSuccess from "./BadgeVueVariantSuccess.vue";
import BadgeVueVariantWarning from "./BadgeVueVariantWarning.vue";
import BadgeVueVariantError from "./BadgeVueVariantError.vue";
import BadgeVueVariantCode from "./BadgeVueVariant.vue?raw";
import BadgeVueVariantPrimaryCode from "./BadgeVueVariantPrimary.vue?raw";
import BadgeVueVariantSecondaryCode from "./BadgeVueVariantSecondary.vue?raw";
import BadgeVueVariantAccentCode from "./BadgeVueVariantAccent.vue?raw";
import BadgeVueVariantGhostCode from "./BadgeVueVariantGhost.vue?raw";
import BadgeVueVariantInfoCode from "./BadgeVueVariantInfo.vue?raw";
import BadgeVueVariantSuccessCode from "./BadgeVueVariantSuccess.vue?raw";
import BadgeVueVariantWarningCode from "./BadgeVueVariantWarning.vue?raw";
import BadgeVueVariantErrorCode from "./BadgeVueVariantError.vue?raw";
---

<CodeContainer
  codes={[
    BadgeVueVariantCode,
    BadgeVueVariantPrimaryCode,
    BadgeVueVariantSecondaryCode,
    BadgeVueVariantAccentCode,
    BadgeVueVariantGhostCode,
    BadgeVueVariantInfoCode,
    BadgeVueVariantSuccessCode,
    BadgeVueVariantWarningCode,
    BadgeVueVariantErrorCode,
  ]}
  titles={[
    'default',
    'primary',
    'secondary',
    'accent',
    'ghost',
    'info',
    'success',
    'warning',
    'error',
  ]}>
  <div id="tab-1">
    <BadgeVueVariant client:load />
  </div>
  <div id="tab-2">
    <BadgeVueVariantPrimary client:load />
  </div>
  <div id="tab-3">
    <BadgeVueVariantSecondary client:load />
  </div>
  <div id="tab-4">
    <BadgeVueVariantAccent client:load />
  </div>
  <div id="tab-5">
    <BadgeVueVariantGhost client:load />
  </div>
  <div id="tab-6">
    <BadgeVueVariantInfo client:load />
  </div>
  <div id="tab-7">
    <BadgeVueVariantSuccess client:load />
  </div>
  <div id="tab-8">
    <BadgeVueVariantWarning client:load />
  </div>
  <div id="tab-9">
    <BadgeVueVariantError client:load />
  </div>
</CodeContainer>
