---



/**
 * @component ErrorsBasicContainer
 *
 * @description
 * 错误页面基础示例的容器组件，用于通过标签页展示不同状态码的错误页面。
 */
import { CodeContainer } from "@coffic/cosy-ui";
import Basic403 from "./403Basic.astro";
import Basic403Code from "./403Basic.astro?raw";
import Basic404 from "./404Basic.astro";
import Basic404Code from "./404Basic.astro?raw";
import Basic500 from "./500Basic.astro";
import Basic500Code from "./500Basic.astro?raw";
import Maintenance503 from "./503Maintenance.astro";
import Maintenance503Code from "./503Maintenance.astro?raw";
---

<CodeContainer
  titles={['403', '404', '500', '503']}
  descriptions={[
    '基础的403禁止访问错误页面示例。',
    '基础的404错误页面示例，展示最简单的404错误页面用法。',
    '基础的500服务器内部错误页面示例。',
    '503服务不可用错误页面的维护模式示例。',
  ]}
  codes={[Basic403Code, Basic404Code, Basic500Code, Maintenance503Code]}>
  <div id="tab-1">
    <Basic403 />
  </div>
  <div id="tab-2">
    <Basic404 />
  </div>
  <div id="tab-3">
    <Basic500 />
  </div>
  <div id="tab-4">
    <Maintenance503 />
  </div>
</CodeContainer>
