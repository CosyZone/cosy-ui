---
/**
 * @component AlertVueDashContainer
 * @description 展示 AlertVue 组件 dash 虚线风格的示例
 */
import { CodeContainer } from "@coffic/cosy-ui";
import AlertVueDashInfo from "./AlertVueDashInfo.vue";
import AlertVueDashSuccess from "./AlertVueDashSuccess.vue";
import AlertVueDashWarning from "./AlertVueDashWarning.vue";
import AlertVueDashError from "./AlertVueDashError.vue";
import AlertVueDashInfoCode from "./AlertVueDashInfo.vue?raw";
import AlertVueDashSuccessCode from "./AlertVueDashSuccess.vue?raw";
import AlertVueDashWarningCode from "./AlertVueDashWarning.vue?raw";
import AlertVueDashErrorCode from "./AlertVueDashError.vue?raw";
---

<CodeContainer
    codes={[
        AlertVueDashInfoCode,
        AlertVueDashSuccessCode,
        AlertVueDashWarningCode,
        AlertVueDashErrorCode,
    ]}
    titles={['Info', 'Success', 'Warning', 'Error']}>
    <div id="tab-1">
        <AlertVueDashInfo client:load />
    </div>
    <div id="tab-2">
        <AlertVueDashSuccess client:load />
    </div>
    <div id="tab-3">
        <AlertVueDashWarning client:load />
    </div>
    <div id="tab-4">
        <AlertVueDashError client:load />
    </div>
</CodeContainer>
