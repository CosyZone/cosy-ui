---
/**
 * @component Container Background Container
 * @description Container 背景色展示容器组件
 */

import { CodeContainer } from '@coffic/cosy-ui';
import ContainerBackgroundBase from './ContainerBackgroundBase.astro';
import ContainerBackgroundPrimary from './ContainerBackgroundPrimary.astro';
import ContainerBackgroundAccent from './ContainerBackgroundAccent.astro';
import ContainerBackgroundPrimary10 from './ContainerBackgroundPrimary10.astro';
import ContainerBackgroundSuccess from './ContainerBackgroundSuccess.astro';
import ContainerBackgroundBaseSource from './ContainerBackgroundBase.astro?raw';
import ContainerBackgroundPrimarySource from './ContainerBackgroundPrimary.astro?raw';
import ContainerBackgroundAccentSource from './ContainerBackgroundAccent.astro?raw';
import ContainerBackgroundPrimary10Source from './ContainerBackgroundPrimary10.astro?raw';
import ContainerBackgroundSuccessSource from './ContainerBackgroundSuccess.astro?raw';
---

<CodeContainer
  titles={[
    '基础背景色',
    '主要背景色',
    '强调背景色',
    '透明度背景色',
    '成功背景色',
  ]}
  codes={[
    ContainerBackgroundBaseSource,
    ContainerBackgroundPrimarySource,
    ContainerBackgroundAccentSource,
    ContainerBackgroundPrimary10Source,
    ContainerBackgroundSuccessSource,
  ]}>
  <div id="tab-1">
    <ContainerBackgroundBase />
  </div>
  <div id="tab-2">
    <ContainerBackgroundPrimary />
  </div>
  <div id="tab-3">
    <ContainerBackgroundAccent />
  </div>
  <div id="tab-4">
    <ContainerBackgroundPrimary10 />
  </div>
  <div id="tab-5">
    <ContainerBackgroundSuccess />
  </div>
</CodeContainer>
