---
/**
 * @component ContainerBorderColorContainer
 * @description Container 组件边框颜色示例容器
 */
import { CodeContainer } from '@coffic/cosy-ui';
import ContainerBorderColorPrimary from './ContainerBorderColorPrimary.astro';
import ContainerBorderColorSuccess from './ContainerBorderColorSuccess.astro';
import ContainerBorderColorOpacity from './ContainerBorderColorOpacity.astro';
import ContainerBorderColorCustom from './ContainerBorderColorCustom.astro';
import sourcePrimary from './ContainerBorderColorPrimary.astro?raw';
import sourceSuccess from './ContainerBorderColorSuccess.astro?raw';
import sourceOpacity from './ContainerBorderColorOpacity.astro?raw';
import sourceCustom from './ContainerBorderColorCustom.astro?raw';
---

<CodeContainer
    codes={[sourcePrimary, sourceSuccess, sourceOpacity, sourceCustom]}
    titles={['primary', 'success', 'primary/50', 'error']}>
    <div id="tab-1">
        <ContainerBorderColorPrimary />
    </div>
    <div id="tab-2">
        <ContainerBorderColorSuccess />
    </div>
    <div id="tab-3">
        <ContainerBorderColorOpacity />
    </div>
    <div id="tab-4">
        <ContainerBorderColorCustom />
    </div>
</CodeContainer>
