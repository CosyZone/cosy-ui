---
/**
 * @component ContainerFlex
 * @description Container 组件Flex布局示例
 */
import { Container } from '@coffic/cosy-ui';
---

<div style="display: flex; flex-direction: column; gap: 1rem;">
  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">行布局 (row)</h4>
    <Container flex="row" gap="md" style="background-color: #f1f5f9;">
      <div
        style="background-color: #3b82f6; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目1
      </div>
      <div
        style="background-color: #64748b; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目2
      </div>
      <div
        style="background-color: #06b6d4; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目3
      </div>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">列布局 (col)</h4>
    <Container flex="col" gap="md" style="background-color: #f1f5f9;">
      <div
        style="background-color: #3b82f6; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目1
      </div>
      <div
        style="background-color: #64748b; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目2
      </div>
      <div
        style="background-color: #06b6d4; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目3
      </div>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">
      反向行布局 (row-reverse)
    </h4>
    <Container flex="row-reverse" gap="md" style="background-color: #f1f5f9;">
      <div
        style="background-color: #3b82f6; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目1
      </div>
      <div
        style="background-color: #64748b; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目2
      </div>
      <div
        style="background-color: #06b6d4; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目3
      </div>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">
      反向列布局 (col-reverse)
    </h4>
    <Container flex="col-reverse" gap="md" style="background-color: #f1f5f9;">
      <div
        style="background-color: #3b82f6; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目1
      </div>
      <div
        style="background-color: #64748b; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目2
      </div>
      <div
        style="background-color: #06b6d4; color: white; padding: 0.5rem; border-radius: 0.25rem;">
        项目3
      </div>
    </Container>
  </div>
</div>
