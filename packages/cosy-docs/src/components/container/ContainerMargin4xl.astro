---
/**
 * @component ContainerMargin4xl
 * @description Container 组件4xl外边距示例
 */
import { Container, Heading } from '@coffic/cosy-ui';
---

<div class="cosy:bg-base-100 cosy:p-4">
  <Heading level={3} margin="none" background="base-300" padding="sm"
    >上方内容区域</Heading
  >

  <Container margin="4xl" class="cosy:bg-base-200">
    <p class="cosy:text-center">4xl外边距的容器</p>
  </Container>

  <Heading level={3} margin="none" background="base-300" padding="sm"
    >下方内容区域</Heading
  >
</div>
