---
/**
 * @component ContainerJustify
 * @description Container 组件垂直对齐示例
 */
import { Container } from '@coffic/cosy-ui';
---

<div style="display: flex; flex-direction: column; gap: 1rem;">
  <Container flex="row" justify="start" style="background-color: #f1f5f9;">
    <div
      style="background-color: #3b82f6; padding: 0.5rem; border-radius: 0.25rem; color: white;">
      左对齐
    </div>
    <div
      style="background-color: #64748b; padding: 0.5rem; border-radius: 0.25rem; color: white;">
      左对齐
    </div>
  </Container>

  <Container flex="row" justify="center" style="background-color: #f1f5f9;">
    <div
      style="background-color: #3b82f6; padding: 0.5rem; border-radius: 0.25rem; color: white;">
      居中对齐
    </div>
    <div
      style="background-color: #64748b; padding: 0.5rem; border-radius: 0.25rem; color: white;">
      居中对齐
    </div>
  </Container>

  <Container flex="row" justify="between" style="background-color: #f1f5f9;">
    <div
      style="background-color: #3b82f6; padding: 0.5rem; border-radius: 0.25rem; color: white;">
      两端对齐
    </div>
    <div
      style="background-color: #64748b; padding: 0.5rem; border-radius: 0.25rem; color: white;">
      两端对齐
    </div>
  </Container>

  <Container flex="row" justify="end" style="background-color: #f1f5f9;">
    <div
      style="background-color: #3b82f6; padding: 0.5rem; border-radius: 0.25rem; color: white;">
      右对齐
    </div>
    <div
      style="background-color: #64748b; padding: 0.5rem; border-radius: 0.25rem; color: white;">
      右对齐
    </div>
  </Container>
</div>
