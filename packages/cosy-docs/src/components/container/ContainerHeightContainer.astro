---

/**
 * @component ContainerHeightContainer
 * @description Container 组件高度多标签演示容器
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ContainerHeight2xl from "./ContainerHeight2xl.astro";
import source2xl from "./ContainerHeight2xl.astro?raw";
import ContainerHeightAuto from "./ContainerHeightAuto.astro";
import sourceAuto from "./ContainerHeightAuto.astro?raw";
import ContainerHeightLg from "./ContainerHeightLg.astro";
import sourceLg from "./ContainerHeightLg.astro?raw";
import ContainerHeightMd from "./ContainerHeightMd.astro";
import sourceMd from "./ContainerHeightMd.astro?raw";
import ContainerHeightScreen from "./ContainerHeightScreen.astro";
import sourceScreen from "./ContainerHeightScreen.astro?raw";
import ContainerHeightXs from "./ContainerHeightXs.astro";
import sourceXs from "./ContainerHeightXs.astro?raw";
---

<CodeContainer
  titles={[
    'xs (64px)',
    'md (128px)',
    'lg (160px)',
    '2xl (224px)',
    'screen (100vh)',
    'auto',
  ]}
  codes={[sourceXs, sourceMd, sourceLg, source2xl, sourceScreen, sourceAuto]}>
  <div id="tab-1"><ContainerHeightXs /></div>
  <div id="tab-2"><ContainerHeightMd /></div>
  <div id="tab-3"><ContainerHeightLg /></div>
  <div id="tab-4"><ContainerHeight2xl /></div>
  <div id="tab-5"><ContainerHeightScreen /></div>
  <div id="tab-6"><ContainerHeightAuto /></div>
</CodeContainer>
