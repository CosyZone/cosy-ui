/**
 * @component ContainerFlexContainer
 * @description 展示 Container 组件的 flex 属性用法，Astro/Vue 各自独立标签展示。
 */
import { CodeContainer } from '@coffic/cosy-ui';
import ContainerFlexBetween from './ContainerFlexBetween.astro';
import ContainerFlexBetweenRaw from './ContainerFlexBetween.astro?raw';
import ContainerFlexBetweenVue from './ContainerFlexBetweenVue.vue';
import ContainerFlexBetweenVueRaw from './ContainerFlexBetweenVue.vue?raw';
import ContainerFlexCenter from './ContainerFlexCenter.astro';
import ContainerFlexCenterRaw from './ContainerFlexCenter.astro?raw';
import ContainerFlexCenterVue from './ContainerFlexCenterVue.vue';
import ContainerFlexCenterVueRaw from './ContainerFlexCenterVue.vue?raw';
import ContainerFlexCol from './ContainerFlexCol.astro';
import ContainerFlexColRaw from './ContainerFlexCol.astro?raw';
import ContainerFlexColVue from './ContainerFlexColVue.vue';
