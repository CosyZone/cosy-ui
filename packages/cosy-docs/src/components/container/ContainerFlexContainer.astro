import ContainerFlexRowVue from './ContainerFlexRowVue.vue';
import ContainerFlexRowVueRaw from './ContainerFlexRowVue.vue?raw';
---

<CodeContainer
	codes={[
		ContainerFlexRowRaw,
		ContainerFlexColRaw,
		ContainerFlexCenterRaw,
		ContainerFlexBetweenRaw,
		ContainerFlexRowVueRaw,
		ContainerFlexColVueRaw,
		ContainerFlexCenterVueRaw,
		ContainerFlexBetweenVueRaw,
	]}
	titles={['row', 'col', 'center', 'between', 'row', 'col', 'center', 'between']}
>
	<div id="tab-1" data-label="astro"><ContainerFlexRow /></div>
