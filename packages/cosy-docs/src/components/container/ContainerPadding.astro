---
/**
 * @component ContainerPadding
 * @description Container 组件内边距示例
 */
import { Container } from '@coffic/cosy-ui';
---

<div style="display: flex; flex-direction: column; gap: 1rem;">
  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">none 内边距</h4>
    <Container padding="none" style="background-color: #f1f5f9;">
      <p style="text-align: center;">无内边距</p>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">sm 内边距</h4>
    <Container padding="sm" style="background-color: #f1f5f9;">
      <p style="text-align: center;">小内边距</p>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">md 内边距（默认）</h4>
    <Container padding="md" style="background-color: #f1f5f9;">
      <p style="text-align: center;">中等内边距</p>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">lg 内边距</h4>
    <Container padding="lg" style="background-color: #f1f5f9;">
      <p style="text-align: center;">大内边距</p>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">xl 内边距</h4>
    <Container padding="xl" style="background-color: #f1f5f9;">
      <p style="text-align: center;">超大内边距</p>
    </Container>
  </div>
</div>
