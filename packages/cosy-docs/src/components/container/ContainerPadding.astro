---
/**
 * @component ContainerPadding
 * @description Container 组件内边距示例
 */
import { Container } from '@coffic/cosy-ui';
---

<div class="cosy:space-y-4">
  <div>
    <h4 class="cosy:font-bold cosy:mb-2">none 内边距</h4>
    <Container padding="none" class="cosy:bg-base-200">
      <p class="cosy:text-center">无内边距</p>
    </Container>
  </div>

  <div>
    <h4 class="cosy:font-bold cosy:mb-2">sm 内边距</h4>
    <Container padding="sm" class="cosy:bg-base-200">
      <p class="cosy:text-center">小内边距</p>
    </Container>
  </div>

  <div>
    <h4 class="cosy:font-bold cosy:mb-2">md 内边距（默认）</h4>
    <Container padding="md" class="cosy:bg-base-200">
      <p class="cosy:text-center">中等内边距</p>
    </Container>
  </div>

  <div>
    <h4 class="cosy:font-bold cosy:mb-2">lg 内边距</h4>
    <Container padding="lg" class="cosy:bg-base-200">
      <p class="cosy:text-center">大内边距</p>
    </Container>
  </div>

  <div>
    <h4 class="cosy:font-bold cosy:mb-2">xl 内边距</h4>
    <Container padding="xl" class="cosy:bg-base-200">
      <p class="cosy:text-center">超大内边距</p>
    </Container>
  </div>
</div>
