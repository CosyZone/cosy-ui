---
/**
 * @component ContainerSizes
 * @description Container 组件尺寸示例
 */
import { Container } from '@coffic/cosy-ui';
---

<div style="display: flex; flex-direction: column; gap: 1rem;">
  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">xs 尺寸</h4>
    <Container size="xs" style="background-color: #f1f5f9;">
      <p style="text-align: center;">超小容器</p>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">sm 尺寸</h4>
    <Container size="sm" style="background-color: #f1f5f9;">
      <p style="text-align: center;">小容器</p>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">md 尺寸（默认）</h4>
    <Container size="md" style="background-color: #f1f5f9;">
      <p style="text-align: center;">中等容器</p>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">lg 尺寸</h4>
    <Container size="lg" style="background-color: #f1f5f9;">
      <p style="text-align: center;">大容器</p>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">xl 尺寸</h4>
    <Container size="xl" style="background-color: #f1f5f9;">
      <p style="text-align: center;">超大容器</p>
    </Container>
  </div>

  <div>
    <h4 style="font-weight: bold; margin-bottom: 0.5rem;">full 尺寸</h4>
    <Container size="full" style="background-color: #f1f5f9;">
      <p style="text-align: center;">全宽容器</p>
    </Container>
  </div>
</div>
