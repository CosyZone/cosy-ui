---
/**
 * @component ContainerSizes
 * @description Container 组件尺寸示例
 */
import { Container } from '@coffic/cosy-ui';
---

<div class="cosy:space-y-4">
  <div>
    <h4 class="cosy:font-bold cosy:mb-2">xs 尺寸</h4>
    <Container size="xs" class="cosy:bg-base-200">
      <p class="cosy:text-center">超小容器</p>
    </Container>
  </div>

  <div>
    <h4 class="cosy:font-bold cosy:mb-2">sm 尺寸</h4>
    <Container size="sm" class="cosy:bg-base-200">
      <p class="cosy:text-center">小容器</p>
    </Container>
  </div>

  <div>
    <h4 class="cosy:font-bold cosy:mb-2">md 尺寸（默认）</h4>
    <Container size="md" class="cosy:bg-base-200">
      <p class="cosy:text-center">中等容器</p>
    </Container>
  </div>

  <div>
    <h4 class="cosy:font-bold cosy:mb-2">lg 尺寸</h4>
    <Container size="lg" class="cosy:bg-base-200">
      <p class="cosy:text-center">大容器</p>
    </Container>
  </div>

  <div>
    <h4 class="cosy:font-bold cosy:mb-2">xl 尺寸</h4>
    <Container size="xl" class="cosy:bg-base-200">
      <p class="cosy:text-center">超大容器</p>
    </Container>
  </div>

  <div>
    <h4 class="cosy:font-bold cosy:mb-2">full 尺寸</h4>
    <Container size="full" class="cosy:bg-base-200">
      <p class="cosy:text-center">全宽容器</p>
    </Container>
  </div>
</div>
