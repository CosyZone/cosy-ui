---

import { CodeContainer } from "@coffic/cosy-ui";
import GridCols2 from "./GridCols2.astro";
import GridCols2SourceCode from "./GridCols2.astro?raw";
import GridCols4 from "./GridCols4.astro";
import GridCols4SourceCode from "./GridCols4.astro?raw";
import GridColsResponsive from "./GridColsResponsive.astro";
import GridColsResponsiveSourceCode from "./GridColsResponsive.astro?raw";
---

<CodeContainer
  codes={[
    GridCols2SourceCode,
    GridCols4SourceCode,
    GridColsResponsiveSourceCode,
  ]}
  titles={['2列布局', '4列布局', '响应式布局']}>
  <div id="tab-1">
    <GridCols2 />
  </div>
  <div id="tab-2">
    <GridCols4 />
  </div>
  <div id="tab-3">
    <GridColsResponsive />
  </div>
</CodeContainer>
