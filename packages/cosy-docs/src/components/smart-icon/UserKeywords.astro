---
import { CodeContainer, SmartIcon } from "@coffic/cosy-ui";
import UserKeywordsCode from "./examples/UserKeywords.astro?raw";
import UserKeywordsVue from "./UserKeywords.vue";
import UserKeywordsVueRaw from "./UserKeywords.vue?raw";
---

<CodeContainer
  codes={[UserKeywordsCode, UserKeywordsVueRaw]}
  titles={['用户相关', '用户相关']}>
  <div id="tab-1" data-label="astro">
    <div style="display: flex; gap: 1rem; align-items: center;">
      <SmartIcon keyword="用户" size="24px" color="#8b5cf6" />
      <SmartIcon keyword="人" size="24px" color="#8b5cf6" />
      <SmartIcon keyword="账号" size="24px" color="#8b5cf6" />
      <SmartIcon keyword="个人" size="24px" color="#8b5cf6" />
    </div>
  </div>
  <div id="tab-2" data-label="vue">
    <UserKeywordsVue client:load />
  </div>
</CodeContainer>
