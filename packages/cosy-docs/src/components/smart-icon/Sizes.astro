---
import { CodeContainer, SmartIcon } from "@coffic/cosy-ui";
import Size16Code from "./examples/Size16.astro?raw";
import Size24Code from "./examples/Size24.astro?raw";
import Size32Code from "./examples/Size32.astro?raw";
import Size48Code from "./examples/Size48.astro?raw";
import SizesVue from "./Sizes.vue";
import SizesVueRaw from "./Sizes.vue?raw";
---

<CodeContainer
  codes={[Size16Code, Size24Code, Size32Code, Size48Code, SizesVueRaw]}
  titles={['16px', '24px', '32px', '48px', '不同尺寸']}>
  <div id="tab-1" data-label="astro">
    <SmartIcon keyword="用户" size="16px" color="#8b5cf6" />
  </div>
  <div id="tab-2" data-label="astro">
    <SmartIcon keyword="用户" size="24px" color="#8b5cf6" />
  </div>
  <div id="tab-3" data-label="astro">
    <SmartIcon keyword="用户" size="32px" color="#8b5cf6" />
  </div>
  <div id="tab-4" data-label="astro">
    <SmartIcon keyword="用户" size="48px" color="#8b5cf6" />
  </div>
  <div id="tab-5" data-label="vue">
    <SizesVue client:load />
  </div>
</CodeContainer>
