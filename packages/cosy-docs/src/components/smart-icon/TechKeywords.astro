---
import { CodeContainer, SmartIcon } from "@coffic/cosy-ui";
import TechKeywordsCode from "./examples/TechKeywords.astro?raw";
import TechKeywordsVue from "./TechKeywords.vue";
import TechKeywordsVueRaw from "./TechKeywords.vue?raw";
---

<CodeContainer
  codes={[TechKeywordsCode, TechKeywordsVueRaw]}
  titles={['技术相关', '技术相关']}>
  <div id="tab-1" data-label="astro">
    <div style="display: flex; gap: 1rem; align-items: center;">
      <SmartIcon keyword="代码" size="24px" color="#8b5cf6" />
      <SmartIcon keyword="数据库" size="24px" color="#8b5cf6" />
      <SmartIcon keyword="网络" size="24px" color="#8b5cf6" />
      <SmartIcon keyword="API" size="24px" color="#8b5cf6" />
    </div>
  </div>
  <div id="tab-2" data-label="vue">
    <TechKeywordsVue client:load />
  </div>
</CodeContainer>
