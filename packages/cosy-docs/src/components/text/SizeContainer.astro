---
/**
 * @component TextSizeContainer
 * @description Text 组件大小用法容器，带源码展示。
 */
import { CodeContainer } from '@coffic/cosy-ui';
import SizeXs from './size/SizeXs.astro';
import SizeXsSourceCode from './size/SizeXs.astro?raw';
import SizeSm from './size/SizeSm.astro';
import SizeSmSourceCode from './size/SizeSm.astro?raw';
import SizeMd from './size/SizeMd.astro';
import SizeMdSourceCode from './size/SizeMd.astro?raw';
import SizeLg from './size/SizeLg.astro';
import SizeLgSourceCode from './size/SizeLg.astro?raw';
import SizeXl from './size/SizeXl.astro';
import SizeXlSourceCode from './size/SizeXl.astro?raw';
---

<CodeContainer
  titles={['xs', 'sm', 'md', 'lg', 'xl']}
  codes={[
    SizeXsSourceCode,
    SizeSmSourceCode,
    SizeMdSourceCode,
    SizeLgSourceCode,
    SizeXlSourceCode,
  ]}>
  <div id="tab-1"><SizeXs /></div>
  <div id="tab-2"><SizeSm /></div>
  <div id="tab-3"><SizeMd /></div>
  <div id="tab-4"><SizeLg /></div>
  <div id="tab-5"><SizeXl /></div>
</CodeContainer>
