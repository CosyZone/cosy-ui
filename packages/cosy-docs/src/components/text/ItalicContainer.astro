---

/**
 * @component TextItalicContainer
 * @description Text italic 属性容器，带源码展示。
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ItalicFalse from "./italic/ItalicFalse.astro";
import ItalicFalseSourceCode from "./italic/ItalicFalse.astro?raw";
import ItalicTrue from "./italic/ItalicTrue.astro";
import ItalicTrueSourceCode from "./italic/ItalicTrue.astro?raw";
import TextVueItalic from "./TextVueItalic.vue";
import TextVueItalicRaw from "./TextVueItalic.vue?raw";
