---

/**
 * @component TextTruncateContainer
 * @description Text 组件文本截断用法容器，带源码展示。
 */
import { CodeContainer } from "@coffic/cosy-ui";
import TextVueTruncate from "./TextVueTruncate.vue";
import TextVueTruncateRaw from "./TextVueTruncate.vue?raw";
import TruncateFalse from "./truncate/TruncateFalse.astro";
import TruncateFalseSourceCode from "./truncate/TruncateFalse.astro?raw";
import TruncateTrue from "./truncate/TruncateTrue.astro";
import TruncateTrueSourceCode from "./truncate/TruncateTrue.astro?raw";
---

<CodeContainer
  titles={['true', 'false', '截断示例']}
  codes={[TruncateTrueSourceCode, TruncateFalseSourceCode, TextVueTruncateRaw]}>
  <div id="tab-1" data-label="astro"><TruncateTrue /></div>
  <div id="tab-2" data-label="astro"><TruncateFalse /></div>
  <div id="tab-3" data-label="vue"><TextVueTruncate client:load /></div>
</CodeContainer>
