---
/**
 * @component TextWeightContainer
 * @description Text 组件字体粗细用法容器，带源码展示。
 */
import { CodeContainer } from "@coffic/cosy-ui";
import TextVueWeight from "./TextVueWeight.vue";
import TextVueWeightRaw from "./TextVueWeight.vue?raw";
import WeightBold from "./weight/WeightBold.astro";
import WeightBoldSourceCode from "./weight/WeightBold.astro?raw";
import WeightLight from "./weight/WeightLight.astro";
import WeightLightSourceCode from "./weight/WeightLight.astro?raw";
import WeightMedium from "./weight/WeightMedium.astro";
import WeightMediumSourceCode from "./weight/WeightMedium.astro?raw";
import WeightNormal from "./weight/WeightNormal.astro";
import WeightNormalSourceCode from "./weight/WeightNormal.astro?raw";
import WeightSemibold from "./weight/WeightSemibold.astro";
import WeightSemiboldSourceCode from "./weight/WeightSemibold.astro?raw";
---

<CodeContainer
  titles={['light', 'normal', 'medium', 'semibold', 'bold', '不同粗细']}
  codes={[
    WeightLightSourceCode,
    WeightNormalSourceCode,
    WeightMediumSourceCode,
    WeightSemiboldSourceCode,
    WeightBoldSourceCode,
    TextVueWeightRaw,
  ]}>
  <div id="tab-1" data-label="astro"><WeightLight /></div>
  <div id="tab-2" data-label="astro"><WeightNormal /></div>
  <div id="tab-3" data-label="astro"><WeightMedium /></div>
  <div id="tab-4" data-label="astro"><WeightSemibold /></div>
  <div id="tab-5" data-label="astro"><WeightBold /></div>
  <div id="tab-6" data-label="vue"><TextVueWeight client:load /></div>
</CodeContainer>
