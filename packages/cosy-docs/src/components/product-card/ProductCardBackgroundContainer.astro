---



import { CodeContainer } from "@coffic/cosy-ui";
import ProductCardBackground from "./ProductCardBackground.astro";
import ProductCardBackgroundSourceCode from "./ProductCardBackground.astro?raw";
import ProductCardBackgroundGradient from "./ProductCardBackgroundGradient.astro";
import ProductCardBackgroundGradientSourceCode from "./ProductCardBackgroundGradient.astro?raw";
import ProductCardBackgroundOpacity from "./ProductCardBackgroundOpacity.astro";
import ProductCardBackgroundOpacitySourceCode from "./ProductCardBackgroundOpacity.astro?raw";
import ProductCardBackgroundPrimary from "./ProductCardBackgroundPrimary.astro";
import ProductCardBackgroundPrimarySourceCode from "./ProductCardBackgroundPrimary.astro?raw";
---

<CodeContainer
  titles={['默认背景', '主色背景', '渐变背景', '透明度背景']}
  codes={[
    ProductCardBackgroundSourceCode,
    ProductCardBackgroundPrimarySourceCode,
    ProductCardBackgroundGradientSourceCode,
    ProductCardBackgroundOpacitySourceCode,
  ]}>
  <div id="tab-1">
    <ProductCardBackground />
  </div>
  <div id="tab-2">
    <ProductCardBackgroundPrimary />
  </div>
  <div id="tab-3">
    <ProductCardBackgroundGradient />
  </div>
  <div id="tab-4">
    <ProductCardBackgroundOpacity />
  </div>
</CodeContainer>
