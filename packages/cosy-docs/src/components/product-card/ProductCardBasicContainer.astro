---
import { CodeContainer } from "@coffic/cosy-ui";
import ProductCardBasic from "./ProductCardBasic.astro";
import ProductCardVueBasic from "./ProductCardVueBasic.vue";
import ProductCardVueBasicRaw from "./ProductCardVueBasic.vue?raw";
---

<CodeContainer
  codes={[
    `import { ProductCard } from '@coffic/cosy-ui';

<ProductCard
  title="产品名称"
  description="产品描述信息"
  price="¥99.00"
  image="https://images.unsplash.com/photo-1523275335684-37898b6baf30?w=500"
  href="/products/1"
/>`,
    ProductCardVueBasicRaw,
  ]}
  titles={['基础用法', '基础用法']}>
  <div id="tab-1" data-label="astro">
    <ProductCardBasic />
  </div>
  <div id="tab-2" data-label="vue">
    <ProductCardVueBasic />
  </div>
</CodeContainer>
