---
/**
 * @component IconsVueSizeContainer
 * @description Vue 图标组件 size 属性示例容器，展示不同尺寸的图标。
 */
import { CodeContainer } from '@coffic/cosy-ui';
import SizeSmall from './SizeSmall.vue';
import SizeMedium from './SizeMedium.vue';
import SizeLarge from './SizeLarge.vue';
import SizeXLarge from './SizeXLarge.vue';
import SizeSmallSource from './SizeSmall.vue?raw';
import SizeMediumSource from './SizeMedium.vue?raw';
import SizeLargeSource from './SizeLarge.vue?raw';
import SizeXLargeSource from './SizeXLarge.vue?raw';
---

<CodeContainer
  codes={[SizeSmallSource, SizeMediumSource, SizeLargeSource, SizeXLargeSource]}
  titles={[
    '小尺寸 (16px)',
    '中等尺寸 (32px)',
    '大尺寸 (48px)',
    '超大尺寸 (64px)',
  ]}>
  <div id="tab-1">
    <SizeSmall />
  </div>
  <div id="tab-2">
    <SizeMedium />
  </div>
  <div id="tab-3">
    <SizeLarge />
  </div>
  <div id="tab-4">
    <SizeXLarge />
  </div>
</CodeContainer>
