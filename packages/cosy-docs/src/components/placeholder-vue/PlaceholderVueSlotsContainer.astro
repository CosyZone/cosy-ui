---

/**
 * @component PlaceholderVueSlotsContainer
 * @description Vue 版本 Placeholder 组件 slot 使用示例容器
 */
import { CodeContainer } from "@coffic/cosy-ui";
import PlaceholderVueSlotButton from "./PlaceholderVueSlotButton.vue";
import PlaceholderVueSlotButtonSourceCode from "./PlaceholderVueSlotButton.vue?raw";
import PlaceholderVueSlotComplex from "./PlaceholderVueSlotComplex.vue";
import PlaceholderVueSlotComplexSourceCode from "./PlaceholderVueSlotComplex.vue?raw";
import PlaceholderVueSlotImage from "./PlaceholderVueSlotImage.vue";
import PlaceholderVueSlotImageSourceCode from "./PlaceholderVueSlotImage.vue?raw";
import PlaceholderVueSlotText from "./PlaceholderVueSlotText.vue";
import PlaceholderVueSlotTextSourceCode from "./PlaceholderVueSlotText.vue?raw";
---

<CodeContainer
    titles={['文本内容', '图片内容', '按钮内容', '复杂内容']}
    codes={[
        PlaceholderVueSlotTextSourceCode,
        PlaceholderVueSlotImageSourceCode,
        PlaceholderVueSlotButtonSourceCode,
        PlaceholderVueSlotComplexSourceCode,
    ]}>
    <div id="tab-1"><PlaceholderVueSlotText client:load /></div>
    <div id="tab-2"><PlaceholderVueSlotImage client:load /></div>
    <div id="tab-3"><PlaceholderVueSlotButton client:load /></div>
    <div id="tab-4"><PlaceholderVueSlotComplex client:load /></div>
</CodeContainer>
