---
/**
 * @component ImagesStyles
 * @description Images 组件样式示例
 */
import { Images, CodeContainer } from '@coffic/cosy-ui';
import ImagesRounded from './ImagesRounded.astro';
import ImagesShadow from './ImagesShadow.astro';
import ImagesHover from './ImagesHover.astro';
import ImagesGap from './ImagesGap.astro';
import ImagesRoundedSourceCode from './ImagesRounded.astro?raw';
import ImagesShadowSourceCode from './ImagesShadow.astro?raw';
import ImagesHoverSourceCode from './ImagesHover.astro?raw';
import ImagesGapSourceCode from './ImagesGap.astro?raw';
---

<CodeContainer
  titles={['圆角样式', '阴影效果', '悬停效果', '间距控制']}
  codes={[
    ImagesRoundedSourceCode,
    ImagesShadowSourceCode,
    ImagesHoverSourceCode,
    ImagesGapSourceCode,
  ]}>
  <div id="tab-1"><ImagesRounded /></div>
  <div id="tab-2"><ImagesShadow /></div>
  <div id="tab-3"><ImagesHover /></div>
  <div id="tab-4"><ImagesGap /></div>
</CodeContainer>
