---
/**
 * @component ImagesRoundedLarge
 * @description Images 组件大圆角示例
 */
import { Images, getProductImage } from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 200, height: 200, tag: 'rounded-lg-1' }),
    alt: '图片 1',
  },
  {
    src: getProductImage({ width: 200, height: 200, tag: 'rounded-lg-2' }),
    alt: '图片 2',
  },
  {
    src: getProductImage({ width: 200, height: 200, tag: 'rounded-lg-3' }),
    alt: '图片 3',
  },
];
---

<Images
  images={images}
  layout="grid"
  columns={3}
  rounded="xl"
  gap="sm"
  shadow="sm"
/>
