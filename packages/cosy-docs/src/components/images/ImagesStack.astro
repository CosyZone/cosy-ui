---
/**
 * @component ImagesStack
 * @description Images 组件堆叠布局示例
 */
import {
  Images,
  getProductImage,
  getLandscapeImage,
  getAvatarImage,
} from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 600, height: 200, tag: 'stack1' }),
    alt: '堆叠图片 1',
    caption: '产品展示横幅',
  },
  {
    src: getLandscapeImage({ width: 600, height: 200, tag: 'stack2' }),
    alt: '堆叠图片 2',
    caption: '自然风光横幅',
  },
  {
    src: getAvatarImage({ width: 600, height: 200, tag: 'stack3' }),
    alt: '堆叠图片 3',
    caption: '人物肖像横幅',
  },
];
---

<Images
  images={images}
  layout="stack"
  gap="md"
  rounded="lg"
  shadow="md"
  hover="brightness"
/>
