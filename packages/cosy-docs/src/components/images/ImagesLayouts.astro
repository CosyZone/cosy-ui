---
/**
 * @component ImagesLayouts
 * @description Images 组件不同布局示例
 */
import { Images, CodeContainer } from '@coffic/cosy-ui';
import ImagesGrid from './ImagesGrid.astro';
import ImagesMasonry from './ImagesMasonry.astro';
import ImagesCarousel from './ImagesCarousel.astro';
import ImagesStack from './ImagesStack.astro';
import ImagesGridSourceCode from './ImagesGrid.astro?raw';
import ImagesMasonrySourceCode from './ImagesMasonry.astro?raw';
import ImagesCarouselSourceCode from './ImagesCarousel.astro?raw';
import ImagesStackSourceCode from './ImagesStack.astro?raw';
---

<CodeContainer
  titles={['网格布局', '瀑布流布局', '轮播布局', '堆叠布局']}
  codes={[
    ImagesGridSourceCode,
    ImagesMasonrySourceCode,
    ImagesCarouselSourceCode,
    ImagesStackSourceCode,
  ]}>
  <div id="tab-1"><ImagesGrid /></div>
  <div id="tab-2"><ImagesMasonry /></div>
  <div id="tab-3"><ImagesCarousel /></div>
  <div id="tab-4"><ImagesStack /></div>
</CodeContainer>
