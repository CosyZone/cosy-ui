---
/**
 * @component ImagesCarousel
 * @description Images 组件轮播布局示例
 */
import {
  Images,
  getProductImage,
  getLandscapeImage,
  getAvatarImage,
} from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 400, height: 300, tag: 'carousel1' }),
    alt: '轮播图片 1',
    caption: '产品展示',
  },
  {
    src: getLandscapeImage({ width: 400, height: 300, tag: 'carousel2' }),
    alt: '轮播图片 2',
    caption: '自然风光',
  },
  {
    src: getAvatarImage({ width: 400, height: 300, tag: 'carousel3' }),
    alt: '轮播图片 3',
    caption: '人物肖像',
  },
  {
    src: getProductImage({ width: 400, height: 300, tag: 'carousel4' }),
    alt: '轮播图片 4',
    caption: '产品细节',
  },
];
---

<Images
  images={images}
  layout="carousel"
  gap="md"
  rounded="lg"
  shadow="lg"
  hover="scale"
/>
