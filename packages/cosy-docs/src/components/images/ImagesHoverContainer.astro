---
/**
 * @component ImagesHoverContainer
 * @description Images 组件 hover 属性示例容器
 */
import { CodeContainer } from '@coffic/cosy-ui';
import ImagesHoverNone from './ImagesHoverNone.astro';
import ImagesHoverScale from './ImagesHoverScale.astro';
import ImagesHoverBrightness from './ImagesHoverBrightness.astro';
import ImagesHoverBlur from './ImagesHoverBlur.astro';
import ImagesHoverNoneSourceCode from './ImagesHoverNone.astro?raw';
import ImagesHoverScaleSourceCode from './ImagesHoverScale.astro?raw';
import ImagesHoverBrightnessSourceCode from './ImagesHoverBrightness.astro?raw';
import ImagesHoverBlurSourceCode from './ImagesHoverBlur.astro?raw';
---

<CodeContainer
  titles={['无效果', '缩放效果', '亮度效果', '模糊效果']}
  codes={[
    ImagesHoverNoneSourceCode,
    ImagesHoverScaleSourceCode,
    ImagesHoverBrightnessSourceCode,
    ImagesHoverBlurSourceCode,
  ]}>
  <div id="tab-1"><ImagesHoverNone /></div>
  <div id="tab-2"><ImagesHoverScale /></div>
  <div id="tab-3"><ImagesHoverBrightness /></div>
  <div id="tab-4"><ImagesHoverBlur /></div>
</CodeContainer>
