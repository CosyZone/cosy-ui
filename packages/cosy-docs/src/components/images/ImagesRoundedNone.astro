import { Images, getProductImage } from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 200, height: 200, tag: 'rounded-none-1' }),
    alt: '图片 1',
  },
  {
    src: getProductImage({ width: 200, height: 200, tag: 'rounded-none-2' }),
