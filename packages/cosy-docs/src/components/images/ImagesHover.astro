---
/**
 * @component ImagesHover
 * @description Images 组件悬停效果示例
 */
import { Images, getProductImage } from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 200, height: 200, tag: 'hover1' }),
    alt: '悬停图片 1',
  },
  {
    src: getProductImage({ width: 200, height: 200, tag: 'hover2' }),
    alt: '悬停图片 2',
  },
  {
    src: getProductImage({ width: 200, height: 200, tag: 'hover3' }),
    alt: '悬停图片 3',
  },
];
---

<div style="display: flex; flex-direction: column; gap: 2rem;">
  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">无悬停效果</h4>
    <Images images={images} layout="grid" columns={3} hover="none" gap="sm" />
  </div>

  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">缩放效果</h4>
    <Images images={images} layout="grid" columns={3} hover="scale" gap="sm" />
  </div>

  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">亮度效果</h4>
    <Images
      images={images}
      layout="grid"
      columns={3}
      hover="brightness"
      gap="sm"
    />
  </div>

  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">模糊效果</h4>
    <Images images={images} layout="grid" columns={3} hover="blur" gap="sm" />
  </div>
</div>
