---
/**
 * @component ImagesImagesWithCaption
 * @description Images 组件 images 属性带标题示例
 */
import {
  Images,
  getProductImage,
  getLandscapeImage,
  getAvatarImage,
} from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 200, height: 200, tag: 'caption1' }),
    alt: '产品图片 1',
    caption: '产品展示',
  },
  {
    src: getLandscapeImage({ width: 200, height: 200, tag: 'caption2' }),
    alt: '自然风景 1',
    caption: '自然风光',
  },
  {
    src: getAvatarImage({ width: 200, height: 200, tag: 'caption3' }),
    alt: '人物肖像 1',
    caption: '人物肖像',
  },
];
---

<Images
  images={images}
  layout="grid"
  columns={3}
  gap="sm"
  rounded="md"
  shadow="sm"
/>
