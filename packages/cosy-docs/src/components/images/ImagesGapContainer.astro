---
/**
 * @component ImagesGapContainer
 * @description Images 组件 gap 属性示例容器
 */
import { CodeContainer } from '@coffic/cosy-ui';
import ImagesGapNone from './ImagesGapNone.astro';
import ImagesGapSmall from './ImagesGapSmall.astro';
import ImagesGapMedium from './ImagesGapMedium.astro';
import ImagesGapLarge from './ImagesGapLarge.astro';
import ImagesGapNoneSourceCode from './ImagesGapNone.astro?raw';
import ImagesGapSmallSourceCode from './ImagesGapSmall.astro?raw';
import ImagesGapMediumSourceCode from './ImagesGapMedium.astro?raw';
import ImagesGapLargeSourceCode from './ImagesGapLarge.astro?raw';
---

<CodeContainer
  titles={['无间距', '小间距', '中等间距', '大间距']}
  codes={[
    ImagesGapNoneSourceCode,
    ImagesGapSmallSourceCode,
    ImagesGapMediumSourceCode,
    ImagesGapLargeSourceCode,
  ]}>
  <div id="tab-1"><ImagesGapNone /></div>
  <div id="tab-2"><ImagesGapSmall /></div>
  <div id="tab-3"><ImagesGapMedium /></div>
  <div id="tab-4"><ImagesGapLarge /></div>
</CodeContainer>
