---
/**
 * @component ImagesHoverScale
 * @description Images 组件缩放悬停效果示例
 */
import { Images, getProductImage } from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 200, height: 200, tag: 'hover-scale-1' }),
    alt: '图片 1',
  },
  {
    src: getProductImage({ width: 200, height: 200, tag: 'hover-scale-2' }),
    alt: '图片 2',
  },
  {
    src: getProductImage({ width: 200, height: 200, tag: 'hover-scale-3' }),
    alt: '图片 3',
  },
];
---

<Images
  images={images}
  layout="grid"
  columns={3}
  hover="scale"
  gap="sm"
  rounded="md"
  shadow="sm"
/>
