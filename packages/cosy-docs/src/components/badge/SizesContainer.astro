    <BadgeSizes />
  </div>
  <div id="tab-2">
    <BadgeSizeMd />
  </div>
  <div id="tab-3">
    <BadgeSizeSm />
  </div>
  <div id="tab-4">
    <BadgeSizeXs />
  </div>
</CodeContainer>
