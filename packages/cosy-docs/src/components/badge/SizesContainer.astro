---
/**
 * @component BadgeSizesContainer
 * @description Badge 尺寸示例容器组件
 */
import { CodeContainer } from "@coffic/cosy-ui";
import BadgeSizes from "./BadgeSizes.astro";
import BadgeSizeMd from "./BadgeSizeMd.astro";
import BadgeSizeSm from "./BadgeSizeSm.astro";
import BadgeSizeXs from "./BadgeSizeXs.astro";
import BadgeSizesCode from "./BadgeSizes.astro?raw";
import BadgeSizeMdCode from "./BadgeSizeMd.astro?raw";
import BadgeSizeSmCode from "./BadgeSizeSm.astro?raw";
import BadgeSizeXsCode from "./BadgeSizeXs.astro?raw";
---

