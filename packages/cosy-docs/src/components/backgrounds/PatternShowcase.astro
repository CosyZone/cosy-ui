---
import { Container, PlaceHolder, Text } from "@coffic/cosy-ui";
---

<Container flex="col" gap="lg">
    <Container background="dot-grid" padding="xl" rounded="md">
        <PlaceHolder background="success/60" width="full" height="lg">
            <Text size="sm" color="base-content/60">dot-grid</Text>
        </PlaceHolder>
    </Container>

    <Container background="stripes" padding="xl" rounded="md">
        <PlaceHolder background="info/60" width="full" height="lg">
            <Text size="sm" color="base-content/60" align="center">stripes</Text>
        </PlaceHolder>
    </Container>

    <Container background="gradient-glow" padding="xl" rounded="md" contentCentered>
        <PlaceHolder background="accent/60" width="full" height="md">
            <Text size="sm" color="base-content/60" align="center">gradient-glow</Text>
        </PlaceHolder>
    </Container>

    <Container background="glassmorphism" padding="xl" rounded="md" contentCentered>
        <PlaceHolder background="primary/60" width="full" height="md">
            <Text size="sm" color="base-content/60" align="center">glassmorphism</Text>
        </PlaceHolder>
    </Container>

    <Container background="mesh-gradient" padding="xl" rounded="md" contentCentered>
        <PlaceHolder background="secondary/60" width="full" height="md">
            <Text size="sm" color="base-content/60" align="center">mesh-gradient</Text>
        </PlaceHolder>
    </Container>

    <Container background="noise" padding="xl" rounded="md" contentCentered>
        <PlaceHolder background="accent/60" width="full" height="md">
            <Text size="sm" color="base-content/60" align="center">noise</Text>
        </PlaceHolder>
    </Container>

    <Container background="animated-gradient" padding="xl" rounded="md" contentCentered>
        <PlaceHolder background="info/60" width="full" height="md">
            <Text size="sm" color="base-content/60" align="center">animated-gradient</Text>
        </PlaceHolder>
    </Container>
</Container>
