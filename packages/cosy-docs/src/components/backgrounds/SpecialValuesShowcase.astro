---

import { Grid, PlaceHolder, Text } from "@coffic/cosy-ui";
---

<Grid cols={{ base: 2, md: 2 }} gap="md" marginY="md">
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="transparent"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >transparent</Text
        >
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="none" border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >none</Text
        >
    </PlaceHolder>
</Grid>
