---



import { Grid, PlaceHolder, Text } from "@coffic/cosy-ui";
---

<Grid cols={{ base: 2, md: 3 }} gap="md" marginY="md">
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-success"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-success</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-warning"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-warning</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-info"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-info</Text
        >
    </PlaceHolder>
</Grid>
