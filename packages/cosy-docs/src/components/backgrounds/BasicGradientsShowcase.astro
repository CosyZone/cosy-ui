---



import { Grid, PlaceHolder, Text } from "@coffic/cosy-ui";
---

<Grid cols={{ base: 2, md: 4 }} gap="md" marginY="md">
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-primary"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-primary</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-secondary"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-secondary</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-accent"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-accent</Text
        >
    </PlaceHolder>
</Grid>
