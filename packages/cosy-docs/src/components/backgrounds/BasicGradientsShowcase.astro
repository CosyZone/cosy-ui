---
import { Grid, PlaceHolder } from '@coffic/cosy-ui';
---

<Grid cols={{ base: 2, md: 4 }} gap="md" marginY="md">
    <PlaceHolder width="full" height="lg" padding="md" background="gradient">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                默认渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-primary">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                主题渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-primary
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-secondary">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                辅助渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-secondary
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-accent">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                强调渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-accent
            </div>
        </div>
    </PlaceHolder>
</Grid>
