---
import { Container, Text } from "@coffic/cosy-ui";
---

<Container flex="col" gap="lg">
    <Container background="dot-grid" padding="lg" rounded="md">
        <Text weight="medium">dot-grid</Text>
        <Text size="sm" color="base-content/60">background="dot-grid"</Text>
    </Container>

    <Container background="stripes" padding="lg" rounded="md">
        <Text weight="medium">stripes</Text>
        <Text size="sm" color="base-content/60">background="stripes"</Text>
    </Container>

    <Container background="gradient-glow" padding="lg" rounded="md">
        <Text weight="medium">gradient-glow</Text>
        <Text size="sm" color="base-content/60">background="gradient-glow"</Text>
    </Container>

    <Container background="glassmorphism" padding="lg" rounded="md">
        <Text weight="medium">glassmorphism</Text>
        <Text size="sm" color="base-content/60">background="glassmorphism"</Text>
    </Container>

    <Container background="mesh-gradient" padding="lg" rounded="md">
        <Text weight="medium">mesh-gradient</Text>
        <Text size="sm" color="base-content/60">background="mesh-gradient"</Text>
    </Container>

    <Container background="noise" padding="lg" rounded="md">
        <Text weight="medium">noise</Text>
        <Text size="sm" color="base-content/60">background="noise"</Text>
    </Container>

    <Container background="animated-gradient" padding="lg" rounded="md">
        <Text weight="medium">animated-gradient</Text>
        <Text size="sm" color="base-content/60">background="animated-gradient"</Text>
    </Container>
</Container>
