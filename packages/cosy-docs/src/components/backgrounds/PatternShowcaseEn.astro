---
import { Container, Text } from '@coffic/cosy-ui';
---

<Container flex="col" gap="lg">
    <Container background="dot-grid" padding="lg" rounded="md">
        <Text weight="medium">dot-grid</Text>
        <Text size="sm" color="base-content/60">background="dot-grid"</Text>
    </Container>

    <Container background="dot-grid-soft" padding="lg" rounded="md">
        <Text weight="medium">dot-grid-soft</Text>
        <Text size="sm" color="base-content/60">background="dot-grid-soft"</Text
        >
    </Container>

    <Container background="dot-grid-lg" padding="lg" rounded="md">
        <Text weight="medium">dot-grid-lg</Text>
        <Text size="sm" color="base-content/60">background="dot-grid-lg"</Text>
    </Container>
</Container>
