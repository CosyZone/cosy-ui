---
import { Grid, PlaceHolder, Text } from '@coffic/cosy-ui';
---

<Grid cols={{ base: 2, md: 4 }} gap="md" marginY="md">
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="primary"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >primary</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="secondary"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >secondary</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="accent"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >accent</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="neutral"
        border>
        <Text size="sm" weight="medium" color="primary" align="center"
            >neutral</Text
        >
    </PlaceHolder>
</Grid>
