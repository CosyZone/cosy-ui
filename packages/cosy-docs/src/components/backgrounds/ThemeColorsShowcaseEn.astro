---
import { Grid, PlaceHolder } from '@coffic/cosy-ui';
---

<Grid cols={{ base: 2, md: 4 }} gap="md" marginY="md">
    <PlaceHolder width="full" height="lg" padding="md" background="primary">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                Primary
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                primary
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="secondary">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                Secondary
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                secondary
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="accent">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                Accent
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                accent
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="neutral">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                Neutral
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                neutral
            </div>
        </div>
    </PlaceHolder>
</Grid>
