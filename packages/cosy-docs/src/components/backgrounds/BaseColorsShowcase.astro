---
import { Grid, PlaceHolder } from '@coffic/cosy-ui';
---

<Grid cols={{ base: 2, md: 3 }} gap="md" marginY="md">
    <PlaceHolder width="full" height="lg" padding="md" background="base-100">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                基础色(浅)
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                base-100
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="base-200">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                基础色(中)
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                base-200
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="base-300">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                基础色(深)
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                base-300
            </div>
        </div>
    </PlaceHolder>
</Grid>
