---



import { Grid, PlaceHolder, Text } from "@coffic/cosy-ui";
---

<Grid cols={{ base: 2, md: 3 }} gap="md" marginY="md">
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-sky"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-sky</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-sunset"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-sunset</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-forest"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-forest</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-ocean"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-ocean</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-mountain"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >gradient-mountain</Text
        >
    </PlaceHolder>
</Grid>
