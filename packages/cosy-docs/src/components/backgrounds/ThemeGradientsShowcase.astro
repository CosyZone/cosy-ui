---
import { Grid, PlaceHolder } from '@coffic/cosy-ui';
---

<Grid cols={{ base: 2, md: 3 }} gap="md" marginY="md">
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-sky">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                天空渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-sky
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-sunset">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                日落渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-sunset
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-forest">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                森林渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-forest
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-ocean">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                海洋渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-ocean
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-mountain">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                山峰渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-mountain
            </div>
        </div>
    </PlaceHolder>
</Grid>
