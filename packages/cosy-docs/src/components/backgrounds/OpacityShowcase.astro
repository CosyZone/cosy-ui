---
import { Grid, PlaceHolder } from '@coffic/cosy-ui';
---

<Grid cols={{ base: 2, md: 4 }} gap="md" marginY="md">
    <PlaceHolder width="full" height="lg" padding="md" background="primary/10">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                主题色 10%
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                primary/10
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="primary/20">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                主题色 20%
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                primary/20
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="primary/30">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                主题色 30%
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                primary/30
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="primary/50">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                主题色 50%
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                primary/50
            </div>
        </div>
    </PlaceHolder>
</Grid>
