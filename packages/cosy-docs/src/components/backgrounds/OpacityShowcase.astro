---



import { Grid, PlaceHolder, Text } from "@coffic/cosy-ui";
---

<Grid cols={{ base: 2, md: 4 }} gap="md" marginY="md">
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="primary/10"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >primary/10</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="primary/20"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >primary/20</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="primary/30"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >primary/30</Text
        >
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="primary/50"
        border>
        <Text size="sm" weight="medium" color="base-content" align="center"
            >primary/50</Text
        >
    </PlaceHolder>
</Grid>
