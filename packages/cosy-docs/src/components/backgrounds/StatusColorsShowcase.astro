---
import { Grid, PlaceHolder } from '@coffic/cosy-ui';
---

<Grid cols={{ base: 2, md: 4 }} gap="md" marginY="md">
    <PlaceHolder width="full" height="lg" padding="md" background="success">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                成功色
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                success
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="warning">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                警告色
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                warning
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="error">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                错误色
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                error
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder width="full" height="lg" padding="md" background="info">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                信息色
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                info
            </div>
        </div>
    </PlaceHolder>
</Grid>
