---
import { Grid, PlaceHolder } from '@coffic/cosy-ui';
---

<Grid cols={{ base: 2, md: 3 }} gap="md" marginY="md">
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-flower">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                花朵渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-flower
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-watermelon">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                西瓜渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-watermelon
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-lemon">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                柠檬渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-lemon
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-grape">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                葡萄渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-grape
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-blueberry">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                蓝莓渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-blueberry
            </div>
        </div>
    </PlaceHolder>
    <PlaceHolder
        width="full"
        height="lg"
        padding="md"
        background="gradient-mango">
        <div class="cosy:text-center">
            <div class="cosy:text-sm cosy:font-medium cosy:text-base-content">
                芒果渐变
            </div>
            <div class="cosy:text-xs cosy:text-base-content/60 cosy:mt-1">
                gradient-mango
            </div>
        </div>
    </PlaceHolder>
</Grid>
