---
/**
 * @component MacWindow BgTypes Container
 * @description 展示 MacWindow 组件的不同背景色类型的容器组件
 */

import { CodeContainer } from '@coffic/cosy-ui';

// 导入各个背景色示例
import DefaultBg from './DefaultBg.astro';
import LightBg from './LightBg.astro';
import DarkBg from './DarkBg.astro';
import BlueBg from './BlueBg.astro';
import GreenBg from './GreenBg.astro';
import PurpleBg from './PurpleBg.astro';
import OrangeBg from './OrangeBg.astro';
import RedBg from './RedBg.astro';

// 导入对应的源码
import DefaultBgCode from './DefaultBg.astro?raw';
import LightBgCode from './LightBg.astro?raw';
import DarkBgCode from './DarkBg.astro?raw';
import BlueBgCode from './BlueBg.astro?raw';
import GreenBgCode from './GreenBg.astro?raw';
import PurpleBgCode from './PurpleBg.astro?raw';
import OrangeBgCode from './OrangeBg.astro?raw';
import RedBgCode from './RedBg.astro?raw';
---

<CodeContainer
  titles={[
    '默认背景',
    '浅色背景',
    '深色背景',
    '蓝色背景',
    '绿色背景',
    '紫色背景',
    '橙色背景',
    '红色背景',
  ]}
  codes={[
    DefaultBgCode,
    LightBgCode,
    DarkBgCode,
    BlueBgCode,
    GreenBgCode,
    PurpleBgCode,
    OrangeBgCode,
    RedBgCode,
  ]}>
  <div id="tab-1">
    <DefaultBg />
  </div>
  <div id="tab-2">
    <LightBg />
  </div>
  <div id="tab-3">
    <DarkBg />
  </div>
  <div id="tab-4">
    <BlueBg />
  </div>
  <div id="tab-5">
    <GreenBg />
  </div>
  <div id="tab-6">
    <PurpleBg />
  </div>
  <div id="tab-7">
    <OrangeBg />
  </div>
  <div id="tab-8">
    <RedBg />
  </div>
</CodeContainer>
