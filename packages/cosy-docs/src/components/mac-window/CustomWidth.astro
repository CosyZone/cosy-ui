---
/**
 * @component MacWindow.CustomWidth
 *
 * @description
 * 展示 MacWindow 组件的 width 参数用法，支持不同的宽度设置。
 */
import { MacWindow, PlaceHolder, CodeContainer } from "@coffic/cosy-ui";
import WidthSmall from "./WidthSmall.astro";
import WidthMedium from "./WidthMedium.astro";
import WidthLarge from "./WidthLarge.astro";
import WidthFull from "./WidthFull.astro";
import WidthSmallSource from "./WidthSmall.astro?raw";
import WidthMediumSource from "./WidthMedium.astro?raw";
import WidthLargeSource from "./WidthLarge.astro?raw";
import WidthFullSource from "./WidthFull.astro?raw";
---

<CodeContainer
  codes={[
    WidthSmallSource,
    WidthMediumSource,
    WidthLargeSource,
    WidthFullSource,
  ]}
  titles={['小宽度 (sm)', '中等宽度 (md)', '大宽度 (lg)', '全宽 (full)']}>
  <div id="tab-1">
    <WidthSmall />
  </div>
  <div id="tab-2">
    <WidthMedium />
  </div>
  <div id="tab-3">
    <WidthLarge />
  </div>
  <div id="tab-4">
    <WidthFull />
  </div>
</CodeContainer>
