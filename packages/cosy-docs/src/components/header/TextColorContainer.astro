---
import { CodeContainer } from '@coffic/cosy-ui';
import DefaultSourceCode from './text-color/Default.astro?raw';
import PrimarySourceCode from './text-color/Primary.astro?raw';
import SecondarySourceCode from './text-color/Secondary.astro?raw';
import AccentSourceCode from './text-color/Accent.astro?raw';
import MutedSourceCode from './text-color/Muted.astro?raw';
import InfoSourceCode from './text-color/Info.astro?raw';
import SuccessSourceCode from './text-color/Success.astro?raw';
import WarningSourceCode from './text-color/Warning.astro?raw';
import ErrorSourceCode from './text-color/Error.astro?raw';
import WhiteSourceCode from './text-color/White.astro?raw';
import BlackSourceCode from './text-color/Black.astro?raw';
import Default from './text-color/Default.astro';
import Primary from './text-color/Primary.astro';
import Secondary from './text-color/Secondary.astro';
import Accent from './text-color/Accent.astro';
import Muted from './text-color/Muted.astro';
import Info from './text-color/Info.astro';
import Success from './text-color/Success.astro';
import Warning from './text-color/Warning.astro';
import Error from './text-color/Error.astro';
import White from './text-color/White.astro';
import Black from './text-color/Black.astro';
---

<CodeContainer
  codes={[
    DefaultSourceCode,
    PrimarySourceCode,
    SecondarySourceCode,
    AccentSourceCode,
    MutedSourceCode,
    InfoSourceCode,
    SuccessSourceCode,
    WarningSourceCode,
    ErrorSourceCode,
    WhiteSourceCode,
    BlackSourceCode,
  ]}
  titles={[
    'default',
    'primary',
    'secondary',
    'accent',
    'muted',
    'info',
    'success',
    'warning',
    'error',
    'white',
    'black',
  ]}>
  <div id="tab-1">
    <Default />
  </div>
  <div id="tab-2">
    <Primary />
  </div>
  <div id="tab-3">
    <Secondary />
  </div>
  <div id="tab-4">
    <Accent />
  </div>
  <div id="tab-5">
    <Muted />
  </div>
  <div id="tab-6">
    <Info />
  </div>
  <div id="tab-7">
    <Success />
  </div>
  <div id="tab-8">
    <Warning />
  </div>
  <div id="tab-9">
    <Error />
  </div>
  <div id="tab-10">
    <White />
  </div>
  <div id="tab-11">
    <Black />
  </div>
</CodeContainer>
