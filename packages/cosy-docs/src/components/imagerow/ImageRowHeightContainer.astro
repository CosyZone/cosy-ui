---
/**
 * @component ImageRowHeightContainer
 * @description ImageRow 高度示例容器
 */
import { CodeContainer } from "@coffic/cosy-ui";
import ImageRowHeightNone from "./ImageRowHeightNone.astro";
import ImageRowHeightMd from "./ImageRowHeightMd.astro";
import ImageRowHeightLg from "./ImageRowHeightLg.astro";
import ImageRowHeightFull from "./ImageRowHeightFull.astro";
import ImageRowHeightNoneSourceCode from "./ImageRowHeightNone.astro?raw";
import ImageRowHeightMdSourceCode from "./ImageRowHeightMd.astro?raw";
import ImageRowHeightLgSourceCode from "./ImageRowHeightLg.astro?raw";
import ImageRowHeightFullSourceCode from "./ImageRowHeightFull.astro?raw";
---

<CodeContainer
  codes={[
    ImageRowHeightNoneSourceCode,
    ImageRowHeightMdSourceCode,
    ImageRowHeightLgSourceCode,
    ImageRowHeightFullSourceCode,
  ]}
  titles={['none', 'md', 'lg', 'full']}>
  <div id="tab-1">
    <ImageRowHeightNone />
  </div>
  <div id="tab-2">
    <ImageRowHeightMd />
  </div>
  <div id="tab-3">
    <ImageRowHeightLg />
  </div>
  <div id="tab-4">
    <ImageRowHeightFull />
  </div>
</CodeContainer>
