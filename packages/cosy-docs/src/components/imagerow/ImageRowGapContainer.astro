---
/**
 * @component ImageRowGapContainer
 * @description ImageRow 组件 gap 属性示例容器
 */
import { CodeContainer } from '@coffic/cosy-ui';
import ImageRowGapNone from './ImageRowGapNone.astro';
import ImageRowGapSmall from './ImageRowGapSmall.astro';
import ImageRowGapMedium from './ImageRowGapMedium.astro';
import ImageRowGapLarge from './ImageRowGapLarge.astro';
import ImageRowGapNoneSourceCode from './ImageRowGapNone.astro?raw';
import ImageRowGapSmallSourceCode from './ImageRowGapSmall.astro?raw';
import ImageRowGapMediumSourceCode from './ImageRowGapMedium.astro?raw';
import ImageRowGapLargeSourceCode from './ImageRowGapLarge.astro?raw';
---

<CodeContainer
  titles={['无间距', '小间距', '中等间距', '大间距']}
  codes={[
    ImageRowGapNoneSourceCode,
    ImageRowGapSmallSourceCode,
    ImageRowGapMediumSourceCode,
    ImageRowGapLargeSourceCode,
  ]}>
  <div id="tab-1"><ImageRowGapNone /></div>
  <div id="tab-2"><ImageRowGapSmall /></div>
  <div id="tab-3"><ImageRowGapMedium /></div>
  <div id="tab-4"><ImageRowGapLarge /></div>
</CodeContainer>
