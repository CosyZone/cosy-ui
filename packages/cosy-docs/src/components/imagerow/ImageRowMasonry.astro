 * @component ImageRowMasonry
 * @description ImageRow 组件瀑布流布局示例
 */
import {
	getAvatarImage,
	getLandscapeImage,
	getProductImage,
	ImageRow,
} from "@coffic/cosy-ui";

const images = [
	{
		src: getProductImage({ width: 300, height: 400 }),
		alt: "瀑布流图片 1",
		caption: "高产品图",
	},
	{
		src: getLandscapeImage({ width: 300, height: 200 }),
		alt: "瀑布流图片 2",
		caption: "宽风景图",
	},
	{
		src: getAvatarImage({ width: 300, height: 300 }),
		alt: "瀑布流图片 3",
		caption: "正方形头像",
	},
	{
		src: getProductImage({ width: 300, height: 350 }),
		alt: "瀑布流图片 4",
		caption: "中等高度产品",
	},
	{
		src: getLandscapeImage({ width: 300, height: 250 }),
		alt: "瀑布流图片 5",
		caption: "中等宽度风景",
	},
];
---

<ImageRow
  images={images}
  gap="md"
  rounded="lg"
  shadow="md"
  hover="brightness"
/>
