---
/**
 * @component ImageRowGap
 * @description ImageRow 组件间距控制示例
 */
import { ImageRow, getProductImage } from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 150, height: 100 }),
    alt: '间距图片 1',
  },
  {
    src: getProductImage({ width: 150, height: 100 }),
    alt: '间距图片 2',
  },
  {
    src: getProductImage({ width: 150, height: 100 }),
    alt: '间距图片 3',
  },
];
---

<div style="display: flex; flex-direction: column; gap: 2rem;">
  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">无间距</h4>
    <ImageRow images={images} gap="none" />
  </div>

  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">小间距</h4>
    <ImageRow images={images} gap="xs" />
  </div>

  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">中等间距</h4>
    <ImageRow images={images} gap="md" />
  </div>

  <div>
    <h4 style="margin: 0 0 1rem 0; color: #374151;">大间距</h4>
    <ImageRow images={images} gap="xl" />
  </div>
</div>
