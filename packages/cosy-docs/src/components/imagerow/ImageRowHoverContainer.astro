    ImageRowHoverNoneSourceCode,
    ImageRowHoverScaleSourceCode,
    ImageRowHoverBrightnessSourceCode,
    ImageRowHoverBlurSourceCode,
  ]}>
  <div id="tab-1"><ImageRowHoverNone /></div>
  <div id="tab-2"><ImageRowHoverScale /></div>
  <div id="tab-3"><ImageRowHoverBrightness /></div>
  <div id="tab-4"><ImageRowHoverBlur /></div>
</CodeContainer>
