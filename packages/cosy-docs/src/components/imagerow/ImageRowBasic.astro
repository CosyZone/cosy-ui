---
/**
 * @component ImageRowBasic
 * @description ImageRow 组件基础用法示例
 */
import {
  ImageRow,
  getProductImage,
  getLandscapeImage,
  getAvatarImage,
} from '@coffic/cosy-ui';

const images = [
  {
    src: getProductImage({ width: 200, height: 150, tags: [product1] }),
    alt: '产品图片 1',
    caption: '精美产品展示',
  },
  {
    src: getLandscapeImage({ width: 200, height: 150, tags: [nature1] }),
    alt: '自然风景 1',
    caption: '自然风光',
  },
  {
    src: getAvatarImage({ width: 200, height: 150, tags: [portrait1] }),
    alt: '人物肖像 1',
    caption: '人物肖像',
  },
  {
    src: getProductImage({ width: 200, height: 150, tags: [product2] }),
    alt: '产品图片 2',
    caption: '产品细节',
  },
  {
    src: getLandscapeImage({ width: 200, height: 150, tags: [nature2] }),
    alt: '自然风景 2',
    caption: '城市景观',
  },
  {
    src: getAvatarImage({ width: 200, height: 150, tags: [portrait2] }),
    alt: '人物肖像 2',
    caption: '专业形象',
  },
];
---

<ImageRow
  images={images}
  gap="md"
  rounded="lg"
  shadow="md"
  hover="scale"
  background="primary/20"
  padding="lg"
  border
/>
