---
/**
 * @component ImageRowArrowsContainer
 * @description ImageRow 组件箭头功能示例容器
 */
import { CodeContainer } from '@coffic/cosy-ui';
import ImageRowArrowsNone from './ImageRowArrowsNone.astro';
import ImageRowArrowsGhost from './ImageRowArrowsGhost.astro';
import ImageRowArrowsOutline from './ImageRowArrowsOutline.astro';
import ImageRowArrowsPrimary from './ImageRowArrowsPrimary.astro';
import ImageRowArrowsSecondary from './ImageRowArrowsSecondary.astro';
import ImageRowArrowsNoneSourceCode from './ImageRowArrowsNone.astro?raw';
import ImageRowArrowsGhostSourceCode from './ImageRowArrowsGhost.astro?raw';
import ImageRowArrowsOutlineSourceCode from './ImageRowArrowsOutline.astro?raw';
import ImageRowArrowsPrimarySourceCode from './ImageRowArrowsPrimary.astro?raw';
import ImageRowArrowsSecondarySourceCode from './ImageRowArrowsSecondary.astro?raw';
