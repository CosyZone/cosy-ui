    ImageRowArrowsGhostSourceCode,
    ImageRowArrowsOutlineSourceCode,
    ImageRowArrowsPrimarySourceCode,
    ImageRowArrowsSecondarySourceCode,
  ]}>
  <div id="tab-1"><ImageRowArrowsNone /></div>
  <div id="tab-2"><ImageRowArrowsGhost /></div>
  <div id="tab-3"><ImageRowArrowsOutline /></div>
  <div id="tab-4"><ImageRowArrowsPrimary /></div>
  <div id="tab-5"><ImageRowArrowsSecondary /></div>
