---



import { getExampleImage, Heading, LinkUtil, Products } from "@coffic/cosy-ui";
import appleProductsIphoneUrl from "@/demos/apple_products/images/iphone.jpg";
import appleStyleHeroUrl from "@/demos/apple_style_website/images/hero.jpg";
import autoPartsHeroUrl from "@/demos/auto_parts_showcase/images/hero.png";
import ecommerceMainUrl from "@/demos/ecommerce_product/images/main.jpg";
import enterpriseHeroUrl from "@/demos/enterprise_website/images/hero.jpg";
import factoryHeroUrl from "@/demos/factory_showcase/images/hero.png";
import DemoLayout from "@/layouts/DemoLayout.astro";

const currentLocale = Astro.params.lang;

export const getStaticPaths = async () => {
	return [
		{
			params: { lang: "zh-cn" },
		},
		{
			params: { lang: "en" },
		},
	];
};
---

<DemoLayout
    title="Cosy UI 组件库 - 示例"
    showSidebar={false}
    showTOC={false}
    showDemoBanner={false}>
    <Heading level={1} align="center" margin="lg">
        Cosy UI 组件库 - 示例
    </Heading>

    <Products
        products={[
            {
                name: '最少配置',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: 'AppLayout 最少配置使用示例，展示最简单的使用方式',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/minimal_app_layout`
                ),
            },
            {
                name: '最简单的 Header',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description:
                    'AppLayout + 最简单的 Header，不显示 logo 的极简配置',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/minimal_header`
                ),
            },
            {
                name: '自定义 Header',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: 'AppLayout 自定义全局 Header 功能演示',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/custom_header`
                ),
            },
            {
                name: '自定义 Footer',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: 'AppLayout 自定义全局 Footer 功能演示',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/custom_footer`
                ),
            },
            {
                name: '自定义背景',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: 'AppLayout 自定义背景层，实现渐变、图片等背景效果',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/custom_background`
                ),
            },
            {
                name: '自定义 Header & Footer',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: 'AppLayout 同时自定义 Header 和 Footer 的完整演示',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/custom_header_footer`
                ),
            },
            {
                name: '文档布局',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: '适用于展示文档的场景',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/doc_layout`
                ),
            },
            {
                name: '网格布局',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: '展示灵活的网格布局系统',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/grid_layout`
                ),
            },
            {
                name: '企业官网',
                image: enterpriseHeroUrl,
                description: '基于组件库开发的企业官方网站演示',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/enterprise_website`
                ),
            },
            {
                name: '苹果风格官网',
                image: appleStyleHeroUrl,
                description: '苹果官网风格的极简企业网站演示',
