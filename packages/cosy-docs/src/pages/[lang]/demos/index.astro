---
import { getExampleImage, Heading, LinkUtil, Products } from '@coffic/cosy-ui';
import appleProductsIphoneUrl from './apple_products/images/iphone.jpg';
import appleStyleHeroUrl from './apple_style_website/images/hero.jpg';
import autoPartsHeroUrl from './auto_parts_showcase/images/hero.png';
import ecommerceMainUrl from './ecommerce_product/images/main.jpg';
import enterpriseHeroUrl from './enterprise_website/images/hero.jpg';
import factoryHeroUrl from './factory_showcase/images/hero.png';
import DemoLayout from '@/layouts/DemoLayout.astro';

const currentLocale = Astro.params.lang;

export const getStaticPaths = async () => {
    return [
        {
            params: { lang: 'zh-cn' },
        },
        {
            params: { lang: 'en' },
        },
    ];
};
---

<DemoLayout
    title="Cosy UI 组件库 - 示例"
    showSidebar={false}
    showTOC={false}
    showDemoBanner={false}>
    <Heading level={1} align="center" margin="lg">
        Cosy UI 组件库 - 示例
    </Heading>

    <Products
        products={[
            {
                name: '最少配置',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: 'AppLayout 最少配置使用示例，展示最简单的使用方式',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/minimal_app_layout`,
                ),
            },
            {
                name: 'Header & Footer 示例',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description:
                    '展示各种 Header 和 Footer 配置方式，包括最简单的 Header、自定义 Header、自定义 Footer 和完整的 Header & Footer 组合',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/headers`,
                ),
            },
            {
                name: '背景样式',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description:
                    '展示各种现代化背景样式，包括玻璃态效果、网格渐变、噪点纹理、动态渐变和自定义背景',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/backgrounds`,
                ),
            },
            {
                name: '布局示例',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: '展示各种布局方式，包括文档布局和网格布局',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/layouts`,
                ),
            },
            {
                name: '企业官网',
                image: enterpriseHeroUrl,
                description: '基于组件库开发的企业官方网站演示',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/enterprise_website`,
                ),
            },
            {
                name: '苹果风格官网',
                image: appleStyleHeroUrl,
                description: '苹果官网风格的极简企业网站演示',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/apple_style_website`,
                ),
            },
            {
                name: '汽车零部件展示',
                image: autoPartsHeroUrl,
                description: '现代化汽车零部件企业产品展示页面',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/auto_parts_showcase`,
                ),
            },
            {
                name: 'Apple 产品列表',
                image: appleProductsIphoneUrl,
                description: '展示 Apple 设备与配件的产品卡片列表',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/apple_products`,
                ),
            },
            {
                name: '工厂照片展示',
                image: factoryHeroUrl,
                description: '工厂图片与文字展示区块',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/factory`,
                ),
            },
            {
                name: '电商产品页面',
                image: ecommerceMainUrl,
                description: '现代化电商产品购买展示页面',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/ecommerce_product`,
                ),
            },
            {
                name: '控制台数据表格',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: '控制台数据表格，常用于管理后台展示大量数据记录',
                productUrl: LinkUtil.createUrl(
                    `${currentLocale}/demos/console/table`,
                ),
            },
            {
                name: 'ApplePhone 组件',
                image: getExampleImage({
                    width: 100,
                    height: 100,
                }),
                description: '模拟 iPhone 设备外观的组件演示',
                productUrl: LinkUtil.createUrl(`${currentLocale}/demos/iPhone`),
            },
        ]}
    />
</DemoLayout>
