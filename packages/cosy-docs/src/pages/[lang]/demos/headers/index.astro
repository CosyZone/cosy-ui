---
/**
 * @page Headers Home
 * @description Header 示例首页
 */
import * as astroI18n from 'astro:i18n';
import { AppLayout, Container, Heading, Text, Button } from '@coffic/cosy-ui';
import Logo from '@/assets/logo.png';
import { configApp } from '@/config/config.app';
import { getFooterConfig } from '@/demos/footerConfig';
import { getMetaConfig } from '@/demos/metaConfig';
import { getSidebarItems } from './sidebarConfig';

const currentLocale = Astro.params.lang;
const t = (zh: string, en: string) => (currentLocale === 'zh-cn' ? zh : en);

export const getStaticPaths = async () => {
    return [{ params: { lang: 'zh-cn' } }, { params: { lang: 'en' } }];
};
---

<AppLayout
    metaConfig={getMetaConfig({
        title: t('Header & Footer 示例', 'Header & Footer Examples'),
        description: t(
            '展示各种 Header 和 Footer 配置的使用方法和效果。',
            'Demonstrates various header and footer configurations and their effects.',
        ),
        keywords: t(
            'Header, Footer, 自定义 Header, 自定义 Footer',
            'Header, Footer, Custom Header, Custom Footer',
        ),
    })}
    showFooter={true}
    showSidebar={true}
    sidebarConfig={{
        sidebarItems: getSidebarItems(currentLocale || 'zh-cn'),
    }}
    footerConfig={getFooterConfig(currentLocale || 'zh-cn')}
    headerConfig={{
        logo: Logo,
        logoHref: configApp.homeLink,
        navItems: configApp.getNavItems(currentLocale),
        astroI18n: astroI18n,
    }}
    mainContentConfig={{ py: '2xl' }}>
    <Container width="full" padding="lg" flex="col" contentCentered={true}>
        <Heading level={1} margin="lg" centered={true} align="center">
            {t('Header & Footer 示例', 'Header & Footer Examples')}
        </Heading>

        <Text align="center" color="base-content/80" margin="md">
            {
                currentLocale === 'zh-cn'
                    ? '探索 Cosy UI 提供的各种 Header 和 Footer 配置方式，包括最简单的 Header、自定义 Header、自定义 Footer 和完整的 Header & Footer 组合。'
                    : 'Explore various header and footer configuration methods provided by Cosy UI, including minimal header, custom header, custom footer, and complete header & footer combinations.'
            }
        </Text>

        <Container width="full" margin="xl" padding="none" flex="col" gap="lg">
            <Container
                background="base-200"
                padding="xl"
                rounded="lg"
                width="full">
                <Heading level={2} margin="sm">
                    {t('最简单的 Header', 'Minimal Header')}
                </Heading>
                <Text color="base-content/80" margin="sm">
                    {
                        currentLocale === 'zh-cn'
                            ? '展示最简单的 Header 配置，不显示 logo，只保留核心功能。'
                            : 'Demonstrates the simplest header configuration without logo, keeping only core functionality.'
                    }
                </Text>
                <Button
                    variant="primary"
                    href={`/${currentLocale}/demos/headers/minimal_header`}
                    margin="md">
                    {t('查看示例', 'View Example')}
                </Button>
            </Container>

            <Container
                background="base-200"
                padding="xl"
                rounded="lg"
                width="full">
                <Heading level={2} margin="sm">
                    {t('自定义 Header', 'Custom Header')}
                </Heading>
                <Text color="base-content/80" margin="sm">
                    {
                        currentLocale === 'zh-cn'
                            ? '使用 AppLayout 的自定义 header slot 功能，创建完全自定义的页面头部。'
                            : "Use AppLayout's custom header slot feature to create a fully customized page header."
                    }
                </Text>
                <Button
                    variant="primary"
                    href={`/${currentLocale}/demos/headers/custom_header`}
                    margin="md">
                    {t('查看示例', 'View Example')}
                </Button>
            </Container>

            <Container
                background="base-200"
                padding="xl"
                rounded="lg"
                width="full">
                <Heading level={2} margin="sm">
                    {t('自定义 Footer', 'Custom Footer')}
                </Heading>
                <Text color="base-content/80" margin="sm">
                    {
                        currentLocale === 'zh-cn'
                            ? '使用 AppLayout 的自定义 footer slot 功能，创建完全自定义的页面底部。'
                            : "Use AppLayout's custom footer slot feature to create a fully customized page footer."
                    }
                </Text>
                <Button
                    variant="primary"
                    href={`/${currentLocale}/demos/headers/custom_footer`}
                    margin="md">
                    {t('查看示例', 'View Example')}
                </Button>
            </Container>

            <Container
                background="base-200"
                padding="xl"
                rounded="lg"
                width="full">
                <Heading level={2} margin="sm">
                    {t('自定义 Header & Footer', 'Custom Header & Footer')}
                </Heading>
                <Text color="base-content/80" margin="sm">
                    {
                        currentLocale === 'zh-cn'
                            ? '同时使用自定义 header 和 footer slot，创建完全自定义的页面布局。'
                            : 'Use both custom header and footer slots to create a fully customized page layout.'
                    }
                </Text>
                <Button
                    variant="primary"
                    href={`/${currentLocale}/demos/headers/custom_header_footer`}
                    margin="md">
                    {t('查看示例', 'View Example')}
                </Button>
            </Container>
        </Container>
    </Container>
</AppLayout>
