---
import {
	AppLayout,
	Hero,
	Card,
	Grid,
	Button,
	Text,
	Heading,
	Image,
	Badge,
	Contact,
	TeamMember,
	SocialIcon,
	SmartIcon,
	Container,
	getExampleImage,
	getProductImage,
	getAvatarImage,
	PlaceHolder,
} from "@coffic/cosy-ui";
import { configApp } from "@/config/config.app";
import HeroImage from "@/assets/hero.png";

// 从 URL 获取当前语言
const currentLocale = Astro.params.lang;

export const getStaticPaths = async () => {
	return [
		{
			params: { lang: "zh-cn" },
		},
		{
			params: { lang: "en" },
		},
	];
};

// 企业数据
const enterpriseData: Record<string, any> = {
	"zh-cn": {
		companyName: "创新科技有限公司",
		slogan: "创新驱动未来，科技改变世界",
		description:
			"我们是一家专注于人工智能和云计算解决方案的科技公司，致力于为企业提供最先进的技术服务。",
		aboutTitle: "关于我们",
		aboutContent:
			"自2015年成立以来，我们一直专注于人工智能、云计算和大数据技术的研发与应用。我们的团队由来自世界顶级科技公司的专家组成，拥有丰富的行业经验和深厚的技术积累。",
		servicesTitle: "我们的服务",
		productsTitle: "产品展示",
		teamTitle: "核心团队",
		contactTitle: "联系我们",
		heroButton: "了解更多",
		learnMore: "了解更多",
		contactUs: "联系我们",
		getStarted: "立即开始",
		yearsExperience: "8年经验",
		clientsServed: "500+客户",
		projectsCompleted: "1000+项目",
		teamMembers: "50+专家",
	},
	en: {
		companyName: "Innovation Tech Ltd.",
		slogan: "Innovation Drives Future, Technology Changes the World",
		description:
			"We are a technology company focused on AI and cloud computing solutions, committed to providing cutting-edge technology services for enterprises.",
		aboutTitle: "About Us",
		aboutContent:
			"Since our establishment in 2015, we have been focusing on the research and application of artificial intelligence, cloud computing, and big data technologies. Our team consists of experts from world-class technology companies with rich industry experience and deep technical expertise.",
		servicesTitle: "Our Services",
		productsTitle: "Products",
		teamTitle: "Core Team",
		contactTitle: "Contact Us",
		heroButton: "Learn More",
		learnMore: "Learn More",
		contactUs: "Contact Us",
		getStarted: "Get Started",
		yearsExperience: "8 Years Experience",
		clientsServed: "500+ Clients",
		projectsCompleted: "1000+ Projects",
		teamMembers: "50+ Experts",
	},
};

const data = enterpriseData[currentLocale] || enterpriseData["zh-cn"];

// 服务数据
const services = [
	{
		title: currentLocale === "zh-cn" ? "人工智能解决方案" : "AI Solutions",
		description:
			currentLocale === "zh-cn"
				? "为企业提供智能化的AI解决方案，提升业务效率"
				: "Provide intelligent AI solutions for enterprises to improve business efficiency",
		icon: "ai",
	},
	{
		title: currentLocale === "zh-cn" ? "云计算服务" : "Cloud Computing",
		description:
			currentLocale === "zh-cn"
				? "安全可靠的云基础设施和平台服务"
				: "Secure and reliable cloud infrastructure and platform services",
		icon: "server",
	},
	{
		title: currentLocale === "zh-cn" ? "大数据分析" : "Big Data Analytics",
		description:
			currentLocale === "zh-cn"
				? "深度挖掘数据价值，助力企业决策"
				: "Deep mining of data value to help enterprise decision-making",
		icon: "chart",
	},
	{
		title:
			currentLocale === "zh-cn" ? "移动应用开发" : "Mobile App Development",
		description:
			currentLocale === "zh-cn"
				? "专业的移动端应用开发服务"
				: "Professional mobile application development services",
		icon: "appstore",
	},
];

// 产品数据
const products = [
	{
		name: currentLocale === "zh-cn" ? "智能客服系统" : "Smart Customer Service",
		description:
			currentLocale === "zh-cn"
				? "基于AI的智能客服解决方案，24/7全天候服务"
				: "AI-based smart customer service solution with 24/7 service",
		image: getProductImage({
			width: 400,
			height: 250,
			tag: "ai-customer-service",
			provider: "picsum",
		}),
		badge: currentLocale === "zh-cn" ? "热门" : "Popular",
	},
	{
		name:
			currentLocale === "zh-cn" ? "企业云平台" : "Enterprise Cloud Platform",
		description:
			currentLocale === "zh-cn"
				? "一站式企业云服务平台，安全高效"
				: "One-stop enterprise cloud service platform, secure and efficient",
		image: getProductImage({
			width: 400,
			height: 250,
			tag: "cloud-platform",
			provider: "picsum",
		}),
		badge: currentLocale === "zh-cn" ? "推荐" : "Recommended",
	},
	{
		name:
			currentLocale === "zh-cn" ? "数据分析平台" : "Data Analytics Platform",
		description:
			currentLocale === "zh-cn"
				? "强大的数据分析工具，助力企业洞察"
				: "Powerful data analytics tools to help enterprise insights",
		image: getProductImage({
			width: 400,
			height: 250,
			tag: "data-analytics",
			provider: "picsum",
		}),
		badge: currentLocale === "zh-cn" ? "新品" : "New",
	},
];

// 团队成员数据
const teamMembers = [
	{
		name: currentLocale === "zh-cn" ? "张明" : "Zhang Ming",
		position: currentLocale === "zh-cn" ? "首席执行官" : "CEO",
		description:
			currentLocale === "zh-cn"
				? "15年科技行业经验，前Google高级工程师"
				: "15 years of tech industry experience, former Google senior engineer",
		avatar: getAvatarImage({ width: 120, height: 120, tag: "zhang-ming" }),
		socialLinks: [
			{ platform: "linkedin", url: "#" },
			{ platform: "twitter", url: "#" },
		],
	},
	{
		name: currentLocale === "zh-cn" ? "李华" : "Li Hua",
		position: currentLocale === "zh-cn" ? "技术总监" : "CTO",
		description:
			currentLocale === "zh-cn"
				? "AI领域专家，斯坦福大学博士"
				: "AI expert, Stanford PhD",
		avatar: getAvatarImage({ width: 120, height: 120, tag: "li-hua" }),
		socialLinks: [
			{ platform: "github", url: "#" },
			{ platform: "linkedin", url: "#" },
		],
	},
	{
		name: currentLocale === "zh-cn" ? "王芳" : "Wang Fang",
		position: currentLocale === "zh-cn" ? "产品总监" : "CPO",
		description:
			currentLocale === "zh-cn"
				? "用户体验专家，前腾讯产品经理"
				: "UX expert, former Tencent product manager",
		avatar: getAvatarImage({ width: 120, height: 120, tag: "wang-fang" }),
		socialLinks: [
			{ platform: "twitter", url: "#" },
			{ platform: "linkedin", url: "#" },
		],
	},
];
---

<AppLayout
    metaConfig={{
        title: data.companyName,
        description: data.description,
        keywords:
            currentLocale === 'zh-cn'
                ? '人工智能,云计算,大数据,企业服务'
                : 'AI, cloud computing, big data, enterprise services',
        author: data.companyName,
        robots: 'index, follow',
    }}
    sidebarConfig={{
        sidebarItems: [],
    }}
    showHeader={true}
    showFooter={true}
    showSidebar={false}
    footerConfig={{
        siteName: data.companyName,
        homeLink: configApp.homeLink,
        slogan: data.slogan,
        company: data.companyName,
        inspirationalSlogan: data.slogan,
        products: [
            { name: 'Cisum', href: 'https://coffic.cn/cisum' },
            { name: 'JuiceEditor', href: 'https://coffic.cn/juice_editor' },
            { name: 'GitOK', href: 'https://coffic.cn/gitok' },
            { name: 'Cosy UI', href: 'https://github.com/cosyzone/cosy-ui' },
        ],
        aboutInfo: {
            aboutLink: 'https://coffic.cn/en/meta/about',
            contactLink: 'https://coffic.cn/en/meta/contact',
        },
        legalInfo: {
            termsLink: 'https://coffic.cn/en/meta/terms',
            privacyLink: 'https://coffic.cn/en/meta/privacy',
        },
        resourcesInfo: {
            historyLink: 'https://coffic.cn/en/meta/out-story',
            techStackLink: 'https://coffic.cn/en/meta/tech-stack',
        },
    }}
    headerConfig={{
        logoHref: configApp.homeLink,
        navItems: configApp.getNavItems(currentLocale),
    }}
    mainContentConfig={{
        py: 'none',
        size: 'full',
        padding: 'none',
    }}>
    <!-- Hero Section -->
    <Hero
        title={data.companyName}
        backgroundOverlay="light"
        overlayOpacity={0.4}
        backgroundImage={HeroImage.src}
        description={data.slogan}
        links={[
            {
                text: data.heroButton,
                href: '#about',
                variant: 'primary',
                size: 'lg',
            },
            {
                text: data.contactUs,
                href: '#contact',
                variant: 'outline',
                size: 'lg',
            },
        ]}
    />

    <!-- Stats Section -->
    <Container width="xl" padding="lg" margin="xl" background="base-100">
        <Grid cols={{ base: 2, md: 4 }} gap="lg">
            <div class="cosy:text-center">
                <div
                    class="cosy:text-4xl cosy:font-bold cosy:text-primary cosy:mb-2">
                    8+
                </div>
                <div class="cosy:text-lg cosy:text-base-content/70">
                    {data.yearsExperience}
                </div>
            </div>
            <div class="cosy:text-center">
                <div
                    class="cosy:text-4xl cosy:font-bold cosy:text-primary cosy:mb-2">
                    500+
                </div>
                <div class="cosy:text-lg cosy:text-base-content/70">
                    {data.clientsServed}
                </div>
            </div>
            <div class="cosy:text-center">
                <div
                    class="cosy:text-4xl cosy:font-bold cosy:text-primary cosy:mb-2">
                    1000+
                </div>
                <div class="cosy:text-lg cosy:text-base-content/70">
                    {data.projectsCompleted}
                </div>
            </div>
            <div class="cosy:text-center">
                <div
                    class="cosy:text-4xl cosy:font-bold cosy:text-primary cosy:mb-2">
                    50+
                </div>
                <div class="cosy:text-lg cosy:text-base-content/70">
                    {data.teamMembers}
                </div>
            </div>
        </Grid>
    </Container>

    <!-- About Section -->
    <Container
        id="about"
        width="xl"
        padding="lg"
        margin="lg"
        background="base-200">
        <Heading level={2} class="cosy:mb-6">{data.aboutTitle}</Heading>
        <Text size="lg" class="cosy:mb-8 cosy:text-base-content/80">
            {data.aboutContent}
        </Text>
        <Button variant="primary" size="lg">
            {data.learnMore}
        </Button>
    </Container>

    <!-- Services Section -->
    <Container width="xl" padding="lg" margin="lg" background="base-100">
        <div class="cosy:text-center cosy:mb-16">
            <Heading level={2} class="cosy:mb-4">{data.servicesTitle}</Heading>
            <Text size="lg" class="cosy:text-base-content/80">
                {
                    currentLocale === 'zh-cn'
                        ? '我们提供全方位的技术服务'
                        : 'We provide comprehensive technology services'
                }
            </Text>
        </div>

        <Grid cols={{ base: 1, md: 2, lg: 4 }} gap="lg">
            {
                services.map((service) => (
                    <Card class="cosy:text-center cosy:p-6 cosy:bg-base-200 cosy:border-0">
                        <div class="cosy:mb-4">
                            <SmartIcon
                                name={service.icon}
                                size="48px"
                                class="cosy:text-primary"
                            />
                        </div>
                        <Heading level={3} size="lg" class="cosy:mb-3">
                            {service.title}
                        </Heading>
                        <Text class="cosy:text-base-content/70">
                            {service.description}
                        </Text>
                    </Card>
                ))
            }
        </Grid>
    </Container>

    <!-- Products Section -->
    <Container width="xl" padding="lg" margin="lg" background="base-200">
        <div class="cosy:text-center cosy:mb-16">
            <Heading level={2} class="cosy:mb-4">{data.productsTitle}</Heading>
            <Text size="lg" class="cosy:text-base-content/80">
                {
                    currentLocale === 'zh-cn'
                        ? '我们的核心产品'
                        : 'Our Core Products'
                }
            </Text>
        </div>

        <Grid cols={{ base: 1, md: 3 }} gap="lg">
            {
                products.map((product) => (
                    <Card class="cosy:overflow-hidden cosy:bg-base-100">
                        <div class="cosy:relative">
                            <Image
                                src={product.image}
                                alt={product.name}
                                width={400}
                                height={250}
                                class="cosy:w-full cosy:h-48 cosy:object-cover"
                            />
                            <Badge
                                variant="primary"
                                class="cosy:absolute cosy:top-4 cosy:right-4">
                                {product.badge}
                            </Badge>
                        </div>
                        <div class="cosy:p-6">
                            <Heading level={3} size="lg" class="cosy:mb-3">
                                {product.name}
                            </Heading>
                            <Text class="cosy:mb-4 cosy:text-base-content/70">
                                {product.description}
                            </Text>
                            <Button
                                variant="outline"
                                size="sm"
                                class="cosy:w-full">
                                {data.learnMore}
                            </Button>
                        </div>
                    </Card>
                ))
            }
        </Grid>
    </Container>

    <!-- Team Section -->
    <Container width="xl" padding="lg" margin="lg" background="base-100">
        <Heading level={2}>{data.teamTitle}</Heading>
        <Text size="lg" color="secondary">
            {
                currentLocale === 'zh-cn'
                    ? '认识我们的核心团队'
                    : 'Meet Our Core Team'
            }
        </Text>

        <Grid cols={{ base: 1, md: 3 }} gap="lg">
            {
                teamMembers.map((member) => (
                    <Card class="cosy:text-center cosy:p-6 cosy:bg-base-200 cosy:border-0">
                        <div class="cosy:mb-4">
                            <Image
                                src={member.avatar}
                                alt={member.name}
                                width={120}
                                height={120}
                                class="cosy:w-30 cosy:h-30 cosy:rounded-full cosy:mx-auto cosy:object-cover"
                            />
                        </div>
                        <Heading level={3} size="lg" class="cosy:mb-2">
                            {member.name}
                        </Heading>
                        <Text class="cosy:text-primary cosy:font-semibold cosy:mb-3">
                            {member.position}
                        </Text>
                        <Text class="cosy:mb-4 cosy:text-base-content/70">
                            {member.description}
                        </Text>
                        <div class="cosy:flex cosy:justify-center cosy:space-x-4">
                            {member.socialLinks.map((link) => (
                                <a
                                    href={link.url}
                                    target="_blank"
                                    rel="noopener noreferrer">
                                    <SocialIcon
                                        platform={link.platform}
                                        size="24px"
                                        class="cosy:text-base-content/60 hover:cosy:text-primary cosy:transition-colors"
                                    />
                                </a>
                            ))}
                        </div>
                    </Card>
                ))
            }
        </Grid>
    </Container>

    <!-- Contact Section -->
    <Container
        id="contact"
        width="xl"
        padding="lg"
        margin="lg"
        background="base-200">
        <div class="cosy:text-center cosy:mb-16">
            <Heading level={2} class="cosy:mb-4">{data.contactTitle}</Heading>
            <Text size="lg" class="cosy:text-base-content/80">
                {
                    currentLocale === 'zh-cn'
                        ? '让我们一起创造未来'
                        : "Let's Create the Future Together"
                }
            </Text>
        </div>

        <Container width="lg">
            <div
                class="cosy:grid cosy:grid-cols-1 cosy:lg:grid-cols-2 cosy:gap-12">
                <!-- 联系信息 -->
                <Contact
                    title={currentLocale === 'zh-cn'
                        ? '联系信息'
                        : 'Contact Information'}
                    description={currentLocale === 'zh-cn'
                        ? '我们很乐意听到您的想法和建议'
                        : "We'd love to hear your thoughts and suggestions"}
                    email="contact@innovationtech.com"
                    phone="+86 400-123-4567"
                    address={currentLocale === 'zh-cn'
                        ? '北京市朝阳区科技园区创新大厦'
                        : 'Innovation Building, Tech Park, Chaoyang District, Beijing'}
                    website="https://innovationtech.com"
                    github="https://github.com/innovationtech"
                    twitter="https://twitter.com/innovationtech"
                    linkedin="https://linkedin.com/company/innovationtech"
                />

                <!-- 联系表单 -->
                <Card
                    title={currentLocale === 'zh-cn'
                        ? '发送消息'
                        : 'Send Message'}
                    class="cosy:p-8">
                    <form class="cosy:space-y-4">
                        <div>
                            <label
                                class="cosy:block cosy:text-sm cosy:font-medium cosy:mb-2">
                                {currentLocale === 'zh-cn' ? '姓名' : 'Name'} *
                            </label>
                            <input
                                type="text"
                                required
                                class="cosy:input cosy:input-bordered cosy:w-full"
                                placeholder={currentLocale === 'zh-cn'
                                    ? '请输入您的姓名'
                                    : 'Enter your name'}
                            />
                        </div>
                        <div>
                            <label
                                class="cosy:block cosy:text-sm cosy:font-medium cosy:mb-2">
                                {currentLocale === 'zh-cn' ? '邮箱' : 'Email'} *
                            </label>
                            <input
                                type="email"
                                required
                                class="cosy:input cosy:input-bordered cosy:w-full"
                                placeholder={currentLocale === 'zh-cn'
                                    ? '请输入您的邮箱'
                                    : 'Enter your email'}
                            />
                        </div>
                        <div>
                            <label
                                class="cosy:block cosy:text-sm cosy:font-medium cosy:mb-2">
                                {currentLocale === 'zh-cn' ? '公司' : 'Company'}
                            </label>
                            <input
                                type="text"
                                class="cosy:input cosy:input-bordered cosy:w-full"
                                placeholder={currentLocale === 'zh-cn'
                                    ? '请输入您的公司名称'
                                    : 'Enter your company name'}
                            />
                        </div>
                        <div>
                            <label
                                class="cosy:block cosy:text-sm cosy:font-medium cosy:mb-2">
                                {currentLocale === 'zh-cn' ? '消息' : 'Message'}
                                *
                            </label>
                            <textarea
                                required
                                rows={4}
                                class="cosy:textarea cosy:textarea-bordered cosy:w-full"
                                placeholder={currentLocale === 'zh-cn'
                                    ? '请输入您的消息'
                                    : 'Enter your message'}></textarea>
                        </div>
                        <Button
                            type="submit"
                            variant="primary"
                            size="lg"
                            class="cosy:w-full">
                            {
                                currentLocale === 'zh-cn'
                                    ? '发送消息'
                                    : 'Send Message'
                            }
                        </Button>
                    </form>
                </Card>
            </div>
        </Container>
    </Container>

    <PlaceHolder height="5xl" />
</AppLayout>
