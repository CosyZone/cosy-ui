---
/**
 * @page Layouts Home
 * @description 布局示例首页
 */
import * as astroI18n from 'astro:i18n';
import { AppLayout, Container, Heading, Text, Button } from '@coffic/cosy-ui';
import Logo from '@/assets/logo.png';
import { configApp } from '@/config/config.app';
import { getFooterConfig } from '../_footerConfig';
import { getMetaConfig } from '../_metaConfig';
import { getSidebarItems } from './_sidebarConfig';

const currentLocale = Astro.params.lang;
const t = (zh: string, en: string) => (currentLocale === 'zh-cn' ? zh : en);

export const getStaticPaths = async () => {
    return [{ params: { lang: 'zh-cn' } }, { params: { lang: 'en' } }];
};
---

<AppLayout
    metaConfig={getMetaConfig({
        title: t('布局示例', 'Layout Examples'),
        description: t(
            '展示各种布局方式的使用方法和效果。',
            'Demonstrates various layout methods and their effects.',
        ),
        keywords: t(
            '布局, 文档布局, 网格布局',
            'layout, document layout, grid layout',
        ),
    })}
    showFooter={true}
    showSidebar={true}
    sidebarConfig={{
        sidebarItems: getSidebarItems(currentLocale || 'zh-cn'),
    }}
    footerConfig={getFooterConfig(currentLocale || 'zh-cn')}
    headerConfig={{
        logo: Logo,
        logoHref: configApp.homeLink,
        navItems: configApp.getNavItems(currentLocale),
        astroI18n: astroI18n,
    }}
    mainContentConfig={{ py: '2xl' }}>
    <Container width="full" padding="lg" flex="col" contentCentered={true}>
        <Heading level={1} margin="lg" centered={true} align="center">
            {t('布局示例', 'Layout Examples')}
        </Heading>

        <Text align="center" color="base-content/80" margin="md">
            {
                currentLocale === 'zh-cn'
                    ? '探索各种布局方式，包括文档布局和网格布局等。'
                    : 'Explore various layout methods, including document layout and grid layout.'
            }
        </Text>

        <Container width="full" margin="xl" padding="none" flex="col" gap="lg">
            <Container
                background="base-200"
                padding="xl"
                rounded="lg"
                width="full">
                <Heading level={2} margin="sm">
                    {t('文档布局', 'Document Layout')}
                </Heading>
                <Text color="base-content/80" margin="sm">
                    {
                        currentLocale === 'zh-cn'
                            ? '用于展示文档内容的布局方式，支持目录导航和文章样式。'
                            : 'Layout for displaying document content, supporting table of contents navigation and article styles.'
                    }
                </Text>
                <Button
                    variant="primary"
                    href={`/${currentLocale}/demos/layouts/doc_layout`}
                    margin="md">
                    {t('查看示例', 'View Example')}
                </Button>
            </Container>

            <Container
                background="base-200"
                padding="xl"
                rounded="lg"
                width="full">
                <Heading level={2} margin="sm">
                    {t('网格布局', 'Grid Layout')}
                </Heading>
                <Text color="base-content/80" margin="sm">
                    {
                        currentLocale === 'zh-cn'
                            ? '灵活的网格布局系统，支持响应式设计和自定义列数。'
                            : 'Flexible grid layout system supporting responsive design and custom column counts.'
                    }
                </Text>
                <Button
                    variant="primary"
                    href={`/${currentLocale}/demos/layouts/grid_layout`}
                    margin="md">
                    {t('查看示例', 'View Example')}
                </Button>
            </Container>
        </Container>
    </Container>
</AppLayout>
