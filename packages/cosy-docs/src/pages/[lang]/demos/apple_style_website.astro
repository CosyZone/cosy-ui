---
/**
 * @page Apple Style Enterprise Website Demo
 */

import {
  AppLayout,
  Hero,
  Card,
  Button,
  Text,
  Heading,
  Contact,
  SmartIcon,
  Container,
  StatsDisplay,
  ProductHero,
  FeatureCarousel,
  TeamMembers,
  getProductImage,
  getAvatarImage,
  PlaceHolder,
} from '@coffic/cosy-ui';
import { configApp } from '@/config/config.app';
import heroUrl from '@/demos/apple_style_website/images/hero.jpg?url';
import product1Url from '@/demos/apple_style_website/images/product-1.jpg?url';
import product2Url from '@/demos/apple_style_website/images/product-2.jpg?url';
import product3Url from '@/demos/apple_style_website/images/product-3.jpg?url';
import feature1Url from '@/demos/apple_style_website/images/feature-1.jpg?url';
import feature2Url from '@/demos/apple_style_website/images/feature-2.jpg?url';
import feature3Url from '@/demos/apple_style_website/images/feature-3.jpg?url';
import feature4Url from '@/demos/apple_style_website/images/feature-4.jpg?url';
import feature5Url from '@/demos/apple_style_website/images/feature-5.jpg?url';
import feature6Url from '@/demos/apple_style_website/images/feature-6.jpg?url';
import feature7Url from '@/demos/apple_style_website/images/feature-7.jpg?url';
import feature8Url from '@/demos/apple_style_website/images/feature-8.jpg?url';
import feature9Url from '@/demos/apple_style_website/images/feature-9.jpg?url';
import avatar1Url from '@/demos/apple_style_website/images/avatar-1.jpg?url';
import avatar2Url from '@/demos/apple_style_website/images/avatar-2.jpg?url';
import avatar3Url from '@/demos/apple_style_website/images/avatar-3.jpg?url';
import wechatQrUrl from '@/demos/apple_style_website/images/wechat-qr.jpg?url';

// 从 URL 获取当前语言
const currentLocale = Astro.url.pathname.split('/')[2] || 'zh-cn';

export const getStaticPaths = async () => {
  return [{ params: { lang: 'zh-cn' } }, { params: { lang: 'en' } }];
};

// 苹果风格企业数据（完整）
const appleStyleData: Record<string, any> = {
  'zh-cn': {
    companyName: '极简科技',
    slogan: '简约而不简单',
    description: '我们专注于创造极致简约的产品体验，让科技回归本质。',
    heroTitle: '重新定义',
    heroSubtitle: '科技产品',
    heroDescription: '极简设计，极致体验',
    aboutTitle: '关于我们',
    aboutContent:
      '我们相信，最好的设计是看不见的设计。通过极简的界面和直观的交互，我们让复杂的技术变得简单易用。',
    productsTitle: '产品系列',
    featuresTitle: '核心特性',
    teamTitle: '设计团队',
    contactTitle: '联系我们',
    learnMore: '了解更多',
    buyNow: '立即购买',
    watchDemo: '观看演示',
    yearsExperience: '10年经验',
    productsLaunched: '50+产品',
    usersWorldwide: '1000万+用户',
    designAwards: '20+奖项',
  },
  en: {
    companyName: 'Minimal Tech',
    slogan: 'Simple, Not Simple',
    description:
      'We focus on creating minimalist product experiences that bring technology back to its essence.',
    heroTitle: 'Redefining',
    heroSubtitle: 'Tech Products',
    heroDescription: 'Minimal Design, Maximum Impact',
    aboutTitle: 'About Us',
    aboutContent:
      'We believe the best design is invisible design. Through minimalist interfaces and intuitive interactions, we make complex technology simple and accessible.',
    productsTitle: 'Product Line',
    featuresTitle: 'Core Features',
    teamTitle: 'Design Team',
    contactTitle: 'Contact Us',
    learnMore: 'Learn More',
    buyNow: 'Buy Now',
    watchDemo: 'Watch Demo',
    yearsExperience: '10 Years',
    productsLaunched: '50+ Products',
    usersWorldwide: '10M+ Users',
    designAwards: '20+ Awards',
  },
};

const data = appleStyleData[currentLocale] || appleStyleData['zh-cn'];

// 统计数据
const statsData = [
  { value: '10+', label: data.yearsExperience },
  { value: '50+', label: data.productsLaunched },
  { value: '10M+', label: data.usersWorldwide },
  { value: '20+', label: data.designAwards },
];

// 产品数据（苹果风格）
const products = [
  {
    name: currentLocale === 'zh-cn' ? '极简手机' : 'Minimal Phone',
    description:
      currentLocale === 'zh-cn'
        ? '纯净体验，回归本质'
        : 'Pure experience, back to essence',
    image: product1Url,
    highlight: currentLocale === 'zh-cn' ? '¥6,999' : '$999',
    labels: [currentLocale === 'zh-cn' ? '新品' : 'New'],
  },
  {
    name: currentLocale === 'zh-cn' ? '智能手表' : 'Smart Watch',
    description:
      currentLocale === 'zh-cn'
        ? '健康生活，简约开始'
        : 'Healthy living, simply started',
    image: product2Url,
    highlight: currentLocale === 'zh-cn' ? '¥2,999' : '$399',
    labels: [],
  },
  {
    name: currentLocale === 'zh-cn' ? '无线耳机' : 'Wireless Earbuds',
    description:
      currentLocale === 'zh-cn'
        ? '纯净音质，无感佩戴'
        : 'Pure sound, seamless wear',
    image: product3Url,
    highlight: currentLocale === 'zh-cn' ? '¥1,299' : '$179',
    labels: [],
  },
];

// 特性数据
const features = [
  {
    title: currentLocale === 'zh-cn' ? '极简设计' : 'Minimal Design',
    description:
      currentLocale === 'zh-cn'
        ? '去除一切不必要的元素，专注核心功能'
        : 'Remove all unnecessary elements, focus on core functionality',
    icon: 'design',
  },
  {
    title: currentLocale === 'zh-cn' ? '无缝体验' : 'Seamless Experience',
    description:
      currentLocale === 'zh-cn'
        ? '流畅的交互，自然的操作'
        : 'Smooth interactions, natural operations',
    icon: 'touch',
  },
  {
    title: currentLocale === 'zh-cn' ? '智能科技' : 'Smart Technology',
    description:
      currentLocale === 'zh-cn'
        ? 'AI 驱动的个性化体验'
        : 'AI-driven personalized experience',
    icon: 'ai',
  },
  {
    title: currentLocale === 'zh-cn' ? '环保理念' : 'Eco-Friendly',
    description:
      currentLocale === 'zh-cn'
        ? '可持续材料，环保包装'
        : 'Sustainable materials, eco-friendly packaging',
    icon: 'leaf',
  },
];
---

<AppLayout
  metaConfig={{
    title: data.companyName,
    description: data.description,
    keywords:
      currentLocale === 'zh-cn'
        ? '极简设计,科技产品,用户体验,简约美学'
        : 'minimal design, tech products, user experience, minimalist aesthetics',
    author: data.companyName,
    robots: 'index, follow',
  }}
  sidebarConfig={{ sidebarItems: [] }}
  showHeader={true}
  showFooter={true}
  showSidebar={false}
  footerConfig={{
    siteName: data.companyName,
    homeLink: configApp.homeLink,
    slogan: data.slogan,
    company: data.companyName,
    inspirationalSlogan: data.slogan,
    background: 'base-200',
    products: [
      { name: 'Cisum', href: 'https://coffic.cn/cisum' },
      { name: 'JuiceEditor', href: 'https://coffic.cn/juice_editor' },
      { name: 'GitOK', href: 'https://coffic.cn/gitok' },
      { name: 'Cosy UI', href: 'https://github.com/cosyzone/cosy-ui' },
    ],
    aboutInfo: {
      aboutLink: configApp.homeLink + '#about',
      contactLink: configApp.homeLink + '#contact',
      teamLink: configApp.homeLink + '#team',
      careersLink: configApp.homeLink + '#careers',
    },
    legalInfo: {
      termsLink: configApp.homeLink + '/terms',
      privacyLink: configApp.homeLink + '/privacy',
      icp: currentLocale === 'zh-cn' ? '沪ICP备12345678号-1' : 'ICP 12345678-1',
      icpLink: 'https://beian.miit.gov.cn',
    },
    resourcesInfo: {
      newsLink: configApp.homeLink + '#news',
      historyLink: configApp.homeLink + '#history',
      partnersLink: configApp.homeLink + '#partners',
      blogLink: configApp.homeLink + '#blog',
      faqLink: configApp.homeLink + '#faq',
      mediaLink: configApp.homeLink + '#media',
      techStackLink: configApp.homeLink + '#tech',
    },
    friendlyLinks: [
      {
        name: 'GitHub',
        href: 'https://github.com/CofficLab/cosy-ui',
        external: true,
      },
      { name: 'CofficLab', href: 'https://cofficlab.com', external: true },
    ],
    socialLinks: ['https://github.com/CofficLab', 'https://twitter.com'],
    wechatQR: wechatQrUrl,
  }}
  headerConfig={{
    logoHref: configApp.homeLink,
    navItems: configApp.getNavItems(currentLocale),
  }}
  mainContentConfig={{
    verticalPadding: 'none',
    size: 'full',
    padding: 'none',
  }}>
  <Hero
    title={data.heroSubtitle}
    description={`${data.heroTitle} · ${data.heroDescription}`}
    align="center"
    backgroundImage={heroUrl}
    backgroundOverlay="dark"
    overlayOpacity={0.2}
    imagePosition="right"
    links={[
      { text: data.buyNow, href: '#', variant: 'primary' },
      { text: data.watchDemo, href: '#', variant: 'secondary' },
    ]}
  />

  <Container width="xl" padding="xl" margin="xl" background="base-200">
    <StatsDisplay
      stats={statsData}
      valueSize="3xl"
      valueColor="#3b82f6"
      labelColor="#6b7280"
      valueWeight="thin"
      labelWeight="light"
      gap="3xl"
      align="center"
    />
  </Container>

  <Container width="xl" padding="none" margin="lg">
    <FeatureCarousel
      features={[
        {
          title:
            currentLocale === 'zh-cn'
              ? '性能和电池续航'
              : 'Performance and Battery Life',
          description:
            currentLocale === 'zh-cn'
              ? '跑得快,跑得久。'
              : 'Runs fast, lasts long.',
          background: 'linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%)',
          image: feature1Url,
          textColor: 'white',
        },
        {
          title: currentLocale === 'zh-cn' ? 'Mac 和 iPhone' : 'Mac and iPhone',
          description:
            currentLocale === 'zh-cn' ? '梦幻好队友。' : 'Dream team.',
          background: '#a7f3d0',
          image: feature2Url,
          textColor: 'black',
        },
        {
          title: currentLocale === 'zh-cn' ? '兼容性' : 'Compatibility',
          description:
            currentLocale === 'zh-cn'
              ? '各种常用 App, Mac 都能跑。'
              : 'All common Apps, Mac can run them.',
          background: 'linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%)',
          image: feature3Url,
          textColor: 'white',
        },
        {
          title:
            currentLocale === 'zh-cn' ? '隐私和安全' : 'Privacy and Security',
          description:
            currentLocale === 'zh-cn'
              ? '你的私事, 只关你的事。'
              : 'Your private matters, only concern you.',
          background: 'linear-gradient(135deg, #ef4444 0%, #7c3aed 100%)',
          image: feature4Url,
          textColor: 'white',
        },
        {
          title: currentLocale === 'zh-cn' ? '创新设计' : 'Innovative Design',
          description:
            currentLocale === 'zh-cn'
              ? '每一处细节, 都经过精心设计。'
              : 'Every detail is carefully designed.',
          background: 'linear-gradient(135deg, #f59e0b 0%, #d97706 100%)',
          image: feature5Url,
          textColor: 'white',
        },
        {
          title: currentLocale === 'zh-cn' ? '环保理念' : 'Environmental Care',
          description:
            currentLocale === 'zh-cn'
              ? '为地球, 做正确的事。'
              : 'For the planet, do the right thing.',
          background: '#10b981',
          image: feature6Url,
          textColor: 'white',
        },
        {
          title:
            currentLocale === 'zh-cn' ? '专业创作' : 'Professional Creation',
          description:
            currentLocale === 'zh-cn'
              ? '让创意, 无界限。'
              : 'Let creativity know no bounds.',
          background: 'linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%)',
          image: feature7Url,
          textColor: 'white',
        },
        {
          title: currentLocale === 'zh-cn' ? '智能助手' : 'Smart Assistant',
          description:
            currentLocale === 'zh-cn'
              ? 'AI 让一切更简单。'
              : 'AI makes everything simpler.',
          background: 'linear-gradient(135deg, #06b6d4 0%, #0891b2 100%)',
          image: feature8Url,
          textColor: 'white',
        },
        {
          title: currentLocale === 'zh-cn' ? '无缝体验' : 'Seamless Experience',
          description:
            currentLocale === 'zh-cn'
              ? '设备间, 无缝切换。'
              : 'Seamless switching between devices.',
          background: '#f3f4f6',
          image: feature9Url,
          textColor: 'black',
        },
      ]}
    />
  </Container>

  <Container width="full" padding="none" margin="lg">
    {
      products.map((product, index) => (
        <ProductHero
          name={product.name}
          description={product.description}
          image={product.image}
          highlight={product.highlight}
          labels={product.labels}
          align={index % 2 === 0 ? 'left' : 'right'}
          background={index % 2 === 0 ? 'base-200' : 'base-100'}>
          <div slot="actions" style="display:flex; gap:1rem;">
            <Button variant="primary" size="lg">
              {data.buyNow}
            </Button>
            <Button variant="outline" size="lg">
              {data.learnMore}
            </Button>
          </div>
        </ProductHero>
      ))
    }
  </Container>

  <Container width="xl" padding="xl" margin="lg" background="base-100">
    <div style="text-align: center; margin-bottom: 4rem;">
      <Heading level={2} size="3xl" margin="lg" weight="thin"
        >{data.featuresTitle}</Heading
      >
    </div>
    <div
      style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 3rem;">
      {
        features.map((feature) => (
          <div style="text-align: center; padding: 2rem;">
            <div style="margin-bottom: 2rem;">
              <SmartIcon
                name={feature.icon}
                size="64px"
                class="cosy:text-primary"
              />
            </div>
            <Heading level={3} size="xl" class="cosy:mb-4 cosy:font-thin">
              {feature.title}
            </Heading>
            <Text class="cosy:text-base-content/70 cosy:font-light">
              {feature.description}
            </Text>
          </div>
        ))
      }
    </div>
  </Container>

  <Container width="full" padding="xl" margin="lg" background="base-200">
    <Container width="xl">
      <Heading level={2} size="3xl" margin="lg" weight="thin"
        >{data.teamTitle}</Heading
      >
      <TeamMembers
        members={[
          {
            name: 'A',
            role: 'Designer',
            avatar: avatar1Url,
            bio: '',
            socialLinks: [],
          },
        ]}
        columns={3}
      />
    </Container>
  </Container>

  <Container
    id="contact"
    width="xl"
    padding="xl"
    margin="lg"
    background="base-100">
    <div style="text-align: center; margin-bottom: 4rem;">
      <Heading level={2} size="3xl" margin="lg" weight="thin"
        >{data.contactTitle}</Heading
      >
      <Text size="lg" class="cosy:text-base-content/70 cosy:font-light"
        >{
          currentLocale === 'zh-cn'
            ? '让我们一起创造更美好的未来'
            : "Let's create a better future together"
        }</Text
      >
    </div>
    <div
      style="display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: start;">
      <Contact
        title={currentLocale === 'zh-cn' ? '联系信息' : 'Contact Information'}
        description={currentLocale === 'zh-cn'
          ? '我们很乐意听到您的想法'
          : "We'd love to hear from you"}
        email="hello@minimaltech.com"
        phone="+86 400-888-9999"
        address={currentLocale === 'zh-cn'
          ? '上海市浦东新区科技园区'
          : 'Tech Park, Pudong New Area, Shanghai'}
        website="https://minimaltech.com"
        github="https://github.com/minimaltech"
        twitter="https://twitter.com/minimaltech"
        linkedin="https://linkedin.com/company/minimaltech"
      />
      <Card
        title={currentLocale === 'zh-cn' ? '发送消息' : 'Send Message'}
        class="cosy:p-8">
        <form style="display: flex; flex-direction: column; gap: 1.5rem;">
          <div>
            <label
              style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #374151;"
              >{currentLocale === 'zh-cn' ? '姓名' : 'Name'} *</label
            ><input
              type="text"
              required
              style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 1rem;"
              placeholder={currentLocale === 'zh-cn'
                ? '请输入您的姓名'
                : 'Enter your name'}
            />
          </div>
          <div>
            <label
              style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #374151;"
              >{currentLocale === 'zh-cn' ? '邮箱' : 'Email'} *</label
            ><input
              type="email"
              required
              style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 1rem;"
              placeholder={currentLocale === 'zh-cn'
                ? '请输入您的邮箱'
                : 'Enter your email'}
            />
          </div>
          <div>
            <label
              style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #374151;"
              >{currentLocale === 'zh-cn' ? '消息' : 'Message'} *</label
            ><textarea
              required
              rows={4}
              style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 1rem; resize: vertical;"
              placeholder={currentLocale === 'zh-cn'
                ? '请输入您的消息'
                : 'Enter your message'}></textarea>
          </div>
          <Button
            type="submit"
            variant="primary"
            size="lg"
            class="cosy:w-full cosy:mt-4"
            >{currentLocale === 'zh-cn' ? '发送消息' : 'Send Message'}</Button
          >
        </form>
      </Card>
    </div>
  </Container>

  <PlaceHolder height="md" />
</AppLayout>
