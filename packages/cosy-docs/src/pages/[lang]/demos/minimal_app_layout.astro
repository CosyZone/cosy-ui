---



/**
 * 最少配置的 AppLayout 示例
 *
 * 此示例展示了使用 AppLayout 所需的最小配置。
 * 只需要提供基础的 metaConfig 即可使用。
 */
import { AppLayout, Container, Heading, PlaceHolder } from "@coffic/cosy-ui";

const currentLocale = Astro.params.lang || "zh-cn";

export const getStaticPaths = async () => {
	return [
		{
			params: { lang: "zh-cn" },
		},
		{
			params: { lang: "en" },
		},
	];
};

export const prerender = true;

// 最少配置：只需要 metaConfig
const metaConfig = {
	title:
		currentLocale === "zh-cn"
			? "最少配置示例"
			: "Minimal Configuration Example",
	description:
		currentLocale === "zh-cn"
			? "展示 AppLayout 的最少配置使用方法"
			: "Demonstrates minimal configuration for AppLayout",
	keywords: "AppLayout, minimal, configuration",
	author: "Cosy UI",
	robots: "index, follow",
};
---

<AppLayout
    metaConfig={metaConfig}
    showHeader={false}
    showFooter={false}
    showSidebar={false}>
    <Container padding="xl" gap="lg" flex="col">
        <Heading level={1} align="center" margin="lg">
            {
                currentLocale === 'zh-cn'
                    ? '最少配置的 AppLayout'
                    : 'Minimal AppLayout Configuration'
            }
        </Heading>

        <Container background="base-200" padding="lg" rounded="lg">
            <Heading level={2} margin="md">
                {currentLocale === 'zh-cn' ? '📦 配置说明' : '📦 Configuration'}
            </Heading>
            <Container padding="md" gap="md" flex="col">
                <p>
                    {
                        currentLocale === 'zh-cn'
                            ? '这是使用 AppLayout 最简单的方式。只需要：'
                            : 'This is the simplest way to use AppLayout. You only need:'
                    }
                </p>
                <ul style="list-style: disc; padding-left: 2rem;">
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '提供 metaConfig（页面元数据）'
                                : 'Provide metaConfig (page metadata)'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '设置 showHeader={false}（隐藏头部）'
                                : 'Set showHeader={false} (hide header)'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '设置 showFooter={false}（隐藏页脚）'
                                : 'Set showFooter={false} (hide footer)'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '设置 showSidebar={false}（隐藏侧边栏）'
                                : 'Set showSidebar={false} (hide sidebar)'
                        }
                    </li>
                </ul>
            </Container>
        </Container>

        <Container background="base-200" padding="lg" rounded="lg">
            <Heading level={2} margin="md">
                {currentLocale === 'zh-cn' ? '💡 代码示例' : '💡 Code Example'}
            </Heading>
            <Container background="base-300" padding="md" rounded="md">
                <pre
                    style="overflow-x: auto;"><code>{`<AppLayout
  metaConfig={{
    title: '页面标题',
    description: '页面描述',
    keywords: '关键词',
    author: '作者',
    robots: 'index, follow'
  }}
  showHeader={false}
  showFooter={false}
  showSidebar={false}>
  <!-- 您的页面内容 -->
  <h1>欢迎</h1>
  <p>这是您的内容</p>
</AppLayout>`}</code></pre>
            </Container>
        </Container>

        <Container background="base-200" padding="lg" rounded="lg">
            <Heading level={2} margin="md">
                {currentLocale === 'zh-cn' ? '✨ 特点' : '✨ Features'}
            </Heading>
            <Container padding="md" gap="md" flex="col">
                <ul style="list-style: disc; padding-left: 2rem;">
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '无需复杂配置'
                                : 'No complex configuration needed'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '干净的页面布局'
                                : 'Clean page layout'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '保留 SEO 优化（metaConfig）'
                                : 'SEO optimized (metaConfig)'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '完全响应式'
                                : 'Fully responsive'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '可以随时添加 Header/Footer/Sidebar'
                                : 'Can add Header/Footer/Sidebar anytime'
                        }
                    </li>
                </ul>
            </Container>
        </Container>

        <Container background="primary" padding="lg" rounded="lg">
            <Heading level={2} margin="md" color="primary">
                {currentLocale === 'zh-cn' ? '🎯 使用场景' : '🎯 Use Cases'}
            </Heading>
            <Container padding="md" gap="md" flex="col">
                <ul
                    style="list-style: disc; padding-left: 2rem; color: var(--color-primary-content);">
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '简单的着陆页'
                                : 'Simple landing pages'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '单页应用'
                                : 'Single page applications'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '快速原型开发'
                                : 'Rapid prototyping'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '极简主义设计'
                                : 'Minimalist designs'
                        }
                    </li>
                    <li>
                        {
                            currentLocale === 'zh-cn'
                                ? '学习和测试'
                                : 'Learning and testing'
                        }
                    </li>
                </ul>
            </Container>
        </Container>

        <Container background="base-200" padding="lg" rounded="lg">
            <Heading level={2} margin="md">
                {currentLocale === 'zh-cn' ? '🚀 下一步' : '🚀 Next Steps'}
            </Heading>
            <Container padding="md" gap="md" flex="col">
                <p>
                    {
                        currentLocale === 'zh-cn'
                            ? '当您需要更多功能时，可以逐步添加：'
                            : 'When you need more features, you can gradually add:'
                    }
                </p>
                <ul style="list-style: disc; padding-left: 2rem;">
                    <li>
                        {currentLocale === 'zh-cn' ? '设置 ' : 'Set '}
                        <code
                            style="background-color: var(--color-base-300); padding: 0.2rem 0.4rem; border-radius: 0.25rem;"
                            >showHeader={'{true}'}</code
                        >
                        {
                            currentLocale === 'zh-cn'
                                ? ' 添加导航栏'
                                : ' to add navigation bar'
                        }
                    </li>
                    <li>
                        {currentLocale === 'zh-cn' ? '提供 ' : 'Provide '}
                        <code
                            style="background-color: var(--color-base-300); padding: 0.2rem 0.4rem; border-radius: 0.25rem;"
                            >headerConfig</code
                        >
                        {
                            currentLocale === 'zh-cn'
                                ? ' 自定义 Header'
                                : ' to customize Header'
                        }
                    </li>
                    <li>
                        {currentLocale === 'zh-cn' ? '提供 ' : 'Provide '}
                        <code
                            style="background-color: var(--color-base-300); padding: 0.2rem 0.4rem; border-radius: 0.25rem;"
                            >sidebarConfig</code
                        >
                        {
                            currentLocale === 'zh-cn'
                                ? ' 添加侧边栏导航'
                                : ' to add sidebar navigation'
                        }
                    </li>
                    <li>
                        {currentLocale === 'zh-cn' ? '提供 ' : 'Provide '}
                        <code
                            style="background-color: var(--color-base-300); padding: 0.2rem 0.4rem; border-radius: 0.25rem;"
                            >footerConfig</code
                        >
                        {
                            currentLocale === 'zh-cn'
                                ? ' 自定义页脚'
                                : ' to customize footer'
                        }
                    </li>
                </ul>
            </Container>
        </Container>

        <Container padding="none" style="margin-top: 2rem;">
            <PlaceHolder muted={true} height="2xl" padding="xl">
                <p style="text-align: center;">
                    {
                        currentLocale === 'zh-cn'
                            ? '这里可以是您的内容区域'
                            : 'This can be your content area'
                    }
                </p>
            </PlaceHolder>
        </Container>
    </Container>
</AppLayout>
