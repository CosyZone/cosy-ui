        <form style="display: flex; flex-direction: column; gap: 1.5rem;">
          <div>
            <label style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #374151;">{currentLocale === 'zh-cn' ? '公司名称' : 'Company Name'} *</label>
            <input type="text" required style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 1rem;" placeholder={currentLocale === 'zh-cn' ? '请输入您的公司名称' : 'Enter your company name'} />
          </div>
          <div>
            <label style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #374151;">{currentLocale === 'zh-cn' ? '联系人' : 'Contact Person'} *</label>
