                <Grid cols={{ base: 1, sm: 2 }} gap="sm">
                  {product.specifications.slice(0, 4).map((spec: { name: string; value: string }) => (
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.25rem 0;">
                      <Text size="sm" class="cosy:text-base-content/60">{spec.name}</Text>
                      <Text size="sm" class="cosy:font-medium">{spec.value}</Text>
                    </div>
                  ))}
                </Grid>
              </div>
              <!-- 应用领域 -->
              <div class="cosy:mb-4">
                <Text size="sm" class="cosy:font-semibold cosy:mb-2">{currentLocale === 'zh-cn' ? '应用领域' : 'Applications'}</Text>
