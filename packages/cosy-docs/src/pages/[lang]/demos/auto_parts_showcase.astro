        email="info@precisionautoparts.com"
        phone="+86 400-888-9999"
        address={currentLocale === 'zh-cn' ? '上海市浦东新区汽车产业园' : 'Auto Industry Park, Pudong New Area, Shanghai'}
        website="https://precisionautoparts.com"
        github="https://github.com/precisionautoparts"
        twitter="https://twitter.com/precisionautoparts"
        linkedin="https://linkedin.com/company/precisionautoparts"
