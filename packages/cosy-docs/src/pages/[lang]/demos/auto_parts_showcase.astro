---

<AppLayout
  metaConfig={getMetaConfig({
    title: data.companyName,
    description: data.description,
    keywords:
      currentLocale === 'zh-cn'
        ? '汽车零部件,精密制造,发动机零部件,制动系统,悬挂系统'
        : 'auto parts, precision manufacturing, engine components, brake system, suspension',
    author: data.companyName,
  })}
  showHeader={true}
  showFooter={true}
  showSidebar={false}
  footerConfig={getFooterConfig(currentLocale || 'zh-cn')}
  headerConfig={{
    logo: Logo,
    logoHref: configApp.homeLink,
    navItems: configApp.getNavItems(currentLocale),
    astroI18n: astroI18n,
    shadow: 'none',
  }}
  mainContentConfig={{ py: 'none', size: 'full', padding: 'none' }}>
  <!-- Hero Section - 企业主展示 -->
  <Hero
    title={data.heroSubtitle}
    subtitle={data.heroTitle}
    description={data.heroDescription}
    backgroundImage={heroUrl}
    backgroundOpacity={0.2}
    gradient="linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%)"
    textColor="white"
    align="center"
    size="full"
    padding="xl">
    <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; margin-top: 2rem;">
      <Button variant="primary" size="lg" class="cosy:px-8 cosy:py-4 cosy:bg-white cosy:text-blue-600 cosy:hover:bg-gray-100">
        {data.learnMore}
      </Button>
      <Button variant="outline" size="lg" class="cosy:px-8 cosy:py-4 cosy:border-white cosy:text-white cosy:hover:bg-white cosy:hover:text-blue-600">
        {data.contactUs}
      </Button>
    </div>
  </Hero>

  <!-- Stats Section - 企业数据展示 -->
  <Container width="xl" padding="xl" margin="lg" background="base-100">
    <StatsDisplay
      stats={data.stats}
      valueSize="3xl"
      valueColor="#3b82f6"
      labelColor="#6b7280"
      valueWeight="bold"
      labelWeight="medium"
      gap="3xl"
      align="center"
    />
  </Container>

  <!-- Features Section - 企业特性 -->
  <Container width="xl" padding="xl" margin="lg" background="base-200">
    <div style="text-align: center; margin-bottom: 4rem;">
      <Heading level={2} size="3xl" margin="lg" weight="thin">
        {currentLocale === 'zh-cn' ? '核心优势' : 'Core Advantages'}
      </Heading>
    </div>

    <Grid cols={{ base: 1, md: 2, lg: 4 }} gap="xl">
      {
        data.features.map((feature: Feature) => (
          <Card class="cosy:p-6 cosy:text-center">
            <div style="margin-bottom: 2rem;">
              <SmartIcon name={feature.icon} size="64px" class="cosy:text-primary" />
            </div>
            <Heading level={3} size="xl" class="cosy:mb-4 cosy:font-medium">
              {feature.title}
            </Heading>
            <Text class="cosy:text-base-content/70 cosy:font-light">
              {feature.description}
            </Text>
          </Card>
        ))
      }
    </Grid>
  </Container>

  <!-- Products Section - 产品展示 -->
  <Container width="xl" padding="xl" margin="lg" background="base-100">
    <div style="text-align: center; margin-bottom: 4rem;">
      <Heading level={2} size="3xl" margin="lg" weight="thin">
        {currentLocale === 'zh-cn' ? '产品系列' : 'Product Series'}
      </Heading>
    </div>

    <Grid cols={{ base: 1, lg: 2 }} gap="xl">
      {
        data.products.map((product: Product) => (
          <Card class="cosy:overflow-hidden cosy:hover:shadow-xl cosy:transition-shadow">
            <div style="position: relative;">
              <Image src={product.image} alt={product.name} width={600} height={400} class="cosy:w-full cosy:h-64 cosy:object-cover" />
