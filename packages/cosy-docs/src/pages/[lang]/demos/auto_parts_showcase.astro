                  {product.applications.map((app: string) => (
                    <Badge variant="secondary" size="sm">{app}</Badge>
                  ))}
                </div>
              </div>
              <!-- 质量认证 -->
              <div>
                <Text size="sm" class="cosy:font-semibold cosy:mb-2">{currentLocale === 'zh-cn' ? '质量认证' : 'Certifications'}</Text>
                <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                  {product.certifications.map((cert: string) => (
                    <Badge variant="secondary" size="sm">{cert}</Badge>
