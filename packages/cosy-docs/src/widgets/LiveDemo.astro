---
/**
 * @component LiveDemo
 *
 * @description
 * 实际效果演示组件，使用 DemoSection 展示智能验证的实际效果
 */

import DemoSection from './DemoSection.astro';
import {
    Container,
    Heading,
    CodePanel,
    ErrorIcon,
    Main,
} from '@coffic/cosy-ui';

export interface Props {
    /**
     * 语言设置
     */
    lang: string;
}

const { lang } = Astro.props;
const title = lang === 'zh-cn' ? '实际效果演示' : 'Live Demo';
const description =
    lang === 'zh-cn'
        ? '直观展示智能验证的实际效果，让开发体验更加友好'
        : 'Intuitive demonstration of smart validation effects for a better development experience';
const sampleCode = `<Main px="lg" pl="md" pr="md">
    <p>Content</p>
</Main>`;
---

<DemoSection
    title={title}
    description={description}
    background="gradient-warning"
    align="right">
    <!-- 演示区域 -->
    <Container slot="demo" flex="col" gap="lg" width="2xl" padding="md">
        <!-- 错误用法示例 -->
        <CodePanel
            code={sampleCode}
            language="astro"
            theme="dark-plus"
            showLineNumbers={false}
        />
        <!-- 真实的 Main 组件演示 -->
        <Container margin="md" background="info/10" rounded="sm" padding="md">
            <Main px="lg" pl="md" pr="md">
                <p class="cosy:text-base-content">Content</p>
            </Main>
        </Container>
    </Container>
</DemoSection>
