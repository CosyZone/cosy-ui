---
/**
 * @component BuilderPattern
 *
 * @description
 * 构建器模式展示组件，使用 DemoSection 展示修饰器写法的特点
 */

import DemoSection from './DemoSection.astro';
import { Container, Heading, CodePanel } from '@coffic/cosy-ui';
import ContainerBasicBuilderSource from '../components/container/ContainerBasicBuilder.astro?raw';

export interface Props {
    /**
     * 语言设置
     */
    lang: string;
}

const { lang } = Astro.props;
const title = lang === 'zh-cn' ? '构建器模式' : 'Builder Pattern';
const description =
    lang === 'zh-cn'
        ? '通过链式调用和修饰器方法，让组件配置更加直观和灵活'
        : 'Through chaining calls and modifier methods, making component configuration more intuitive and flexible';
---

<DemoSection
    title={title}
    description={description}
    background="gradient-info"
    align="left">
    <!-- 演示区域 -->
    <Container slot="demo" flex="col" gap="lg" width="full" background="none">
        <CodePanel
            code={ContainerBasicBuilderSource}
            language="astro"
            theme="dark-plus"
            showLineNumbers={false}
        />
    </Container>
</DemoSection>
