---
/**
 * @component DemoSection
 *
 * @description
 * 演示区域组件，使用类似 ProductHero 的布局但展示实际的演示组件
 * 适用于展示代码示例、功能演示等场景
 */

import { Container, Heading, type BackgroundColor } from "@coffic/cosy-ui";

export interface Props {
	/**
	 * 标题
	 */
	title: string;
	/**
	 * 描述
	 */
	description: string;
	/**
	 * 背景色类型
	 */
	background?: BackgroundColor;
	/**
	 * 布局对齐方式
	 */
	align?: "left" | "right" | "top" | "bottom";
	/**
	 * 自定义类名
	 */
	class?: string;
}

const {
	title,
	description,
	background = "base-100",
	align = "left",
	class: className = "",
} = Astro.props;

// 根据对齐方式决定布局
const isRightAlign = align === "right";
const isTopAlign = align === "top";
const isBottomAlign = align === "bottom";
const isVerticalLayout = isTopAlign || isBottomAlign;
---

<Container width="full" background={background} padding="xl" class={className}>
    <Container
        width="2xl"
        flex={isVerticalLayout ? 'col' : 'row'}
        gap="xl"
        items="center"
        justify="between">
        <div
            class:list={[
                isVerticalLayout
                    ? 'cosy:flex cosy:flex-col cosy:gap-16 cosy:items-center'
                    : 'cosy:grid cosy:grid-cols-1 cosy:md:grid-cols-2 cosy:gap-16 cosy:items-center',
            ]}>
            <!-- 内容区域 -->
            <div
                class:list={[
                    isVerticalLayout
                        ? isTopAlign
                            ? 'cosy:order-1'
                            : 'cosy:order-2'
                        : isRightAlign
                          ? 'cosy:md:order-2'
                          : 'cosy:md:order-1',
                ]}>
                <div class="cosy:space-y-6">
                    <!-- 标题 -->
                    <Heading
                        level={2}
                        class="cosy:text-4xl cosy:font-bold cosy:leading-tight">
                        {title}
                    </Heading>

                    <!-- 描述 -->
                    <p
                        class="cosy:text-lg cosy:text-base-content/80 cosy:leading-relaxed">
                        {description}
                    </p>
                </div>
            </div>

            <!-- 演示区域 -->
            <div
                class:list={[
                    isVerticalLayout
                        ? isTopAlign
                            ? 'cosy:order-2'
                            : 'cosy:order-1'
                        : isRightAlign
                          ? 'cosy:md:order-1'
                          : 'cosy:md:order-2',
                ]}>
                <slot name="demo" />
            </div>
        </div>
    </Container>
</Container>
