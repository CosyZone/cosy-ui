---
/**
 * @component CodeShowcase
 * @description 代码展示 - 左侧代码右侧预览
 */

import { Container, Heading, CodePanel, Card, Button } from '@coffic/cosy-ui';

export interface Props {
    lang: string;
}

const { lang } = Astro.props;

const title =
    lang === 'zh-cn' ? '简洁。强大。优雅。' : 'Simple. Powerful. Elegant.';

const subtitle =
    lang === 'zh-cn'
        ? '只需几行代码，即可创建美丽的界面'
        : 'Create beautiful interfaces with just a few lines of code';

const sampleCode = `---
import { Card, Button, Heading } from '@coffic/cosy-ui';
---

<Card padding="xl" shadow="lg" rounded="xl">
  <Heading level={2}>Welcome</Heading>
  <p>Start building amazing things</p>
  <Button variant="primary">Get Started</Button>
</Card>`;
---

<Container width="full" padding="2xl" background="base-100" margin="none">
    <Heading level={2} align="center" size="3xl" weight="bold" margin="lg">
        {title}
    </Heading>
    <Heading
        level={3}
        align="center"
        size="lg"
        weight="normal"
        color="muted"
        margin="xl">
        {subtitle}
    </Heading>

    <Container width="2xl" margin="xl">
        <div class="code-showcase-grid">
            <!-- 代码部分 -->
            <div>
                <CodePanel
                    code={sampleCode}
                    language="astro"
                    theme="dark-plus"
                    showLineNumbers={true}
                />
            </div>

            <!-- 预览部分 -->
            <div class="preview-container">
                <Card
                    width="full"
                    padding="xl"
                    shadow="lg"
                    rounded="xl"
                    background="base-100">
                    <Heading level={2} margin="sm">
                        {lang === 'zh-cn' ? '欢迎' : 'Welcome'}
                    </Heading>
                    <p class="preview-text">
                        {
                            lang === 'zh-cn'
                                ? '开始构建令人惊叹的东西'
                                : 'Start building amazing things'
                        }
                    </p>
                    <Button variant="primary">
                        {lang === 'zh-cn' ? '快速开始' : 'Get Started'}
                    </Button>
                </Card>
            </div>
        </div>
    </Container>
</Container>

<style>
    .code-showcase-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        align-items: center;
    }

    @media (min-width: 1024px) {
        .code-showcase-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .preview-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .preview-text {
        color: rgba(var(--bc) / 0.7);
        margin-bottom: 1rem;
    }
</style>
