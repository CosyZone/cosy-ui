---



/**
 * @component HeroSection
 * @description 首页震撼开场区域 - 展示 Factory 模式和 Props Builder
 */

import { Button, Card, CodePanel, Container, Heading } from '@coffic/cosy-ui';
import AlertPropsBuilderExample from './AlertPropsBuilderExample.astro';
import alertExampleSourceCode from './AlertPropsBuilderExample.astro?raw';

export interface Props {
    lang: string;
}

const { lang } = Astro.props;

// 多语言文本
const title =
    lang === 'zh-cn' ? '构建美好 编码快乐' : 'Build Beautiful. Build Fast.';

const ctaStart = lang === 'zh-cn' ? '快速开始' : 'Get Started';
const ctaComponents = lang === 'zh-cn' ? '查看组件' : 'View Components';
---

<!-- Hero 区域 -->
<Container width="full" padding="none" margin="none">
    <!-- 上方：文字内容 -->
    <Container
        width="2xl"
        padding="2xl"
        margin="xl"
        flex="col"
        items="center"
        gap="xl">
        <!-- 标题 -->
        <Heading level={1} size="5xl" weight="bold" align="center">
            {title}
        </Heading>

        <!-- CTA 按钮 -->
        <Container
            flex="row"
            gap="md"
            items="center"
            width="full"
            contentCentered>
            <Button
                as="a"
                href={`/${lang}/manuals/guide`}
                variant="primary"
                size="lg"
                rounded="lg">
                {ctaStart}
            </Button>
            <Button
                as="a"
                href={`/${lang}/manuals/components`}
                variant="accent"
                size="lg"
                rounded="lg">
                {ctaComponents}
            </Button>
        </Container>
    </Container>

    <!-- 下方：Props Builder 展示 -->
    <Container width="full" padding="xl" margin="none">
        <Container width="xl" margin="none" flex="col" gap="lg">
            <!-- 代码 -->
            <CodePanel
                code={alertExampleSourceCode}
                language="astro"
                theme="dark-plus"
            />

            <!-- 渲染效果 -->
            <Card
                padding="xl"
                rounded="xl"
                border="md"
                borderColor="primary/20"
                background="base-100"
                contentCentered>
                <AlertPropsBuilderExample />
            </Card>
        </Container>
    </Container>
</Container>
