---
/**
 * @component HeroSection
 * @description 首页震撼开场区域 - 展示 Factory 模式和 Props Builder
 */

import {
    Alert,
    Button,
    Card,
    Container,
    getAvatarImage,
    Heading,
    MacWindow,
    Review,
    TeamMember,
} from '@coffic/cosy-ui';
import { Code, Rocket, Sparkles, Wrench } from 'lucide-astro';
import ProductFeature from '@/widgets/common/ProductFeature.astro';

export interface Props {
    lang: string;
}

const { lang = 'zh-cn' } = Astro.props as Props;
const ctaStart = lang === 'zh-cn' ? '快速开始' : 'Get Started';
const ctaComponents = lang === 'zh-cn' ? '查看组件' : 'View Components';
const avatar = getAvatarImage({ randomSeed: 'showcase-member' });

const designPhilosophyFeatures =
    lang === 'zh-cn'
        ? [
              {
                  icon: Sparkles,
                  title: '导入即用',
                  description: '无需配置，导入即可使用，让开发更简单',
              },
              {
                  icon: Wrench,
                  title: '易于替换',
                  description: '随时替换为自定义组件，实现更多可能性',
              },
              {
                  icon: Code,
                  title: '良好支持 TypeScript',
                  description: '完整的类型定义和类型安全保证',
              },
              {
                  icon: Rocket,
                  title: '快速成型',
                  description: '项目初期快速构建，未来灵活扩展',
              },
          ]
        : [
              {
                  icon: Sparkles,
                  title: 'Import & Use',
                  description:
                      'No configuration needed. Import and start building.',
              },
              {
                  icon: Wrench,
                  title: 'Easy to Replace',
                  description:
                      'Replace with custom components anytime for more flexibility',
              },
              {
                  icon: Code,
                  title: 'Excellent TypeScript Support',
                  description:
                      'Complete type definitions and type safety guarantees',
              },
              {
                  icon: Rocket,
                  title: 'Build Fast',
                  description:
                      'Start quickly, scale freely as your project grows',
              },
          ];
---

<ProductFeature
    title={lang === 'zh-cn'
        ? 'Cosy UI - Astro组件库'
        : 'Cosy UI - Astro Component Library'}
    description={lang === 'zh-cn'
        ? '构建美好 编码快乐'
        : 'Build Beautiful. Build Fast.'}
    lang={lang}
    features={designPhilosophyFeatures}>
    <!-- CTA 按钮 -->
    <div slot="cta" class="flex gap-4 flex-wrap justify-center">
        <Button
            as="a"
            href={`/${lang}/manuals/guide`}
            variant="primary"
            size="lg"
            rounded="lg">
            {ctaStart}
        </Button>
        <Button
            as="a"
            href={`/${lang}/manuals/components`}
            variant="accent"
            size="lg"
            rounded="lg">
            {ctaComponents}
        </Button>
    </div>

    <!-- 组件展示网格 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Button 展示 -->
        <MacWindow
            title={lang === 'zh-cn' ? '按钮组件' : 'Button'}
            background="base-200"
            padding="lg">
            <div class="flex flex-col gap-4 p-4">
                <!-- 基础变体 -->
                <div class="flex gap-2 justify-center flex-wrap">
                    <Button variant="primary" size="sm">Primary</Button>
                    <Button variant="secondary" size="sm">Secondary</Button>
                    <Button variant="accent" size="sm">Accent</Button>
                    <Button variant="success" size="sm">Success</Button>
                    <Button variant="warning" size="sm">Warning</Button>
                    <Button variant="error" size="sm">Error</Button>
                </div>

                <!-- 轮廓样式 -->
                <div class="flex gap-2 justify-center flex-wrap">
                    <Button variant="outline" size="sm">Outline</Button>
                    <Button variant="ghost" size="sm">Ghost</Button>
                    <Button variant="link" size="sm">Link</Button>
                </div>

                <!-- 不同尺寸 -->
                <div class="flex gap-2 justify-center items-center">
                    <Button variant="primary" size="xs">XS</Button>
                    <Button variant="primary" size="sm">SM</Button>
                    <Button variant="primary" size="md">MD</Button>
                    <Button variant="primary" size="lg">LG</Button>
                    <Button variant="primary" size="xl">XL</Button>
                </div>

                <!-- 不同形状 -->
                <div class="flex gap-2 justify-center flex-wrap">
                    <Button variant="primary" size="sm" rounded="none"
                        >Square</Button
                    >
                    <Button variant="primary" size="sm" rounded="sm"
                        >Rounded</Button
                    >
                    <Button variant="primary" size="sm" rounded="md"
                        >More</Button
                    >
                    <Button variant="primary" size="sm" rounded="lg"
                        >Round</Button
                    >
                    <Button variant="primary" size="sm" rounded="full"
                        >Pill</Button
                    >
                </div>
            </div>
        </MacWindow>

        <!-- Card 展示 -->
        <MacWindow
            title={lang === 'zh-cn' ? '卡片组件' : 'Card'}
            background="base-200"
            padding="lg">
            <div class="p-4 flex justify-center mx-auto">
                <Card
                    width="full"
                    padding="lg"
                    shadow="md"
                    rounded="lg"
                    background="success/80">
                    <Heading
                        level={4}
                        weight="bold"
                        color="default"
                        align="center">
                        {lang === 'zh-cn' ? '精美卡片' : 'Beautiful Card'}
                    </Heading>
                    <p class="text-sm text-base-content/80">
                        {
                            lang === 'zh-cn'
                                ? '卡片组件让内容组织更清晰'
                                : 'Card component makes content organization clearer'
                        }
                    </p>
                </Card>
            </div>
        </MacWindow>

        <!-- Alert 展示 -->
        <MacWindow
            title={lang === 'zh-cn' ? '提示组件' : 'Alert'}
            background="base-200"
            padding="lg">
            <div class="flex flex-col gap-3 p-4 justify-center mx-auto">
                <Alert type="success" closable={false}>
                    {lang === 'zh-cn' ? '操作成功！' : 'Success!'}
                </Alert>
                <Alert type="info" closable={false}>
                    {lang === 'zh-cn' ? '提示信息' : 'Info'}
                </Alert>
                <Alert type="warning" closable={false}>
                    {lang === 'zh-cn' ? '警告' : 'Warning'}
                </Alert>
            </div>
        </MacWindow>

        <!-- Review 展示 -->
        <MacWindow
            title={lang === 'zh-cn' ? '评价组件' : 'Review'}
            background="base-200"
            padding="lg">
            <div class="p-4">
                <Review
                    userName={lang === 'zh-cn' ? '张先生' : 'John'}
                    rating={5}
                    comment={lang === 'zh-cn'
                        ? '非常棒的组件库！'
                        : 'Amazing component library!'}
                    rounded="lg"
                    background="base-100"
                />
            </div>
        </MacWindow>

        <!-- TeamMember 展示 -->
        <MacWindow
            title={lang === 'zh-cn' ? '团队成员' : 'Team Member'}
            background="base-200"
            padding="lg">
            <div class="p-4 flex justify-center mx-auto">
                <TeamMember
                    background="primary/50"
                    rounded="xl"
                    name={lang === 'zh-cn' ? '李明' : 'Alex'}
                    role={lang === 'zh-cn'
                        ? '前端工程师'
                        : 'Frontend Developer'}
                    avatar={avatar}
                    bio={lang === 'zh-cn'
                        ? '专注于现代化 Web 开发'
                        : 'Focused on modern web development'}
                />
            </div>
        </MacWindow>

        <!-- Badge 展示 -->
        <MacWindow
            title={lang === 'zh-cn' ? '徽章组件' : 'Badge'}
            background="base-200"
            padding="lg">
            <div class="flex flex-col gap-4 p-4">
                <!-- 按钮徽章 -->
                <div class="flex gap-3 justify-center flex-wrap">
                    <Button variant="primary">
                        {lang === 'zh-cn' ? '消息' : 'Messages'}
                        <span class="badge badge-secondary">9+</span>
                    </Button>
                    <Button variant="secondary">
                        {lang === 'zh-cn' ? '通知' : 'Notifications'}
                        <span class="badge badge-accent">NEW</span>
                    </Button>
                    <Button variant="success">
                        {lang === 'zh-cn' ? '更新' : 'Updates'}
                        <span class="badge badge-info">12</span>
                    </Button>
                </div>

                <!-- 独立徽章展示 -->
                <div class="flex gap-2 justify-center flex-wrap">
                    <span class="badge">default</span>
                    <span class="badge badge-neutral">neutral</span>
                    <span class="badge badge-primary">primary</span>
                    <span class="badge badge-secondary">secondary</span>
                    <span class="badge badge-accent">accent</span>
                    <span class="badge badge-ghost">ghost</span>
                    <span class="badge badge-info">info</span>
                    <span class="badge badge-success">success</span>
                    <span class="badge badge-warning">warning</span>
                    <span class="badge badge-error">error</span>
                </div>

                <!-- 不同尺寸徽章 -->
                <div class="flex gap-2 justify-center items-center">
                    <span class="badge badge-xs">XS</span>
                    <span class="badge badge-sm">SM</span>
                    <span class="badge badge-md">MD</span>
                    <span class="badge badge-lg">LG</span>
                </div>
            </div>
        </MacWindow>
    </div>
</ProductFeature>
