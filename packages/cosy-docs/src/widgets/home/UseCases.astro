---
/**
 * @component UseCases
 * @description 使用案例 - 展示实际项目
 */

import { Products } from '@coffic/cosy-ui';
import ProductFeature, {
    type Feature,
} from '@/widgets/common/ProductFeature.astro';

export interface Props {
    lang: string;
}

const { lang = 'zh-cn' } = Astro.props as Props;

const features: Feature[] = [];
---

<ProductFeature
    title={lang === 'zh-cn' ? '受创作者信赖' : 'Trusted by Creators'}
    description={lang === 'zh-cn'
        ? '这些优秀的项目都在使用 Cosy UI'
        : 'These amazing projects are built with Cosy UI'}
    lang={lang}
    features={features}>
    <Products
        showBorder={false}
        margin="none"
        products={[
            {
                name: lang === 'zh-cn' ? '快易知' : 'Kuaiyizhi',
                description:
                    lang === 'zh-cn'
                        ? '一个知识库网站，提供丰富的学习资源'
                        : 'A knowledge base website with rich learning resources',
                productUrl: 'https://kuaiyizhi.cn/zh-cn/courses',
                image: 'https://github.com/buildmyown.png',
            },
            {
                name: 'Coffic Lab',
                description:
                    lang === 'zh-cn'
                        ? 'Coffic 工作室，专注于现代化 Web 开发'
                        : 'Coffic Studio, focused on modern web development',
                productUrl: 'https://coffic.cn',
                image: 'https://github.com/cofficlab.png',
            },
        ]}
        columns={{
            base: 1,
            sm: 2,
            md: 2,
            lg: 2,
            xl: 2,
        }}
        cardSize="lg"
        gap="lg"
    />
</ProductFeature>
