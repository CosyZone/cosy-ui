---



/**
 * @component DeveloperExperience
 * @description 开发者体验 - 突出 TypeScript、文档等特性
 */

import { Card, Container, Heading, MacWindow, Text } from '@coffic/cosy-ui';

export interface Props {
    lang: string;
}

const { lang } = Astro.props;

const title = lang === 'zh-cn' ? '为开发者而生' : 'Built for Developers';

const subtitle =
    lang === 'zh-cn'
        ? '卓越的开发体验,让编码变得更加愉悦'
        : 'Exceptional developer experience makes coding more enjoyable';

const features =
    lang === 'zh-cn'
        ? [
              {
                  icon: '📘',
                  title: 'TypeScript 支持',
                  description: '完整的类型定义，智能代码提示，减少错误',
              },
              {
                  icon: '✅',
                  title: 'Props 验证',
                  description: '智能属性验证，在开发时即可发现问题',
              },
              {
                  icon: '📚',
                  title: '文档完善',
                  description: '详细的文档和示例，快速上手无压力',
              },
          ]
        : [
              {
                  icon: '📘',
                  title: 'TypeScript Support',
                  description:
                      'Complete type definitions, smart code hints, fewer errors',
              },
              {
                  icon: '✅',
                  title: 'Props Validation',
                  description:
                      'Smart property validation, catch issues during development',
              },
              {
                  icon: '📚',
                  title: 'Complete Documentation',
                  description:
                      'Detailed docs and examples for quick onboarding',
              },
          ];

// 示例代码
const codeExample = `import { Button } from '@coffic/cosy-ui';

// TypeScript 自动提示所有属性
<Button
  variant="primary"  // ✓ 类型提示
  size="lg"          // ✓ 智能补全
  disabled={false}   // ✓ 属性验证
>
  Click me
</Button>`;
---

<Container width="full" padding="2xl" background="primary/10" margin="none">
    <Heading level={2} align="center" size="3xl" weight="bold" margin="lg">
        {title}
    </Heading>
    <Heading
        level={3}
        align="center"
        size="lg"
        weight="normal"
        color="muted"
        margin="xl">
        {subtitle}
    </Heading>

    <Container width="2xl" margin="xl">
        <!-- 代码示例 -->
        <div class="code-section">
            <MacWindow
                title={lang === 'zh-cn'
                    ? '智能代码提示'
                    : 'Smart Code Completion'}
                background="base-100"
                padding="lg">
                <pre class="code-example"><code>{codeExample}</code></pre>
            </MacWindow>
        </div>

        <!-- 特性卡片 -->
        <div class="features-grid">
            {
                features.map((feature) => (
                    <Card
                        width="full"
                        padding="xl"
                        shadow="md"
                        rounded="lg"
                        background="base-100"
                        class="feature-card">
                        <div class="feature-icon">{feature.icon}</div>
                        <Heading
                            level={4}
                            align="center"
                            size="lg"
                            weight="bold"
                            margin="sm">
                            {feature.title}
                        </Heading>
                        <Text align="center" size="sm" color="muted">
                            {feature.description}
                        </Text>
                    </Card>
                ))
            }
        </div>
    </Container>
</Container>

<style>
    .code-section {
        margin-bottom: 3rem;
    }

    .code-example {
        background-color: rgba(var(--b3) / 1);
        padding: 1.5rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        font-size: 0.875rem;
    }

    .features-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    @media (min-width: 768px) {
        .features-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .feature-card {
        transition: all 0.3s ease;
    }

    .feature-card:hover {
        box-shadow:
            0 20px 25px -5px rgb(0 0 0 / 0.1),
            0 8px 10px -6px rgb(0 0 0 / 0.1);
    }

    .feature-icon {
        font-size: 3rem;
        text-align: center;
        margin-bottom: 1rem;
    }
</style>
