---
/**
 * @component FeatureHighlights
 * @description 核心特性展示 - 三栏布局突出核心优势
 */

import { Heading } from '@coffic/cosy-ui';
import {
    Lightbulb,
    Link,
    Palette,
    Rocket,
    Shield,
    Smartphone,
} from 'lucide-astro';
import ProductFeature, {
    type Feature,
} from '@/widgets/common/ProductFeature.astro';

export interface Props {
    lang: string;
}

const { lang = 'zh-cn' } = Astro.props as Props;

const features: Feature[] =
    lang === 'zh-cn'
        ? [
              {
                  icon: Rocket,
                  title: '基于 Astro',
                  description: '性能优异，零 JS 开销，让你的网站飞速加载',
              },
              {
                  icon: Palette,
                  title: '60+ 组件',
                  description: '开箱即用的精美组件，满足各种开发需求',
              },
              {
                  icon: Smartphone,
                  title: '响应式设计',
                  description: '完美适配各种设备，从手机到桌面无缝体验',
              },
              {
                  icon: Lightbulb,
                  title: '智能提示',
                  description: '完整的 TypeScript 类型支持',
              },
              {
                  icon: Link,
                  title: '流畅链式',
                  description: '优雅的链式调用语法',
              },
              {
                  icon: Shield,
                  title: '类型安全',
                  description: '编译时错误检查',
              },
          ]
        : [
              {
                  icon: Rocket,
                  title: 'Built on Astro',
                  description:
                      'Exceptional performance, zero JS overhead, lightning-fast loading',
              },
              {
                  icon: Palette,
                  title: '60+ Components',
                  description:
                      'Beautiful components ready to use, meeting all development needs',
              },
              {
                  icon: Smartphone,
                  title: 'Responsive Design',
                  description:
                      'Perfect adaptation to all devices, seamless experience from mobile to desktop',
              },
              {
                  icon: Lightbulb,
                  title: 'IntelliSense',
                  description: 'Full TypeScript support',
              },
              {
                  icon: Link,
                  title: 'Fluent API',
                  description: 'Elegant chaining syntax',
              },
              {
                  icon: Shield,
                  title: 'Type Safe',
                  description: 'Compile-time error checking',
              },
          ];
---

<ProductFeature
    title={lang === 'zh-cn' ? '为什么选择 Cosy UI' : 'Why Choose Cosy UI'}
    description=""
    lang={lang}
    features={[]}>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
            features.map((feature, index) => {
                const gradients = [
                    'bg-linear-to-br from-purple-400/80 to-blue-600/80',
                    'bg-linear-to-br from-pink-400/80 to-red-500/80',
                    'bg-linear-to-br from-blue-400/80 to-cyan-500/80',
                    'bg-linear-to-br from-emerald-400/80 to-teal-600/80',
                    'bg-linear-to-br from-orange-400/80 to-pink-500/80',
                    'bg-linear-to-br from-indigo-400/80 to-purple-600/80',
                ];
                const gradient = gradients[index % gradients.length];

                return (
                    <div
                        class={`rounded-xl overflow-hidden shadow-inner ${gradient}`}>
                        <div class="p-8 flex flex-col items-center text-center min-h-[200px] justify-center">
                            <feature.icon class="w-16 h-16 mb-4 drop-shadow-lg text-base-content/60" />
                            <Heading
                                level={3}
                                weight="bold"
                                color="white"
                                align="center">
                                {feature.title}
                            </Heading>
                            <p class="text-white/90 text-sm leading-relaxed">
                                {feature.description}
                            </p>
                        </div>
                    </div>
                );
            })
        }
    </div>
</ProductFeature>
