{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"useAdjacentOverloadSignatures": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": [
				"**/.astro/**",
				"**/app.css",
				"**/dist/**",
				"**/node_modules/**"
			],
			"formatter": {
				"enabled": false
			},
			"linter": {
				"enabled": false
			}
		},
		{
			"includes": ["**/*.vue"],
			"formatter": {
				"enabled": false
			},
			"linter": {
				"enabled": false
			},
			"html": {
				"formatter": {
					"enabled": false
				}
			}
		},
		{
			"includes": ["**/*.astro"],
			"linter": {
				"enabled": false
			}
		}
	],
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"html": {
		"experimentalFullSupportEnabled": true,
		"formatter": {
			"indentScriptAndStyle": true
		}
	},
	"css": {
		"formatter": {
			"quoteStyle": "single"
		},
		"parser": {
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
