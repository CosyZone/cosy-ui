{
	"name": "@coffic/cosy-workspace",
	"type": "module",
	"scripts": {
		"clean": "pnpm -r clean",
		"build:base": "pnpm --filter @coffic/cosy-ui-base build",
		"build:vue": "pnpm build:base && pnpm --filter @coffic/cosy-ui-vue build",
		"build:astro": "pnpm --filter @coffic/cosy-ui-astro build",
		"build:ui": "pnpm build:base && pnpm build:vue && pnpm build:astro",
		"build": "pnpm build:ui && pnpm -r build",
		"build:docs": "pnpm build:ui && pnpm --filter @coffic/docs build",
		"build:vue:example": "pnpm --filter vue-example build",
		"dev:docs": "pnpm build:ui && pnpm --filter @coffic/docs dev",
		"dev:vue": "pnpm --filter vue-example dev",
		"dev": "pnpm dev:docs",
		"lint": "biome lint --write ./",
		"preview:docs": "pnpm build:docs && pnpm --filter @coffic/cosy-ui-docs preview",
		"preview:cloudflare": "pnpm build && wrangler pages dev ./dist",
		"check": "pnpm --recursive run check",
		"format": "biome format --write ./",
		"deploy:docs:cloudflare": "pnpm --filter @coffic/cosy-ui-docs deploy:cloudflare"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@vitest/ui": "^3.2.4",
		"jiti": "2.4.2",
		"typescript": "^5.9.2",
		"vite": "^7.1.6",
		"vitest": "^3.2.4",
		"wrangler": "^4.40.2"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"dependencies": {
		"boxen": "^8.0.1",
		"chalk": "^5.6.2",
		"cli-table3": "^0.6.5",
		"ora": "^8.2.0"
	}
}
