{
	"name": "@coffic/cosy-workspace",
	"type": "module",
	"scripts": {
		"clean": "pnpm -r clean",
		"build": "pnpm build:prod",
		"build:prod": "pnpm format && pnpm build:ui:prod && pnpm build:docs",
		"build:ui": "pnpm format && pnpm --filter @coffic/cosy-ui build",
		"build:ui:prod": "pnpm --filter @coffic/cosy-ui build:prod",
		"build:docs": "pnpm build:ui:prod && pnpm --filter @coffic/cosy-docs build",
		"build:vue": "pnpm --filter vue-example build",
		"dev:docs": "pnpm build:ui && pnpm --filter @coffic/cosy-docs dev",
		"dev:vue": "pnpm --filter vue-example dev",
		"dev": "pnpm dev:docs",
		"preview:docs": "pnpm --filter @coffic/cosy-docs preview",
		"check": "pnpm --recursive run check",
		"format": "biome lint --write ./ && biome format --write ./",
		"deploy:docs:cloudflare": "pnpm --filter @coffic/cosy-docs deploy:cloudflare"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@biomejs/biome": "^2.3.10"
	},
	"engines": {
		"node": ">=23.0.0",
		"pnpm": ">=10.0.0"
	}
}
